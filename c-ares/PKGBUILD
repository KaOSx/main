
pkgname=c-ares
pkgver=1.33.1
pkgrel=1
pkgdesc='C library that performs DNS requests and name resolves asynchronously'
arch=('x86_64')
url='https://c-ares.org/'
license=('MIT')
depends=('glibc')
makedepends=('cmake')
source=("https://github.com/c-ares/c-ares/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('f9f2ff0c63ddec8ea17989ca5992848d')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCARES_STATIC=OFF \
    -DCARES_SHARED=ON
  cmake --build build
}

package() {
  DESTDIR=${pkgdir} cmake --install build

  install -Dm644 ${pkgname}-${pkgver}/LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md
}
