 
pkgname=recode
pkgver=3.7.12
pkgrel=1
pkgdesc="Charset converter tool and library"
arch=('x86_64')
url='https://github.com/rrthomas/recode'
license=('GPL3' 'LGPL3')
depends=('glibc')
makedepends=('python3')
source=("https://github.com/rrthomas/recode/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('46f4f7d5d6ac5d208b0ccc0c3347a6be')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
