package() {
   install -dm755 ${pkgdir}/usr/include/CL

   for h in $(ls -1 *.h *.hpp); do
      install -m 644 ${h} ${pkgdir}/usr/include/CL/
   done

   install -D -m644 ../LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
