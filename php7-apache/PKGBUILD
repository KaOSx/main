
pkgname=php7-apache
_pkgname=php
pkgver=7.4.32
pkgrel=1
arch=('x86_64')
pkgdesc='Apache SAPI for PHP'
license=('PHP')
url='https://secure.php.net/'
depends=("php7>=${pkgver}" 'apache') 
makedepends=('mariadb' 'postfix' 'libzip' 'file' 'libjpeg-turbo' 'openssl' 'db' 'gmp')
backup=('etc/httpd/conf/extra/php7_module.conf')
source=("http://www.php.net/distributions/${_pkgname}-${pkgver}.tar.xz"
        'apache.conf'
        'php7.diff')
sha256sums=('323332c991e8ef30b1d219cb10f5e30f11b5f319ce4c6642a5470d75ade7864a'
            'ebc0af1ef3a6baccb013d0ccb29923895a7b22ff2d032e3bba802dc6328301ce'
            '52d7d524ce54c73afde7ddc21b354e76578c8a83fbad0496a743c1ea4916bfe1')

prepare() {
	cd ${_pkgname}-${pkgver}

	sed '/APACHE_THREADED_MPM=/d' -i sapi/apache2handler/config.m4 -i configure
	sed -i -e 's|#include "buffio.h"|#include "tidybuffio.h"|' ext/tidy/tidy.c
	
	patch -p0 -i ${srcdir}/php7.diff
}

build() {
	cd ${_pkgname}-${pkgver}

	./configure --config-cache \
		--prefix=/usr \
		--sysconfdir=/etc/php7 \
		--localstatedir=/var \
		--with-layout=GNU \
		--with-config-file-path=/etc/php7 \
		--with-config-file-scan-dir=/etc/php7/conf.d \
		--disable-rpath \
		--mandir=/usr/share/man \
		--program-suffix=7 \
		--without-pear \
		--enable-zend-signals \
		--enable-bcmath=shared \
		--enable-calendar=shared \
		--enable-dba=shared \
		--enable-exif=shared \
		--enable-ftp=shared \
		--enable-gd=shared \
		--enable-intl=shared \
		--enable-mbstring \
		--enable-shmop=shared \
		--enable-soap=shared \
		--enable-sockets=shared \
		--enable-sysvmsg=shared \
		--enable-sysvsem=shared \
		--enable-sysvshm=shared \
		--with-bz2=shared \
		--with-curl=shared \
		--with-db4=/usr \
		--with-enchant=shared \
		--with-external-pcre \
		--with-fpm-systemd \
		--with-freetype \
		--with-gdbm \
		--with-gettext=shared \
		--with-gmp=shared \
		--with-jpeg=shared \
		--with-iconv=shared \
		--with-kerberos=shared \
		--with-ldap=shared \
		--without-ldap-sasl \
		--with-mhash \
		--with-mysql-sock=/run/mysqld/mysqld.sock \
		--with-mysqli=shared,mysqlnd \
		--with-openssl \
		--with-pdo-dblib=shared,/usr \
		--with-pdo-mysql=shared,mysqlnd \
		--with-pdo-odbc=shared,unixODBC,/usr \
		--with-pdo-pgsql=shared \
		--with-pdo-sqlite=shared,/usr \
		--with-pgsql=shared \
		--with-pspell=shared \
		--with-snmp=shared \
		--with-sqlite3=shared,/usr \
		--with-tidy=shared \
		--with-unixODBC=shared,/usr \
		--with-xmlrpc=shared \
		--with-xpm=shared \
		--with-xsl=shared \
		--with-readline \
		--with-zip=shared \
		--with-zlib \
		--with-apxs2 

	make
}

package() {
	install -D -m755 ${srcdir}/${_pkgname}-${pkgver}/libs/libphp7.so ${pkgdir}/usr/lib/httpd/modules/libphp7.so
	install -D -m644 ${srcdir}/apache.conf ${pkgdir}/etc/httpd/conf/extra/php7_module.conf
}
