 
pkgname=expac
pkgver=9
pkgrel=1
pkgdesc="Data extraction tool for alpm databases."
arch=('x86_64')
url="https://github.com/falconindy/expac"
license=('GPL')
depends=('pacman')
makedepends=('perl')
source=("https://pkgbuild.com/~dreisner/sources/${pkgname}/${pkgname}-${pkgver}.tar.gz"
        'LICENSE')
md5sums=('d1250004182effe1769cfd269d5df2fb'
         '930409cc28ddef39384281eeb0307d48')

build() {
  cd ${pkgname}-${pkgver}

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make PREFIX=/usr DESTDIR=${pkgdir} install

  install -Dm644 ../LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
