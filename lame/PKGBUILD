
pkgname=lame
pkgver=3.99.5
pkgrel=5
pkgdesc="A high quality MPEG Audio Layer III (MP3) encoder"
arch=('x86_64')
url="http://lame.sourceforge.net/"
depends=('ncurses')
makedepends=('nasm')
license=('LGPL')
options=('!libtool')
source=("https://downloads.sourceforge.net/lame/${pkgname}-${pkgver}.tar.gz")
md5sums=('84835b313d4a8b68f5349816d33e07ce')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --enable-nasm \
    --enable-shared
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}

