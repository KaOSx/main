
pkgname=microdns
pkgver=0.1.0
pkgrel=1
pkgdesc="Minimal mDNS resolver (and announcer) library."
arch=('x86_64')
url="https://github.com/videolabs/libmicrodns"
license=('LGPL')
source=("https://github.com/videolabs/libmicrodns/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('d64f4d93c9c935b37f0fe3b70b9caa83')

build() {
  cd ${pkgname}-${pkgver}
  
  mkdir -p build
  cd build
  
  ../configure prefix=/usr \
    --enable-static=no
  make
}

package() {
  cd ${pkgname}-${pkgver}/build
  
  make DESTDIR=${pkgdir} install
} 
