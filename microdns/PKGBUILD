
pkgname=microdns
pkgver=0.0.8
pkgrel=1
pkgdesc="Minimal mDNS resolver (and announcer) library."
arch=('x86_64')
url="https://github.com/videolabs/libmicrodns"
license=('LGPL')
source=("https://github.com/videolabs/libmicrodns/releases/download/${pkgver}/microdns-0.0.8.tar.gz")
md5sums=('ad7e8d08d5a5198d40b9a12c8529b3f2')

build() {
  cd ${pkgname}-${pkgver}
  
  mkdir -p build
  cd build
  
  ../configure prefix=/usr \
    --enable-static=no
  make
}

package() {
  cd ${pkgname}-${pkgver}/build
  
  make DESTDIR=${pkgdir} install
} 
