
pkgname=libva-intel-driver
_pkgname=intel-vaapi-driver
pkgver=1.8.2
pkgrel=1
pkgdesc='VA-API implementation for Intel G45 chipsets and Intel HD Graphics for Intel Core processor family'
arch=('x86_64')
url='https://github.com/01org/intel-vaapi-driver'
license=('MIT')
depends=('libva')
source=("https://www.freedesktop.org/software/vaapi/releases/libva-intel-driver/${_pkgname}-${pkgver}.tar.bz2")
md5sums=('fd70a5f739b5d8a8dbf612843ebedf39')

build() {
  cd ${_pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
