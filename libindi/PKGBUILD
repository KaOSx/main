
pkgname=libindi
_pkgname=indi
pkgver=1.4.1
_pkgver=1.4.1
pkgrel=3
pkgdesc="Interface control protocol providing backend driver support and
        automation for a wide range of Astronomical devices (telescopes, focusers, CCDs..etc)."
url="http://indi.sourceforge.net/"
license=('GPL2')
arch=('x86_64')
depends=('gcc-libs' 'zlib' 'libnova' 'cfitsio' 'libusb' 'boost-libs' 'libjpeg-turbo' 'gsl' 'qt5-base')
makedepends=('boost' 'cmake' 'googletest')
source=("https://sourceforge.net/projects/indi/files/${pkgname}_${pkgver}.tar.gz")
options=('!libtool')
md5sums=('9f7556239dda08b7175ec44bd5a61b71')

build() {
    mkdir -p build
    cd build

    cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DUDEVRULES_INSTALL_DIR=/usr/lib/udev/rules.d \
    -DCMAKE_INSTALL_LIBDIR=lib
    make
}

package() {
    cd build 
    
    make DESTDIR=${pkgdir} install
}
