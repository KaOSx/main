 
pkgname=bubblewrap
pkgver=0.5.0
pkgrel=1
pkgdesc='Core execution engine for unprivileged containers that works as a setuid binary on kernels without
user namespaces.'
url='https://github.com/projectatomic/bubblewrap'
arch=('x86_64')
license=('LGPLv2')
depends=('libcap')
makedepends=('libxslt')
source=("https://github.com/projectatomic/bubblewrap/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('16fdaf33799d63104e347e0133f909196fe90d0c50515d010bcb422eb5a00818')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-priv-mode=setuid
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
