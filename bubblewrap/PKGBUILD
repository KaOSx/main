 
pkgname=bubblewrap
pkgver=0.6.0
pkgrel=1
pkgdesc='Core execution engine for unprivileged containers that works as a setuid binary on kernels without
user namespaces.'
url='https://github.com/projectatomic/bubblewrap'
arch=('x86_64')
license=('LGPLv2')
depends=('libcap')
makedepends=('libxslt')
source=("https://github.com/projectatomic/bubblewrap/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('11393cf2058f22e6a6c6e9cca3c85ff4c4239806cb28fee657c62a544df35693')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-priv-mode=setuid
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
