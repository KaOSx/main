 
pkgname=bubblewrap
pkgver=0.6.2
pkgrel=1
pkgdesc='Core execution engine for unprivileged containers that works as a setuid binary on kernels without
user namespaces.'
url='https://github.com/projectatomic/bubblewrap'
arch=('x86_64')
license=('LGPLv2')
depends=('libcap')
makedepends=('libxslt')
source=("https://github.com/projectatomic/bubblewrap/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('8a0ec802d1b3e956c5bb0a40a81c9ce0b055a31bf30a8efa547433603b8af20b')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-priv-mode=setuid
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
