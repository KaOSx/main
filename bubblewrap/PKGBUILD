 
pkgname=bubblewrap
pkgver=0.6.1
pkgrel=1
pkgdesc='Core execution engine for unprivileged containers that works as a setuid binary on kernels without
user namespaces.'
url='https://github.com/projectatomic/bubblewrap'
arch=('x86_64')
license=('LGPLv2')
depends=('libcap')
makedepends=('libxslt')
source=("https://github.com/projectatomic/bubblewrap/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9609c7dc162bc68abc29abfab566934fdca37520a15ed01b675adcf3a4303282')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-priv-mode=setuid
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
