 
pkgname=bubblewrap
pkgver=0.7.0
pkgrel=1
pkgdesc='Core execution engine for unprivileged containers that works as a setuid binary on kernels without
user namespaces.'
url='https://github.com/projectatomic/bubblewrap'
arch=('x86_64')
license=('LGPLv2')
depends=('libcap')
makedepends=('libxslt')
source=("https://github.com/projectatomic/bubblewrap/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('764ab7100bd037ea53d440d362e099d7a425966bc62d1f00ab26b8fbb882a9dc')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-priv-mode=setuid
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
