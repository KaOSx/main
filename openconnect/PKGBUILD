
pkgname=openconnect
pkgver=8.20
pkgrel=1
pkgdesc="Open client for Cisco AnyConnect VPN"
arch=('x86_64')
license=('GPL')
url="https://www.infradead.org/openconnect/"
depends=('libxml2' 'gnutls' 'libproxy' 'vpnc' 'libtasn1' 'libidn2' 'nettle')
makedepends=('intltool' 'python3')
options=('!libtool' '!emptydirs')
source=("https://www.infradead.org/openconnect/download/${pkgname}-${pkgver}.tar.gz")
md5sums=('26218ee45fea950ebcc65be242f3eb42')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --disable-static \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
