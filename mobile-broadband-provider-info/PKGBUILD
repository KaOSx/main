
pkgname=mobile-broadband-provider-info
pkgver=20170310
pkgrel=1
pkgdesc="Mobile broadband settings for various service providers"
arch=('x86_64')
url="https://git.gnome.org/browse/mobile-broadband-provider-info/"
license=('CC-PD')
source=("https://git.gnome.org/browse/mobile-broadband-provider-info/snapshot/${pkgname}-${pkgver}.tar.xz")
md5sums=('b2be8ce8ef384d0617051d8421e587bb')

build() {
  cd ${pkgname}-${pkgver}
  
  ./autogen.sh  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
