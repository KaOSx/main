
pkgname=mobile-broadband-provider-info
pkgver=20220315
pkgrel=1
pkgdesc="Mobile broadband settings for various service providers"
arch=('x86_64')
url="https://gitlab.gnome.org/GNOME/mobile-broadband-provider-info/"
license=('CC-PD')
source=("https://download.gnome.org/sources/mobile-broadband-provider-info/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('1fcdac72d179db1427978366f701be1c3c7535fd5a658bc5cc828247c6f645c6')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
