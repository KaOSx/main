
pkgname=flac
pkgver=1.3.4
pkgrel=1
pkgdesc="Free Lossless Audio Codec"
arch=('x86_64')
url="https://xiph.org/flac/"
license=('custom:Xiph' 'LGPL' 'GPL' 'FDL')
depends=('libogg')
makedepends=('nasm') 
options=('!libtool' '!makeflags')
source=("https://ftp.osuosl.org/pub/xiph/releases/flac/${pkgname}-${pkgver}.tar.xz")
sha256sums=('8ff0607e75a322dd7cd6ec48f4f225471404ae2730d0ea945127b1355155e737')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
        --mandir=/usr/share/man \
        --enable-shared \
        --disable-sse \
        --disable-rpath \
        --with-pic
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -D -m644 COPYING.Xiph ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
