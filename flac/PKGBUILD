
pkgname=flac
pkgver=1.4.1
pkgrel=1
pkgdesc="Free Lossless Audio Codec"
arch=('x86_64')
url="https://xiph.org/flac/"
license=('custom:Xiph' 'LGPL' 'GPL' 'FDL')
depends=('libogg')
makedepends=('nasm') 
options=('!libtool' '!makeflags')
source=("https://ftp.osuosl.org/pub/xiph/releases/flac/${pkgname}-${pkgver}.tar.xz")
sha256sums=('91303c3e5dfde52c3e94e75976c0ab3ee14ced278ab8f60033a3a12db9209ae6')

build() {
  cd ${pkgname}-${pkgver}

  # run prior to building:
  export LC_ALL="en_US.UTF-8"
  ./configure --prefix=/usr \
        --mandir=/usr/share/man \
        --enable-shared \
        --disable-sse \
        --disable-rpath \
        --with-pic
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -D -m644 COPYING.Xiph ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
