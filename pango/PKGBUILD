
pkgname=pango
pkgver=1.40.4
_pkgver=1.40
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="http://www.pango.org/"
license=('LGPL')
depends=('cairo' 'libxft' 'libthai' 'harfbuzz')
makedepends=('gobject-introspection' 'libxt' 'fontconfig')
options=('!libtool')
source=("http://download.gnome.org/sources/pango/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('fcd66a035e0c3ff73701e6958a3d7d01')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -m755 -d ${pkgdir}/etc/pango
}
