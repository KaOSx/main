
# only use even numbers, odd are for development versiosn
pkgname=pango
pkgver=1.43.0
_pkgver=1.43
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="http://www.pango.org/"
license=('LGPL')
depends=('cairo' 'libxft' 'libthai' 'harfbuzz' 'fribidi')
makedepends=('gobject-introspection' 'libxt' 'fontconfig' 'meson' 'ninja' 'help2man')
options=('!libtool')
source=("https://download.gnome.org/sources/pango/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d2c0c253a5328a0eccb00cdd66ce2c8713fabd2c9836000b6e22a8b06ba3ddd2')

prepare() {
  cd ${pkgname}-${pkgver}
  
  #cp pango/pango-features.h pango/pango-features.h.meson
}

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib
  ninja
}

package() {
  cd build
  DESTDIR=${pkgdir} ninja install
  
  install -m755 -d ${pkgdir}/etc/pango
}
