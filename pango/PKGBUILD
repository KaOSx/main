
pkgname=pango
pkgver=1.40.9
_pkgver=1.40
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="http://www.pango.org/"
license=('LGPL')
depends=('cairo' 'libxft' 'libthai' 'harfbuzz')
makedepends=('gobject-introspection' 'libxt' 'fontconfig' 'meson' 'ninja' 'help2man')
options=('!libtool')
source=("https://download.gnome.org/sources/pango/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9faea6535312fe4436b93047cf7a04af544eb52a079179bd3a33821aacce7e16')

prepare() {
  cd ${pkgname}-${pkgver}
  
  #cp pango/pango-features.h pango/pango-features.h.meson
}

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib
  ninja
}

package() {
  cd build
  DESTDIR=${pkgdir} ninja install
  
  install -m755 -d ${pkgdir}/etc/pango
}
