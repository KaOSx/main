
pkgname=lilv
pkgver=0.24.20
pkgrel=1
pkgdesc="A library to make the use of LV2 plugins as simple as possible for applications"
arch=('x86_64')
url="https://drobilla.net/software/lilv.html"
license=('custom:ISC')
depends=('sratom' 'python3')
makedepends=('meson' 'ninja')
source=("https://download.drobilla.net/${pkgname}-${pkgver}.tar.xz")
md5sums=('561ff65228b54e58744a7ae6e2141741')

build() {
  mkdir -p build
  cd build

  meson ../${pkgbase}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=disabled
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
  install -Dm644 ../${pkgbase}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

