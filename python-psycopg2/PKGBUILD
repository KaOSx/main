
pkgname=python3-psycopg2
pkgver=2.9.6
pkgrel=1
pkgdesc="A PostgreSQL database adapter for the Python programming language."
arch=('x86_64')
url="https://www.psycopg.org/"
license=('LGPL3')
depends=('python3' 'postgresql-libs')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/p/psycopg2/psycopg2-${pkgver}.tar.gz")
sha256sums=('f15158418fd826831b28585e2ab48ed8df2d0d98f502a2b4fe619e7d5ca29011')

build() {
  cd psycopg2-${pkgver}
  #sed -i 's/,PSYCOPG_DEBUG$//' setup.cfg
}

package() {
  cd psycopg2-${pkgver}

  python3 setup.py install --root=${pkgdir}
}

