 
pkgname=exfatprogs
pkgver=1.1.3
pkgrel=1
pkgdesc="Userspace Utility for exFAT filesystem on Linux kernel"
arch=('x86_64')
url="https://github.com/exfatprogs/exfatprogs"
license=('GPL2')
depends=('glibc') # 'fuse')
provides=('exfat-utils')
conflicts=('exfat-utils')
replaces=('exfat-utils')
source=("https://github.com/exfatprogs/exfatprogs/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('3dbd74b60eec18d2c68d57be4a872d7baa4f7d848e669e31159452ef5245b809')

build() {
    cd ${pkgname}-${pkgver}

    #autoreconf -vi
    ./configure --prefix=/usr \
        --enable-static=no
    make
}

package() {
    cd ${pkgname}-${pkgver}

    make DESTDIR=${pkgdir} install
}
