 
pkgname=exfatprogs
pkgver=1.1.0
pkgrel=1
pkgdesc="Userspace Utility for exFAT filesystem on Linux kernel"
arch=('x86_64')
url="https://github.com/exfatprogs/exfatprogs"
license=('GPL2')
depends=('glibc') # 'fuse')
provides=('exfat-utils')
conflicts=('exfat-utils')
replaces=('exfat-utils')
source=("https://github.com/exfatprogs/exfatprogs/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('69e2cf6430fc1d083c6ae0aea5eb80bf1b8e9775ed833bcd8331aef0fcacaf85')

build() {
    cd ${pkgname}-${pkgver}

    #autoreconf -vi
    ./configure --prefix=/usr \
        --enable-static=no
    make
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install
}
