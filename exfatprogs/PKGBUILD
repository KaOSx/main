 
pkgname=exfatprogs
pkgver=1.1.1
pkgrel=1
pkgdesc="Userspace Utility for exFAT filesystem on Linux kernel"
arch=('x86_64')
url="https://github.com/exfatprogs/exfatprogs"
license=('GPL2')
depends=('glibc') # 'fuse')
provides=('exfat-utils')
conflicts=('exfat-utils')
replaces=('exfat-utils')
source=("https://github.com/exfatprogs/exfatprogs/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('2a1574110e0d9ba11524744cac39454fb4084277cfa8ae53406a066600b825c8')

build() {
    cd ${pkgname}-${pkgver}

    #autoreconf -vi
    ./configure --prefix=/usr \
        --enable-static=no
    make
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install
}
