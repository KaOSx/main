 
pkgname=exfatprogs
pkgver=1.1.2
pkgrel=1
pkgdesc="Userspace Utility for exFAT filesystem on Linux kernel"
arch=('x86_64')
url="https://github.com/exfatprogs/exfatprogs"
license=('GPL2')
depends=('glibc') # 'fuse')
provides=('exfat-utils')
conflicts=('exfat-utils')
replaces=('exfat-utils')
source=("https://github.com/exfatprogs/exfatprogs/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('b95dd447b657eaab05edb444c181b1ef10601fc98bcf5645a4b91f5b4a77f83c')

build() {
    cd ${pkgname}-${pkgver}

    #autoreconf -vi
    ./configure --prefix=/usr \
        --enable-static=no
    make
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install
}
