
pkgname=python3-sphinx
pkgver=5.0.2
pkgrel=1
pkgdesc="Python documentation generator"
arch=('x86_64')
url="https://www.sphinx-doc.org/en/master/"
license=('GPL')
depends=('python3-babel' 'python3-pygments' 'python3-docutils' 'python3-jinja'
         'python3-requests' 'python3-packaging')
makedepends=('python3-setuptools')
optdepends=('texlive-latexextra: for generation of PDF documentation')
source=("https://files.pythonhosted.org/packages/source/S/Sphinx/Sphinx-${pkgver}.tar.gz")
sha256sums=('b18e978ea7565720f26019c702cd85c84376e948370f1cd43d60265010e1c7b0')

build() {
    # run prior to building:
    export LC_ALL="en_US.UTF-8"
    cd Sphinx-${pkgver}

    make build
}

package() {
    cd Sphinx-${pkgver}

    python3 setup.py install --root=${pkgdir} -O1 --skip-build
}
