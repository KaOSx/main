
pkgname=dbus-python2
_pkgname=dbus-python
pkgver=1.2.4
pkgrel=1
pkgdesc="Python bindings for DBUS"
arch=('x86_64')
license=('GPL' 'LGPL')
url="https://www.freedesktop.org/wiki/Software/DBusBindings"
depends=('dbus-glib' 'python2')
makedepends=('pkg-config' 'python2-docutils')
provides=('dbus-python')
options=('!libtool')
source=("https://dbus.freedesktop.org/releases/dbus-python/${_pkgname}-${pkgver}.tar.gz")
md5sums=('7372a588c83a7232b4e08159bfd48fe5')

build() {
  cd ${_pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
