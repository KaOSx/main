
pkgname=python2-gobject3 
pkgbase=pygobject
pkgver=3.28.2
_pkgver=3.28
pkgrel=1
pkgdesc="Python2 bindings for GObject, including all introspection files"
arch=('x86_64')
url="https://live.gnome.org/PyGObject"
license=('LGPL')
depends=('python2' 'python2-cairo' 'gobject-introspection')
source=("https://ftp.gnome.org/pub/gnome/sources/${pkgbase}/${_pkgver}/pygobject-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('ac443afd14fcb9ff5744b65d6e2b380e70510278404fb8684a9b9fb089e6f2ca')

build() {
    cd ${pkgbase}-${pkgver}
    sed -i '/Werror=format/d' configure

    ./configure --prefix=/usr --with-python=/usr/bin/python2
    make
}

package() {
  cd ${pkgbase}-${pkgver}

  make DESTDIR=${pkgdir} install
}

