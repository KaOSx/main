
pkgname=python2-gobject3 
pkgbase=pygobject
pkgver=3.30.4
_pkgver=3.30
pkgrel=1
pkgdesc="Python2 bindings for GObject, including all introspection files"
arch=('x86_64')
url="https://pygobject.readthedocs.io/en/latest/"
license=('LGPL')
depends=('python2-cairo' 'gobject-introspection')
makedepends=('meson' 'ninja')
source=("https://ftp.gnome.org/pub/gnome/sources/${pkgbase}/${_pkgver}/pygobject-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('2dc1a1a444b82955e65b81c2a2511ecf8032404beba4ef1d48144168f2f64c43')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgbase}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -D python=/usr/bin/python2
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

