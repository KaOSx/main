
pkgname=mdds
pkgver=1.5.0
pkgrel=1
pkgdesc="Collection of multi-dimensional data structures and indexing algorithm"
arch=('x86_64')
url="https://gitlab.com/mdds/mdds"
license=('MIT')
checkdepends=('boost')
#source=("https://gitlab.com/mdds/mdds/repository/archive.tar.gz?ref=${pkgver}")
source=("https://kohei.us/files/mdds/src/mdds-${pkgver}.tar.bz2")
sha256sums=('74cda018d5aa39a2f91652608efb066fd225f3597ce54733e6ab1e99e52606f7')

build() {
  cd ${pkgname}-${pkgver}

  #./autogen.sh
  ./configure --prefix=/usr
  # header files only, so no "make"
}

check() {
  cd ${pkgname}-${pkgver}

  make check
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
