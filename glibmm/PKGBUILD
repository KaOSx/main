
pkgname=glibmm
pkgver=2.64.4
_pkgver=2.64
pkgrel=1
arch=('x86_64')
url="https://www.gtkmm.org"
license=('LGPL')
depends=('glib2' 'libsigc++')
options=('!libtool')
makedepends=('glib2' 'libsigc++' 'meson' 'ninja')
source=("https://ftp.gnome.org/pub/GNOME/sources/glibmm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('405040ab257cef0c8f1b14fdf9f3f92d6e6403715b64f1b75e4b6f04dfb56284')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dbuild-documentation=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}


