
pkgname=glibmm
pkgver=2.66.1
_pkgver=2.66
pkgrel=1
arch=('x86_64')
url="https://www.gtkmm.org"
license=('LGPL')
depends=('glib2' 'libsigc++')
options=('!libtool')
makedepends=('meson' 'ninja')
source=("https://ftp.gnome.org/pub/GNOME/sources/glibmm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('69bd6b5327716ca2f511ab580a969fd7bf0cd2c24ce15e1d0e530592d3ff209c')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dbuild-documentation=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}


