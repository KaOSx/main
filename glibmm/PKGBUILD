
pkgname=glibmm
pkgver=2.66.0
_pkgver=2.66
pkgrel=2
arch=('x86_64')
url="https://www.gtkmm.org"
license=('LGPL')
depends=('glib2' 'libsigc++')
options=('!libtool')
makedepends=('glib2' 'libsigc++' 'meson' 'ninja')
source=("https://ftp.gnome.org/pub/GNOME/sources/glibmm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9e1db7d43d2e2d4dfa2771354e21a69a6beec7c446b711619cf8c779e13a581e')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dbuild-documentation=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}


