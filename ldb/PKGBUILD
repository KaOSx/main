
pkgname=ldb
pkgver=1.4.2
pkgrel=1
epoch=1
pkgdesc="Provide a fast database with an LDAP-like API designed to be used within an application."
arch=('x86_64')
url="http://ldb.samba.org/"
license=('GPL3')
depends=('talloc' 'tevent' 'tdb' 'popt' 'python2' 'lmdb')
source=("https://samba.org/ftp/ldb/${pkgname}-${pkgver}.tar.gz")
md5sums=('304477df5661ca93ecbfc4787669ae8b')

build() {
	cd ${pkgname}-${pkgver}

	./configure --prefix=/usr \
        --disable-rpath \
        --disable-rpath-install \
        --bundled-libraries=cmocka \
        --builtin-libraries=replace \
        --with-modulesdir=/usr/lib/ldb/modules \
        --with-privatelibdir=/usr/lib/ldb
	make
}

package() {
	cd ${pkgname}-${pkgver}

	make DESTDIR=${pkgdir}/ install
}

