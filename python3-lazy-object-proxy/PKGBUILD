
pkgname=python3-lazy-object-proxy
pkgver=1.3.1
pkgrel=1
pkgdesc="A fast and thorough lazy object proxy."
arch=('x86_64')
url="https://github.com/ionelmc/python-lazy-object-proxy"
license=('BSD')
depends=('python3')
makedepends=('python3-setuptools')
source=("https://pypi.python.org/packages/55/08/23c0753599bdec1aec273e322f277c4e875150325f565017f6280549f554/lazy-object-proxy-${pkgver}.tar.gz")
md5sums=('e128152b76eb5b9ba759504936139fd0')


build() {
  cd lazy-object-proxy-${pkgver}
  
  python3 setup.py build
}

package() {
  cd lazy-object-proxy-${pkgver}

  python3 setup.py install --optimize=1 --skip-build --prefix=/usr --root=${pkgdir}
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
