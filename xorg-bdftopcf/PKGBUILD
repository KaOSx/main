
pkgname=xorg-bdftopcf
pkgver=1.1
pkgrel=1
pkgdesc="Convert X font from Bitmap Distribution Format to Portable Compiled Format"
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
depends=('libxfont2')
makedepends=('xorg-util-macros' 'xorgproto')
groups=('xorg' 'xorg-apps')
source=("https://xorg.freedesktop.org/archive/individual/app/bdftopcf-${pkgver}.tar.bz2")
sha256sums=('4b4df05fc53f1e98993638d6f7e178d95b31745c4568cee407e167491fd311a2')

build() {
  cd bdftopcf-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd bdftopcf-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
