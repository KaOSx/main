
pkgname=opus
pkgver=1.5.1
pkgrel=1
pkgdesc="Codec designed for interactive speech and audio transmission over the Internet"
arch=('x86_64')
url="https://www.opus-codec.org/"
license=('custom')
depends=('glibc')
options=('!libtool')
source=("https://downloads.xiph.org/releases/opus/${pkgname}-${pkgver}.tar.gz")
sha256sums=('b84610959b8d417b611aa12a22565e0a3732097c6389d19098d844543e340f85')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --enable-custom-modes \
    --enable-intrinsics \
    --enable-rtcd
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/opus
  install -m644 COPYING ${pkgdir}/usr/share/licenses/opus/
}
