 
pkgname=libquotient
pkgver=0.6.0
pkgrel=1
_commit=d3ca82b9d7477a35e7580f2d6ce579dcbf791d07
pkgdesc="Qt5 library to write cross-platform clients for Matrix"
arch=('x86_64')
url="https://matrix.org/docs/projects/sdk/quotient"
license=('LGPL2')
depends=('qt5-multimedia' 'libqtolm')
makedepends=('cmake')
source=("https://github.com/quotient-im/libQuotient/archive/${_commit}.zip")
sha256sums=('8adb70736170a3d6ed725c59517f1b7155689cf86673c090237e7b8b9a6acab1')

build() {
    mkdir -p build
    cd build

    cmake ../libQuotient-${_commit} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_BUILD_TYPE=Release \
        -DBUILD_SHARED_LIBS=ON

    make
}

package() {
    cd build
    
    make DESTDIR=${pkgdir} install
}
