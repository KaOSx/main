 
pkgname=libquotient
pkgver=0.6.9
pkgrel=1
pkgdesc="Qt5 library to write cross-platform clients for Matrix"
arch=('x86_64')
url="https://matrix.org/docs/projects/sdk/quotient"
license=('LGPL2')
depends=('qt5-multimedia' 'libqtolm')
makedepends=('cmake')
source=("https://github.com/quotient-im/libQuotient/archive/${pkgver}.tar.gz")
sha256sums=('ed474e6c13ac961d0c45794d52ddd7227002eff005894b3d3cc8efefafdf9625')

build() {
    cmake -B build -S libQuotient-${pkgver} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_BUILD_TYPE=Release \
        -DBUILD_SHARED_LIBS=ON
    cmake --build build
}

package() {

    DESTDIR=${pkgdir} cmake --install build
}
