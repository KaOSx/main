
pkgname=libmd
pkgver=1.0.3
pkgrel=1
pkgdesc="Library that provides message digest functions found on BSD systems either on their libc or libmd libraries"
arch=('x86_64')
url="https://www.hadrons.org/software/libmd/"
license=('BSD')
depends=('glibc')
source=("https://archive.hadrons.org/software/libmd/${pkgname}-${pkgver}.tar.xz")
sha256sums=('5a02097f95cc250a3f1001865e4dbba5f1d15554120f95693c0541923c52af4a')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}

  make -k check
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}/
} 
