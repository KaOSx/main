
pkgname=exiv2
pkgver=0.26
pkgrel=1
pkgdesc="Exif and Iptc metadata manipulation library and tools."
arch=('x86_64')
url="http://exiv2.org"
license=('GPL')
depends=('gcc-libs' 'zlib' 'expat')
options=('!libtool')
source=("http://exiv2.org/builds/${pkgname}-${pkgver}-trunk.tar.gz")
md5sums=('a171314cbd6535a356c8a7297ea8c5e7')

build() {
  cd ${pkgname}-trunk
  
  #CPPFLAGS="-D_FILE_OFFSET_BITS=64" 
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-trunk
  
  make DESTDIR=${pkgdir} install
}
