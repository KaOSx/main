
pkgname=qhull
pkgver=2015.2
_pkgver=2015-src-7.2.0
pkgrel=2
pkgdesc="A general dimension code for computing convex hulls and related structures"
arch=('x86_64')
url="http://www.qhull.org/"
license=('custom')
depends=('glibc')
makedepends=('cmake')
options=('!libtool')
source=("http://www.qhull.org/download/${pkgname}-${_pkgver}.tgz")
md5sums=('e6270733a826a6a7c32b796e005ec3dc')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_CXX_FLAGS=-fPIC \
    -DCMAKE_C_FLAGS=-fPIC 
  make
}

package() { 
  cd build
  make DESTDIR=${pkgdir} install

  install -Dm644 ../${pkgname}-${pkgver}/COPYING.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

