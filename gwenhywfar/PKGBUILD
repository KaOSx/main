
pkgname=gwenhywfar
pkgver=4.20.0
_pkgver=208
pkgrel=2
pkgdesc="OS abstraction functions for various projects"
arch=('x86_64')
url="https://www.aquamaniac.de"
options=('!libtool')
license=("LGPL")
depends=('openssl' 'gnutls' 'libgcrypt' 'qt5-base')
makedepends=('qt5-tools')
source=("gwenhywfar-${pkgver}.tar.gz::https://www.aquamaniac.de/sites/download/download.php?package=01&release=${_pkgver}&file=02&dummy=gwenhywfar-${pkgver}.tar.gz"
        'gnutls34.patch')
md5sums=('0744255cae68adca6dff81d3a9f3932d'
         '1197ac1f8378b3b3a8ed12169fcb57f9')

build() {
  cd gwenhywfar-${pkgver}
  #patch -p1 -i ${srcdir}/gnutls34.patch
  
  ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --enable-ssl \
        --with-qt5-qmake=/usr/lib/qt5/bin/qmake \
        --with-qt5-moc=/usr/lib/qt5/bin/moc \
        --with-qt5-uic=/usr/lib/qt5/bin/uic \
        --with-guis="qt5"
  make
}

package() {
  cd gwenhywfar-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
