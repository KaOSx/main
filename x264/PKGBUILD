
pkgname=x264
pkgver=20191217
pkgrel=1
pkgdesc="Library and application for encoding video streams into the H.264/MPEG-4 AVC"
arch=('x86_64')
url="https://www.videolan.org/developers/x264.html"
license=('GPL')
depends=('glibc')
makedepends=('yasm' 'libvpx' 'nasm')
source=("https://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245-stable.tar.bz2")
md5sums=('22be6e4dd9b657ea4ad8cd4dba8ad20c')

build() {
    cd ${pkgname}-snapshot-${pkgver}-2245-stable

    ./configure --prefix=/usr --enable-shared --enable-pic

    make
}
package() {
    cd ${pkgname}-snapshot-${pkgver}-2245-stable

    make DESTDIR=${pkgdir} install
}
