
pkgname=gi-docgen
pkgver=2022.1
pkgrel=1
pkgdesc="Documentation tool for GObject-based libraries"
arch=('x86_64')
license=('Apache' 'GPL3')
url="https://gitlab.gnome.org/GNOME/gi-docgen"
depends=('python3-jinja' 'python3-markdown' 'python3-markupsafe' 'python3-pygments'
         'python3-toml')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/g/gi-docgen/${pkgname}-${pkgver}.tar.gz")
sha256sums=('f91d879ff28d7d5265cde84275ee510e32386bfeb7ec6203a647342aead55cec')

build() {
   cd ${pkgname}-${pkgver}

   python3 setup.py build
}

package() {
   cd ${pkgname}-${pkgver}

   python3 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
}


