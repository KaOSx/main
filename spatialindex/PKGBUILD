
pkgname=spatialindex
pkgver=1.9.0
pkgrel=1
pkgdesc="Extensible framework that will support robust spatial indexing methods."
arch=('x86_64')
url="https://libspatialindex.org/"
license=('MIT')
depends=('gcc-libs')
source=("https://github.com/libspatialindex/libspatialindex/archive/${pkgver}.tar.gz"
        'LICENSE')
sha256sums=('7c8809cd7e827efdc8bd80f786cf2a2d4f25adb92f954d46f7f28ad410bd46e2'
            '170961cdd7754bed14e465eff7d4f22c5df11d8d104310a56a7ee3ab201bc279')

build() {
  cd libspatialindex-${pkgver}
  
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

check() {
  cd libspatialindex-${pkgver}
  
  make -k check
}

package() {
  cd libspatialindex-${pkgver}
  make DESTDIR=${pkgdir}/ install
  
  install -D -m644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

