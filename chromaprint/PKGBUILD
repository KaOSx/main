
pkgname=chromaprint
pkgver=1.4.3
pkgrel=1
pkgdesc='Client-side library that implements a custom algorithm for extracting fingerprints from any audio source'
url='http://acoustid.org/chromaprint/'
arch=('x86_64')
license=('LGPL')
depends=('ffmpeg')
makedepends=('cmake')
source=("https://github.com/acoustid/chromaprint/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('20014ca19974de9657d91d331d11f936')

build() {
   cd ${pkgname}-v${pkgver}
        
   cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release \
	-DBUILD_TOOLS=ON \
	.
   make
}

package() {
   cd ${pkgname}-v${pkgver}
	
   make DESTDIR=${pkgdir} install
}
