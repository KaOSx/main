
pkgname=chromaprint
pkgver=1.4.1
pkgrel=1
pkgdesc='Client-side library that implements a custom algorithm for extracting fingerprints from any audio source'
url='http://acoustid.org/chromaprint/'
arch=('x86_64')
license=('LGPL')
depends=('ffmpeg')
makedepends=('cmake')
source=("https://bitbucket.org/acoustid/chromaprint/downloads/${pkgname}-${pkgver}.tar.gz")
md5sums=('7d7f64390f20659f307549324012c81d')

build() {
   cd ${pkgname}-${pkgver}
        
   cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release \
	-DBUILD_TOOLS=ON \
	.
   make
}

package() {
   cd ${pkgname}-${pkgver}
	
   make DESTDIR=${pkgdir} install
}
