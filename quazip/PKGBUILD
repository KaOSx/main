
pkgname=quazip
pkgver=1.3
pkgrel=1
pkgdesc="Simple C++ wrapper over Gilles Vollant's ZIP/UNZIP package that can be used to access ZIP archives"
url="https://stachenov.github.io/quazip/"
license=('LGPL')
arch=('x86_64')
depends=('qt5-base')
makedepends=('cmake')
source=("https://github.com/stachenov/quazip/archive/v${pkgver}.tar.gz")
sha256sums=('c1239559cd6860cab80a0fd81f4204e606f9324f702dab6166b0960676ee1754')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr 
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
