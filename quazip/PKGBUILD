
pkgname=quazip
pkgver=0.8
pkgrel=1
pkgdesc="Simple C++ wrapper over Gilles Vollant's ZIP/UNZIP package that can be used to access ZIP archives"
url="https://stachenov.github.io/quazip/"
license=('LGPL')
arch=('x86_64')
depends=('qt5-base')
makedepends=('cmake')
source=("https://github.com/stachenov/quazip/archive/v${pkgver}.tar.gz")
sha256sums=('e9ddc67dfbe81a1633ecdf6995abb483f578b835946f216d67bffd18b18c9f52')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_CXX_FLAGS="$CFLAGS -fPIC -std=c++11" 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
