
pkgname=quazip
pkgver=0.8.1
pkgrel=1
pkgdesc="Simple C++ wrapper over Gilles Vollant's ZIP/UNZIP package that can be used to access ZIP archives"
url="https://stachenov.github.io/quazip/"
license=('LGPL')
arch=('x86_64')
depends=('qt5-base')
makedepends=('cmake')
source=("https://github.com/stachenov/quazip/archive/v${pkgver}.tar.gz")
sha256sums=('4fda4d4248e08015b5090d0369ef9e68bdc4475aa12494f7c0f6d79e43270d14')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
