
pkgname=quazip
pkgver=0.7.6
pkgrel=1
pkgdesc="Simple C++ wrapper over Gilles Vollant's ZIP/UNZIP package that can be used to access ZIP archives"
url="https://stachenov.github.io/quazip/"
license=('LGPL')
arch=('x86_64')
depends=('qt5-base')
makedepends=('cmake')
source=("https://github.com/stachenov/quazip/archive/${pkgver}.tar.gz")
sha256sums=('4118a830a375a81211956611cc34b1b5b4ddc108c126287b91b40c2493046b70')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_CXX_FLAGS="$CFLAGS -fPIC -std=c++11" 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
