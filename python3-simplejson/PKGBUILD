
pkgname=python3-simplejson
pkgver=3.18.3
pkgrel=1
pkgdesc='Simple, fast, extensible JSON encoder/decoder for Python'
license=('MIT')
arch=('x86_64')
url='https://github.com/simplejson/simplejson'
depends=('python3')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/s/simplejson/simplejson-${pkgver}.tar.gz")
sha256sums=('ebb53837c5ffcb6100646018565d3f1afed6f4b185b14b2c9cbccf874fe40157')

package() {
    cd simplejson-${pkgver}
    python3 setup.py install --root=${pkgdir}

    install -Dm644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
} 
