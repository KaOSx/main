
_pkgbase=pidgin
pkgname=libpurple
pkgver=2.13.0
pkgrel=5
pkgdesc="IM library extracted from Pidgin"
arch=('x86_64')
url="https://pidgin.im/"
license=('GPL')
depends=('libsasl' 'dbus-glib' 'nss' 'libidn' 'farstream')
makedepends=('startup-notification' 'libxss' 'python3' 'avahi'
             'ca-certificates' 'intltool')
options=('!libtool')
source=("https://downloads.sourceforge.net/pidgin/${_pkgbase}-${pkgver}.tar.bz2")
md5sums=('423403494fe1951e47cc75231f743bb0')

build() {
    cd ${_pkgbase}-${pkgver}

    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --disable-schemas-install \
                --disable-meanwhile \
                --disable-gnutls \
                --disable-gtkui \
                --disable-screensaver \
                --disable-sm \
                --disable-nm \
                --disable-gtkspell \
                --enable-cyrus-sasl \
                --disable-doxygen \
                --disable-tcl \
                --with-python=/usr/bin/python3 \
                --with-system-ssl-certs=/etc/ssl/certs
    make
}

package() {
    cd ${_pkgbase}-${pkgver}
    
    for dir in libpurple share/sounds share/ca-certs m4macros po
    do  make -C "${dir}" DESTDIR="${pkgdir}" install
    done
}
