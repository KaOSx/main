
pkgname=p7zip
pkgver=17.04
pkgrel=2
pkgdesc="A command-line port of the 7zip compression utility"
arch=('x86_64')
license=('GPL')
url="https://github.com/jinfeihan57/p7zip"
depends=('gcc-libs' 'bash')
makedepends=('cmake')
options=('!makeflags')
source=("https://github.com/jinfeihan57/p7zip/archive/v${pkgver}.tar.gz")
md5sums=('00acfd6be87848231722d2d53f89e4a5')

build() {
    cd ${pkgname}-${pkgver}

    make 7z 7za 7zr sfx
    #cmake -B build -S ${pkgname}-${pkgver}/CPP/7zip/CMAKE \
    #    -DCMAKE_BUILD_TYPE=Release \
    #    -DCMAKE_INSTALL_PREFIX=/usr
    #cmake --build build
}

package() {
    cd ${pkgname}-${pkgver}
    #DESTDIR=${pkgdir} cmake --install build

	make install \
		DEST_DIR=${pkgdir} \
		DEST_HOME="/usr" \
		DEST_MAN="/usr/share/man"

	install -d ${pkgdir}/usr/share/licenses/p7zip
	ln -s -t ${pkgdir}/usr/share/licenses/p7zip \
		/usr/share/doc/p7zip/DOCS/License.txt \
		/usr/share/doc/p7zip/DOCS/unRarLicense.txt
}
