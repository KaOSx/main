
pkgname=php-apache
_pkgname=php
pkgver=8.2.15
pkgrel=1
arch=('x86_64')
pkgdesc='Apache SAPI for PHP'
license=('PHP')
url='https://secure.php.net/'
depends=("php>=${pkgver}" 'apache') 
makedepends=('mariadb' 'postfix' 'libzip' 'file' 'libjpeg-turbo' 'openssl' 'gmp')
backup=('etc/httpd/conf/extra/php_module.conf')
source=("http://www.php.net/distributions/${_pkgname}-${pkgver}.tar.xz"
        'apache.conf')
sha256sums=('eca5deac02d77d806838275f8a3024b38b35ac0a5d9853dcc71c6cbe3f1f8765'
            '4a2add00d93fa991ccdf6356090264c1059c79935642afff6e8d4a2107fa037e')

prepare() {
	cd ${_pkgname}-${pkgver}

	sed '/APACHE_THREADED_MPM=/d' -i sapi/apache2handler/config.m4 -i configure
}

build() {
	cd ${_pkgname}-${pkgver}

	./configure --config-cache \
		--prefix=/usr \
		--sysconfdir=/etc/php \
		--localstatedir=/var \
		--with-layout=GNU \
		--with-config-file-path=/etc/php \
		--with-config-file-scan-dir=/etc/php/conf.d \
		--disable-rpath \
		--mandir=/usr/share/man \
		--without-pear \
		--enable-zend-signals \
		--enable-bcmath=shared \
		--enable-calendar=shared \
		--enable-dba=shared \
		--enable-exif=shared \
		--enable-ftp=shared \
		--enable-gd=shared \
		--enable-intl=shared \
		--enable-mbstring \
		--enable-shmop=shared \
		--enable-soap=shared \
		--enable-sockets=shared \
		--enable-sysvmsg=shared \
		--enable-sysvsem=shared \
		--enable-sysvshm=shared \
		--with-bz2=shared \
		--with-curl=shared \
		--with-enchant=shared \
		--with-external-pcre \
		--with-fpm-systemd \
		--with-freetype \
		--with-gdbm \
		--with-gettext=shared \
		--with-gmp=shared \
		--with-jpeg=shared \
		--with-iconv=shared \
		--with-kerberos=shared \
		--with-ldap=shared \
		--without-ldap-sasl \
		--with-mhash \
		--with-mysql-sock=/run/mysqld/mysqld.sock \
		--with-mysqli=shared,mysqlnd \
		--with-openssl \
		--with-pdo-dblib=shared,/usr \
		--with-pdo-mysql=shared,mysqlnd \
		--with-pdo-odbc=shared,unixODBC,/usr \
		--with-pdo-pgsql=shared \
		--with-pdo-sqlite=shared,/usr \
		--with-pgsql=shared \
		--with-pspell=shared \
		--with-snmp=shared \
		--with-sqlite3=shared,/usr \
		--with-tidy=shared \
		--with-unixODBC=shared,/usr \
		--with-xpm=shared \
		--with-xsl=shared \
		--with-readline \
		--with-zip=shared \
		--with-zlib \
		--with-apxs2 

	make
}

package() {
	install -D -m755 ${srcdir}/${_pkgname}-${pkgver}/libs/libphp.so ${pkgdir}/usr/lib/httpd/modules/libphp.so
	install -D -m644 ${srcdir}/apache.conf ${pkgdir}/etc/httpd/conf/extra/php_module.conf
}
