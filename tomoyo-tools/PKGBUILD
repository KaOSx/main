
pkgname=tomoyo-tools
_basever=2.5.0
_timestamp=20170102
_file=53357
pkgver=${_basever}.${_timestamp}
pkgrel=13
pkgdesc='TOMOYO Linux 2.5.x userspace tools for Linux kernel 3.2 and above'
arch=('x86_64')
url='http://tomoyo.sourceforge.jp'
license=('GPL')
depends=('ncurses' 'linux>=5.1.12')
makedepends=('help2man')
install=tomoyo-tools.install
source=("https://sourceforge.jp/frs/redir.php?f=/tomoyo/${_file}/${pkgname}-${_basever}-${_timestamp}.tar.gz")
md5sums=('888804d58742452fe213a68f7eadd0ad')

build() {
    cd ${pkgname}
    
    make -j1
}

package() {
    cd ${pkgname}
    
    make INSTALLDIR=${pkgdir} install
}
