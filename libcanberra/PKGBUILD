
pkgname=libcanberra
pkgver=0.30
pkgrel=4
pkgdesc="A small and lightweight implementation of the XDG Sound Theme Specification"
arch=('x86_64')
url="http://0pointer.de/lennart/projects/libcanberra"
license=('LGPL')
depends=('libvorbis' 'libtool' 'alsa-lib' 'tdb' 'sound-theme-freedesktop' 
         'pulseaudio' 'gstreamer')
options=('!emptydirs')
source=("http://0pointer.de/lennart/projects/libcanberra/${pkgname}-${pkgver}.tar.xz")
md5sums=('34cb7e4430afaf6f447c4ebdb9b42072')

build() {
  cd ${pkgname}-${pkgver}
  
    ./configure --sysconfdir=/etc \
        --prefix=/usr \
        --localstatedir=/var \
        --disable-static \
        --with-builtin=dso \
        --enable-null \
        --disable-oss \
        --enable-alsa \
        --enable-gstreamer \
        --enable-pulse \
        --disable-gtk \
        --with-systemdsystemunitdir=/usr/lib/systemd/system
  make -j1
}

package() {
  cd ${pkgbase}-${pkgver}
  make -j1 DESTDIR=${pkgdir} install
  
  rm -f ${pkgdir}/usr/lib/libcanberra-gtk.la
  rm -f ${pkgdir}/usr/lib/gtk-2.0/modules/*.la
}
