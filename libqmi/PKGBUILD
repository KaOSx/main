
pkgname=libqmi
pkgver=1.22.4
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="https://cgit.freedesktop.org/libqmi"
license=('GPL2')
depends=('glib2' 'bash' 'libgudev')
makedepends=('python3' 'help2man')
options=('!libtool')
source=("https://www.freedesktop.org/software/libqmi/${pkgname}-${pkgver}.tar.xz")
md5sums=('da5dd26dc7665422707b4fce89a455aa')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --libexecdir=/usr/lib
  make
}

check() {
  cd ${pkgname}-${pkgver}
  # one test fails since glib2 2.52.2
  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
