
pkgname=aspell-hi
pkgver=0.02.0
_pkgver=0.02-0
pkgrel=1
pkgdesc="Hindi dictionary for aspell"
arch=('x86_64')
url="http://aspell.net"
license=('GPL')
depends=('aspell')
source=("https://ftp.gnu.org/gnu/aspell/dict/hi/aspell6-hi-${_pkgver}.tar.bz2")
md5sums=('4fd4aedbda587bbc4eecb9d3ea57591d')

build() {
  cd aspell6-hi-${_pkgver}
  
  ./configure
  make
}

package() {
  cd aspell6-hi-${_pkgver}

  make DESTDIR=${pkgdir} install
}
