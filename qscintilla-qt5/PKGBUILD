
pkgname=qscintilla-qt5
pkgver=2.10
pkgrel=1
license=('GPL')
arch=('x86_64')
url="http://www.riverbankcomputing.co.uk/software/qscintilla/intro"
pkgdesc="A port to Qt of Neil Hodgson's Scintilla C++ editor class"
depends=('qt5-base')
makedepends=('chrpath' 'qt5-tools')
source=("https://downloads.sourceforge.net/pyqt/QScintilla_gpl-${pkgver}.tar.gz"
        'qt5_libname.patch')
md5sums=('a61eb0d598b6787de18450574c2ad3b4'
         'c6945e86d8eaf3b1985974f23dfbf057')

prepare() {
    cd QScintilla_gpl-${pkgver}

    #patch -p1 -i ${srcdir}/qt5_libname.patch
}

build() {
    cd QScintilla_gpl-${pkgver}

    cd Qt4Qt5
    /usr/lib/qt5/bin/qmake qscintilla.pro
    make
}

package() {
    cd QScintilla_gpl-${pkgver}/Qt4Qt5
    
    make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install
}

