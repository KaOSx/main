
pkgname=rhino
pkgver=1.7.13
_pkgver=1_7_13
pkgrel=2
pkgdesc="Open-source implementation of JavaScript written entirely in Java"
arch=('x86_64')
url="https://github.com/mozilla/rhino"
license=('MPL' 'GPL2')
source=("https://github.com/mozilla/rhino/releases/download/Rhino${pkgver}_Release/rhino-${pkgver}.zip")
md5sums=('c707de5dca42ea37ecc4496d1ba796d8')

package() {
  cd rhino${pkgver}
  install -m755 -d ${pkgdir}/usr/share/java
  install -m644 lib/rhino-${pkgver}.jar ${pkgdir}/usr/share/java/js.jar 
}
