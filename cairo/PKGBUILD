
pkgname=cairo
pkgver=1.14.12
pkgrel=2
pkgdesc="Cairo vector graphics library"
arch=('x86_64')
license=('LGPL' 'MPL')
url="https://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman' 'glib2' 'sh' 'mesa'
         'libgl' 'lzo2')
makedepends=('librsvg' 'poppler-glib' 'libspectre')
options=('!libtool')
source=("https://cairographics.org/releases/${pkgname}-${pkgver}.tar.xz")
sha1sums=('490025a0ba0622a853010f49fb6343f29fb70b9b')

build() {
  cd ${pkgname}-${pkgver}

#  autoreconf -vfi
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static \
	--enable-tee \
	--enable-gl \
	--enable-egl \
	--enable-svg \
	--enable-ps \
	--enable-pdf \
	--disable-xlib-xcb 

  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
