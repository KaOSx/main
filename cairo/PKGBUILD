
pkgname=cairo
pkgver=1.15.10
pkgrel=1
pkgdesc="Cairo vector graphics library"
arch=('x86_64')
license=('LGPL' 'MPL')
url="https://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman' 'glib2' 'sh' 'mesa'
         'libgl' 'lzo2')
makedepends=('librsvg' 'poppler-glib' 'libspectre')
options=('!libtool')
source=("https://cairographics.org/snapshots/${pkgname}-${pkgver}.tar.xz")
sha1sums=('de180498ac563249b93ee5e17ba9aa26f90644b3')

build() {
  cd ${pkgname}-${pkgver}

#  autoreconf -vfi
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static \
	--enable-tee \
	--enable-gl \
	--enable-egl \
	--enable-svg \
	--enable-ps \
	--enable-pdf \
	--disable-xlib-xcb 

  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
