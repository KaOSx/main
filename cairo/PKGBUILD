
pkgname=cairo
pkgver=1.16.0
pkgrel=1
pkgdesc="Cairo vector graphics library"
arch=('x86_64')
license=('LGPL' 'MPL')
url="https://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman' 'glib2' 'sh' 'mesa'
         'libgl' 'lzo2')
makedepends=('librsvg' 'poppler-glib' 'libspectre')
options=('!libtool')
source=("https://www.cairographics.org/releases/${pkgname}-${pkgver}.tar.xz")
sha1sums=('00e81842ae5e81bb0343108884eb5205be0eac14')

build() {
  cd ${pkgname}-${pkgver}

#  autoreconf -vfi
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static \
	--enable-tee \
	--enable-gl \
	--enable-egl \
	--enable-svg \
	--enable-ps \
	--enable-pdf \
	--disable-xlib-xcb 

  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
