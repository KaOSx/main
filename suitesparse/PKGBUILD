
pkgname=suitesparse
pkgver=6.0.0
pkgrel=1
epoch=1
pkgdesc="A collection of sparse matrix libraries"
url="https://people.engr.tamu.edu/davis/suitesparse.html"
arch=('x86_64')
depends=('lapack')
makedepends=('cmake')
license=('GPL')
source=("https://github.com/DrTimothyAldenDavis/SuiteSparse/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz"
        'Makefile.diff')
md5sums=('87aa9d4805eca85886d74e7611a21a64'
         '7bc5e2a12c2aa88d71786cc3f76b170e')

build() {
  cd SuiteSparse-${pkgver}
  #patch -p1 -i ${srcdir}/Makefile.diff

  CMAKE_OPTIONS="-DALLOW_64BIT_BLAS=ON \
    -DBLA_VENDOR=ANY \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr"
  make
}


package() {
  cd SuiteSparse-${pkgver}
  install -dm755 ${pkgdir}/usr

  cd metis-5.1.0
  make install DESTDIR=${pkgdir}
  mv ${pkgdir}/buildsys/main/suitesparse/src/SuiteSparse-${pkgver}/* ${pkgdir}/usr
  rm -r ${pkgdir}/buildsys

  cd ..

  make BLAS=-lblas LAPACK=-llapack install INSTALL=${pkgdir}/usr INSTALL_LIB=${pkgdir}/usr/lib 
}
