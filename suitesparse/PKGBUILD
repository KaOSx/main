
pkgname=suitesparse
pkgver=5.7.1
pkgrel=1
epoch=1
pkgdesc="A collection of sparse matrix libraries"
url="http://faculty.cse.tamu.edu/davis/suitesparse.html"
arch=('x86_64')
depends=('lapack')
makedepends=('cmake')
license=('GPL')
source=("https://github.com/DrTimothyAldenDavis/SuiteSparse/archive/v${pkgver}.tar.gz")
md5sums=('0ddc62ed2636720be74be2e27e1fef6e')

build() {
   cd SuiteSparse-${pkgver}
   
   make BLAS=-lblas 
}


package() {
   cd SuiteSparse-${pkgver}
   install -dm755 ${pkgdir}/usr
   
   cd metis-5.1.0
   make install DESTDIR=${pkgdir}
   mv ${pkgdir}/buildsys/main/suitesparse/src/SuiteSparse-${pkgver}/* ${pkgdir}/usr
   rm -r ${pkgdir}/buildsys
   
   cd ..
   
   make BLAS=-lblas install INSTALL=${pkgdir}/usr INSTALL_LIB=${pkgdir}/usr/lib 
}
