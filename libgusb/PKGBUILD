
pkgname=libgusb
pkgver=0.4.1
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb' 'json-glib')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('39ee01dab6a75f28de7c317e25d24159f511e1bf8e7465e275a0fbc483a48b63')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}

