
pkgname=libgusb
pkgver=0.3.6
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('13277948a2ee06861234938089aea21bce6ad862f14c81a2efa85340ed701efd')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

