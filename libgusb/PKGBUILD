
pkgname=libgusb
pkgver=0.4.3
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb' 'json-glib')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja')
source=("https://github.com/hughsie/libgusb/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('2f75147cd01d1c08cbf7adc17449cbdb3e394bf752ab3cbf45740da7c3759247')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}

