
pkgname=libgusb
pkgver=0.4.2
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb' 'json-glib')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('02d3a992a0cd16c46a346439334417617cd7cd5b2ccc5fe0fe998e9ffb8d5d8a')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}

