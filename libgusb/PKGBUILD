
pkgname=libgusb
pkgver=0.4.6
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb' 'json-glib')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja' 'python3-setuptools')
source=("https://github.com/hughsie/libgusb/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('1b0422bdcd72183272ac42eec9398c5a0bc48a02f618fa3242c468cbbd003049')

build() {
  mkdir -p build
  cd build

  meson setup ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}

