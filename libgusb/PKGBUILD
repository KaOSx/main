
pkgname=libgusb
pkgver=0.3.1
pkgrel=1
pkgdesc="GLib wrapper around libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
depends=('systemd' 'libusb')
makedepends=('gobject-introspection' 'vala' 'meson' 'ninja')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('4b677a372e97748970b1bb3dac076da2d051e4376c5960e77b7159701c851fed')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

