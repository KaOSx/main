
pkgname=dbus-python3
_pkgname=dbus-python
pkgver=1.2.4
pkgrel=2
pkgdesc="Python3 bindings for DBUS"
arch=('x86_64')
license=('GPL' 'LGPL')
url="http://www.freedesktop.org/wiki/Software/DBusBindings"
depends=('dbus-glib' 'python3' 'dbus-python2')
makedepends=('pkg-config' 'python2-docutils')
options=('!libtool')
source=("https://dbus.freedesktop.org/releases/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('7372a588c83a7232b4e08159bfd48fe5')

build() {
  cd ${_pkgname}-${pkgver}
  #autoreconf -fi
  
  PYTHON=python3 ./configure --prefix=/usr
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  rm -rf ${pkgdir}/usr/share
  rm -rf ${pkgdir}/usr/include
  rm -rf ${pkgdir}/usr/lib/pkgconfig
}
