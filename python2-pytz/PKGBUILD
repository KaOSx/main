
pkgname=python2-pytz
pkgver=2017.3
pkgrel=1
arch=('x86_64')
pkgdesc="Cross platform time zone library for Python"
url="http://pypi.python.org/pypi/pytz"
license=("MIT")
depends=('python2')
source=("https://pypi.python.org/packages/60/88/d3152c234da4b2a1f7a989f89609ea488225eaea015bc16fbde2b3fdfefa/pytz-${pkgver}.zip")
md5sums=('7006b56c0d68a162d9fe57d4249c3171')

check() {
    cd pytz-${pkgver}/pytz/tests

    python2 test_tzinfo.py
}

package() {
    cd pytz-${pkgver}

    python2 setup.py install --root=${pkgdir}/

    install -D LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
