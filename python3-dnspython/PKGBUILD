
pkgname=python3-dnspython
_pkgname=dnspython
pkgver=2.2.0
pkgrel=1
pkgdesc="Powerful DNS toolkit for python."
arch=('x86_64')
url='https://www.dnspython.org/'
license=('BSD')
depends=('python3')
makedepends=('python3-pip')
source=("https://files.pythonhosted.org/packages/source/d/dnspython/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('e79351e032d0b606b98d38a4b0e6e2275b31a5b85c873e587cc11b73aca026d6')

build() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir} --optimize=1 --skip-build
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
