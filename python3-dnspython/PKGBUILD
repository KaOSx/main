
# rename .gitignore prior to building, poetry bug
pkgname=python3-dnspython
_pkgname=dnspython
pkgver=2.4.1
pkgrel=1
pkgdesc="Powerful DNS toolkit for python."
arch=('x86_64')
url='https://www.dnspython.org/'
license=('BSD')
depends=('python3')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel')
source=("https://files.pythonhosted.org/packages/source/d/dnspython/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('c33971c79af5be968bb897e95c2448e11a645ee84d93b265ce0b7aabe5dfdca8')

build() {
  cd ${_pkgname}-${pkgver}

  python3 -m build -nw
}

package() {
  cd ${_pkgname}-${pkgver}

  python3 -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
