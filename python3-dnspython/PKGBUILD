
pkgname=python3-dnspython
_pkgname=dnspython
pkgver=2.2.1
pkgrel=1
pkgdesc="Powerful DNS toolkit for python."
arch=('x86_64')
url='https://www.dnspython.org/'
license=('BSD')
depends=('python3')
makedepends=('python3-pip')
source=("https://files.pythonhosted.org/packages/source/d/dnspython/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('0f7569a4a6ff151958b64304071d370daa3243d15941a7beedf0c9fe5105603e')

build() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir} --optimize=1 --skip-build
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
