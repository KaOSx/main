
pkgname=libbytesize
pkgver=1.4
pkgrel=3
pkgdesc="Tiny library that would facilitate the common operations with sizes in bytes."
arch=('x86_64')
url="https://github.com/storaged-project/libbytesize"
license=('LGPL')
depends=('gmp' 'mpfr' 'pcre' 'python3-six')
makedepends=('gettext')
source=("https://github.com/storaged-project/libbytesize/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('aa9bd5a04546873714da2adbaaa9f283')

build() {
    cd ${pkgname}-${pkgver}
    
    ./configure --prefix=/usr \
        --with-python3=yes \
        --with-python2=no
        
    make
}

package() {
    cd ${pkgname}-${pkgver}

    make DESTDIR=${pkgdir}/ install
}
 
