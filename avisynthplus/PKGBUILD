
pkgname=avisynthplus
_pkgname=AviSynthPlus
pkgver=3.7.1
pkgrel=1
pkgdesc='AviSynth+ is a fork of the well-known AviSynth frameserver'
arch=('x86_64')
url='https://avs-plus.net/'
license=('GPL')
depends=('gcc-libs')
makedepends=('cmake')
source=("https://github.com/AviSynth/AviSynthPlus/archive/v${pkgver}.tar.gz")
md5sums=('7d6d65e5747ad3427d464d17905b82c3')

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DHEADERS_ONLY=ON 
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
