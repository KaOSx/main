
pkgname=avisynthplus
_pkgname=AviSynthPlus
pkgver=3.7.2
_pkgver=3.7.2
pkgrel=1
pkgdesc='AviSynth+ is a fork of the well-known AviSynth frameserver'
arch=('x86_64')
url='https://avs-plus.net/'
license=('GPL')
depends=('gcc-libs')
makedepends=('cmake')
source=("https://github.com/AviSynth/AviSynthPlus/archive/v${_pkgver}.tar.gz")
md5sums=('cac7ab4e64af4caa8c10aa14e796331f')

build() {
  mkdir -p build
  cd build

  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DHEADERS_ONLY=ON 
  make VersionGen
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
