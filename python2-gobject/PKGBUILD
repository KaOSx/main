
pkgname=python2-gobject
_pkgname=pygobject
pkgver=2.28.7
pkgrel=2
pkgdesc="Python bindings for GObject"
arch=('x86_64')
url="http://www.pygtk.org/"
license=('LGPL')
depends=('python2' 'glib2' 'python2-cairo' 'gobject-introspection')
source=("https://ftp.gnome.org/pub/gnome/sources/pygobject/2.28/${_pkgname}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('bb9d25a3442ca7511385a7c01b057492095c263784ef31231ffe589d83a96a5a')

build() {
  cd ${_pkgname}-${pkgver}
  
  export PYTHON=/usr/bin/python2
  ./configure --disable-introspection --prefix=/usr 
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
