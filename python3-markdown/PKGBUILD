
pkgname=python3-markdown
_pkgname=Markdown
pkgver=3.3.4
pkgrel=1
pkgdesc="Python implementation of John Gruberâ€™s Markdown with Extension support."
arch=('x86_64')
url='https://python-markdown.github.io/'
license=('BSD')
depends=('python3')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/M/Markdown/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('31b5b491868dcc87d6c24b7e3d19a0d730d59d3e46f4eea6430a321bed387a49')

build() {
  cd ${_pkgname}-${pkgver}
  
  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  
  python3 setup.py install --root=${pkgdir} --optimize=0
  install -Dm644 LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
