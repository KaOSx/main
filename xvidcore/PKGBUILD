
pkgname=xvidcore
pkgver=1.3.6
pkgrel=1
pkgdesc="XviD is an open source MPEG-4 video codec"
arch=('x86_64')
license=('GPL')
url="https://www.xvid.org/"
depends=('glibc')
makedepends=('nasm')
source=("https://downloads.xvid.org/downloads/${pkgname}-${pkgver}.tar.gz")
md5sums=('d9eb4da373e06167769f42268a2bff20')

build() {
  cd ${pkgname}/build/generic
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}/build/generic
  
  make DESTDIR=${pkgdir} install
}
