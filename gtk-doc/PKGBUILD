
pkgname=gtk-doc
pkgver=1.25
pkgrel=2
pkgdesc="Documentation tool for public library API"
arch=('x86_64')
url="http://www.gtk.org/gtk-doc/"
license=('GPL' 'FDL')
depends=('docbook-xsl' 'perl')
makedepends=('pkgconfig' 'jade' 'itstool')
source=("https://ftp.gnome.org/pub/gnome/sources/gtk-doc/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('1ea46ed400e6501f975acaafea31479cea8f32f911dca4dff036f59e6464fd42')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

