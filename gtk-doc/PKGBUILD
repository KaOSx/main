
pkgname=gtk-doc
pkgver=1.31
pkgrel=1
pkgdesc="Documentation tool for public library API"
arch=('x86_64')
url="http://www.gtk.org/gtk-doc/"
license=('GPL' 'FDL')
depends=('docbook-xsl' 'python3-pygments' 'python3-lxml')
makedepends=('pkgconfig' 'jade' 'itstool')
source=("https://ftp.gnome.org/pub/gnome/sources/gtk-doc/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('a51687956d0377ac70904d03fdc73c9e116589b4a01453fa92162442b3657011')

build() {
  cd ${pkgname}-${pkgver}
  
  export PYTHON=/usr/bin/python3
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

