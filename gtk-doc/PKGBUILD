
pkgname=gtk-doc
pkgver=1.28
pkgrel=1
pkgdesc="Documentation tool for public library API"
arch=('x86_64')
url="http://www.gtk.org/gtk-doc/"
license=('GPL' 'FDL')
depends=('docbook-xsl' 'python3-six' 'python3-lxml')
makedepends=('pkgconfig' 'jade' 'itstool')
source=("https://ftp.gnome.org/pub/gnome/sources/gtk-doc/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('911e29e302252c96128965ee1f4067d5431a88e00ad1023a8bc1d6b922af5715')

build() {
  cd ${pkgname}-${pkgver}
  
  export PYTHON=/usr/bin/python3
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

