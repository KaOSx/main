#!/bin/bash
# tputcolors

post_install() {
  echo -e '\e[0;32m To enable speech-dispatcher autostart'
  echo -e '\e[0;32m edit /etc/speech-dispatcher/speechd.conf'
  echo -e '\e[0;32m and comment out the last line, so it reads as:' 
  echo -e '\e[0;32m # DisableAutoSpawn \e[0m'
}

post_upgrade() {
  post_install
}

