
pkgname=libzip
pkgver=1.3.2
pkgrel=1
pkgdesc="A C library for reading, creating, and modifying zip archives"
url="https://www.nih.at/libzip/index.html"
license=('GPL2')
arch=('x86_64')
depends=('zlib')
options=('!libtool')
source=("https://www.nih.at/libzip/${pkgname}-${pkgver}.tar.xz")
md5sums=('4fc45f0fb4c95cc340a40d50257dfd0f')

build() {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i ${srcdir}/optopt.patch
  
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  # ebook-tools needs this path
  #ln -s /usr/lib/libzip/include/zipconf.h ${pkgdir}/usr/include/zipconf.h
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
