
pkgname=liburcu
pkgver=0.13.1
pkgrel=1
pkgdesc="Userspace RCU (read-copy-update) library"
arch=('x86_64')
url="http://liburcu.org/"
license=('LGPL2.1')
depends=('glibc')
source=("https://lttng.org/files/urcu/userspace-rcu-${pkgver}.tar.bz2")
sha256sums=('3213f33d2b8f710eb920eb1abb279ec04bf8ae6361f44f2513c28c20d3363083')

build() {
  cd userspace-rcu-${pkgver}

  ./configure --prefix=/usr \
    --enable-static=false
  make
}

package() {
  cd userspace-rcu-${pkgver}

  make install DESTDIR=${pkgdir}
}
