
pkgname=liburcu
pkgver=0.13.2
pkgrel=1
pkgdesc="Userspace RCU (read-copy-update) library"
arch=('x86_64')
url="http://liburcu.org/"
license=('LGPL2.1')
depends=('glibc')
source=("https://lttng.org/files/urcu/userspace-rcu-${pkgver}.tar.bz2")
sha256sums=('1213fd9f1b0b74da7de2bb74335b76098db9738fec5d3cdc07c0c524f34fc032')

build() {
  cd userspace-rcu-${pkgver}

  ./configure --prefix=/usr \
    --enable-static=false
  make
}

package() {
  cd userspace-rcu-${pkgver}

  make install DESTDIR=${pkgdir}
}
