
pkgname=liburcu
pkgver=0.13.3
pkgrel=1
pkgdesc="Userspace RCU (read-copy-update) library"
arch=('x86_64')
url="http://liburcu.org/"
license=('LGPL2.1')
depends=('glibc')
source=("https://lttng.org/files/urcu/userspace-rcu-${pkgver}.tar.bz2")
sha256sums=('49f9336a165a749b6cdb77e9bebf1c03254a5449654855e5d425ee49faa784a8')

build() {
  cd userspace-rcu-${pkgver}

  ./configure --prefix=/usr \
    --enable-static=false
  make
}

package() {
  cd userspace-rcu-${pkgver}

  make install DESTDIR=${pkgdir}
}
