
pkgname=libdvbpsi
pkgver=1.3.3
pkgrel=1
pkgdesc="A library designed for decoding and generation of MPEG TS and DVB PSI tables"
arch=('x86_64')
url="https://www.videolan.org/developers/libdvbpsi.html"
license=('LGPL')
depends=('glibc')
options=('!libtool')
source=("https://download.videolan.org/pub/libdvbpsi/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('02b5998bcf289cdfbd8757bedd5987e681309b0a25b3ffe6cebae599f7a00112')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make prefix=${pkgdir}/usr install
}

