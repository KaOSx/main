
pkgname=aspell-da
pkgver=4.0
pkgrel=1
pkgdesc="Danish dictionary for aspell"
arch=('x86_64')
url="https://da.speling.org"
license=('GPLv2')
depends=('aspell')
#source=("https://da.speling.org/filer/new_${pkgname}-${pkgver}.tar.bz2")
source=("https://github.com/mortenivar/aspell-da/archive/refs/tags/${pkgver}.tar.gz")
md5sums=('17aa1b8f7faf6a6bfa969c288cda3285')

build() {
  cd ${pkgname}-${pkgver}

  ./configure
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
  install -Dm644 Copyright ${pkgdir}/usr/share/licenses/${pkgname}/Copyright
}
