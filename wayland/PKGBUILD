
pkgname=wayland
pkgver=1.16.0
pkgrel=1
pkgdesc="Wayland the modern display server."
arch=('x86_64')
url="https://wayland.freedesktop.org"
license=('MIT')
depends=('libffi' 'expat')
#makedepends=('doxygen' 'xmlto') requires graphviz for documentation
options=('!makeflags' '!libtool' 'debug')
source=("https://wayland.freedesktop.org/releases/${pkgname}-${pkgver}.tar.xz")
sha256sums=('4e72c2b56109ccfb6610d776e465f4ca0af2280c9c2f7d5cc23f0ed2548752f5')

build() {
	cd ${pkgname}-${pkgver}

	./configure --prefix=/usr \
        --disable-static \
        --disable-documentation
	make 
}

package() {
     cd ${pkgname}-${pkgver}
     make DESTDIR=${pkgdir} install
     
     install -Dm 644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
