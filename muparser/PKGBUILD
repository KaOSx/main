
pkgname=muparser
pkgver=2.2.6.1
pkgrel=1
pkgdesc="Fast math parser library"
arch=('x86_64')
url="http://beltoforion.de/article.php?a=muparser"
depends=('gcc-libs')
makedepends=('cmake')
license=('custom')
options=('!makeflags')
source=("https://github.com/beltoforion/muparser/archive/v${pkgver}.tar.gz")
md5sums=('410d29b4c58d1cdc2fc9ed1c1c7f67fe')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build
  make DESTDIR=${pkgdir} install

  install -D -m644 ../${pkgname}-${pkgver}/License.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
