
pkgname=libexif
pkgver=0.6.23
_pkgver=0_6_22
pkgrel=1
pkgdesc="A library to parse an EXIF file and read the data from those tags"
arch=('x86_64')
url="https://libexif.github.io/"
license=('LGPL')
depends=('glibc')
options=('!libtool')
source=("https://github.com/libexif/libexif/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('aa78b055afbd87f7580957d6a615f238')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install 
}
