

pkgname=libexif
pkgver=0.6.21
pkgrel=5
pkgdesc="A library to parse an EXIF file and read the data from those tags"
arch=('x86_64')
url="https://libexif.github.io/"
license=('LGPL')
depends=('glibc')
options=('!libtool')
source=("https://downloads.sf.net/sourceforge/libexif/${pkgname}-${pkgver}.tar.bz2")
md5sums=('27339b89850f28c8f1c237f233e05b27')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr 
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
