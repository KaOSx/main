
pkgname=pyalpm
pkgver=0.8.3
pkgrel=1
pkgdesc="Libalpm bindings for Python 3"
arch=('x86_64')
url="https://git.archlinux.org/pyalpm.git/"
license=('GPL')
depends=('python3' 'pacman')
source=("https://git.archlinux.org/pyalpm.git/snapshot/${pkgname}-${pkgver}.tar.xz")
md5sums=('ace0f680075ace8d13591f5283d3750f')

build() {
  cd ${pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir}
}
