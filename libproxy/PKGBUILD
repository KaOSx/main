
pkgname=libproxy
pkgver=0.5.0
pkgrel=1
pkgdesc="A library that provides automatic proxy configuration management"
arch=('x86_64')
url="https://libproxy.github.io/libproxy"
license=('LGPL')
depends=('gcc-libs' 'python3' 'duktape')
makedepends=('meson' 'ninja' 'networkmanager')
#optdepends=('networkmanager: NetworkManager configuration module')
source=("https://github.com/libproxy/libproxy/archive/refs/tags/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
md5sums=('caa553be321312dd45c39e266618d770')

build() {
  mkdir -p build
  cd build

  meson setup ../${pkgname}-${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Ddocs=false \
    -Dtests=false \
    -Dconfig-gnome=false \
    -Dconfig-windows=false \
    -Dconfig-osx=false \
    -Dintrospection=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
