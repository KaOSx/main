
pkgname=libx86emu
pkgver=2.2.1.1
_pkgver=2.2-1.1
_shortver=2.2
pkgrel=1
pkgdesc="x86 emulation library"
arch=('x86_64')
url="https://github.com/wfeldt/libx86emu"
license=('BSD')
depends=('glibc')
makedepends=('rpmextract')
options=('!emptydirs')
source=("https://download.opensuse.org/source/tumbleweed/repo/oss/src/${pkgname}-${_pkgver}.src.rpm")
md5sums=('4fc4936abbea27922d0241b67e44a28e')

build() {
  cd ${srcdir}
  rpmextract.sh ${pkgname}-${_pkgver}.src.rpm
  tar -xJf ${pkgname}-${_shortver}.tar.xz
  
  cd ${srcdir}/${pkgname}-${_shortver}

  make LIBDIR=/usr/lib
}

package() {
  cd ${srcdir}/${pkgname}-${_shortver}
  make LIBDIR=/usr/lib DESTDIR=${pkgdir} install
  
  install -Dm644 LICENSE \
  ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

