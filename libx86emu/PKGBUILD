
pkgname=libx86emu
pkgver=3.2
_pkgver=3
pkgrel=1
pkgdesc="x86 emulation library"
arch=('x86_64')
url="https://github.com/wfeldt/libx86emu"
license=('BSD')
depends=('glibc')
options=('!emptydirs')
#source=("https://download.opensuse.org/source/tumbleweed/repo/oss/src/${pkgname}-${_pkgver}.src.rpm")
source=("https://github.com/wfeldt/libx86emu/archive/refs/tags/3.2.tar.gz")
sha256sums=('4faf853cc3776bc089fe01917acf56043feb42dc7bae91f60b974b2b00b1b0f3')

build() {
  cd ${pkgname}-${pkgver}

  make VERSION=${pkgver} MAJOR_VERSION=${_pkgver} GIT2LOG= LIBDIR=/usr/lib
}

package() {
  cd ${pkgname}-${pkgver}
  make VERSION=${pkgver} MAJOR_VERSION=${_pkgver} GIT2LOG= LIBDIR=/usr/lib DESTDIR=${pkgdir} install

  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

