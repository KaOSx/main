
pkgname=libx86emu
pkgver=1.12.1.2
_pkgver=1.12-1.2
_shortver=1.12
pkgrel=1
pkgdesc="x86 emulation library"
arch=('x86_64')
url="https://github.com/wfeldt/libx86emu"
license=('BSD')
depends=('glibc')
makedepends=('rpmextract')
options=('!emptydirs')
source=("http://download.opensuse.org/source/tumbleweed/repo/oss/suse/src/${pkgname}-${_pkgver}.src.rpm")
md5sums=('12dcd2e04c4567e8758c670847c53efa')

build() {
  cd ${srcdir}
  rpmextract.sh ${pkgname}-${_pkgver}.src.rpm
  tar -xJf ${pkgname}-${_shortver}.tar.xz
  
  cd ${srcdir}/${pkgname}-${_shortver}

  make LIBDIR=/usr/lib
}

package() {
  cd ${srcdir}/${pkgname}-${_shortver}
  make LIBDIR=/usr/lib DESTDIR=${pkgdir} install
  
  install -Dm644 LICENSE \
  ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

