 
pkgname=pyyaml
_pkgname=PyYAML
pkgver=5.4
pkgrel=1
pkgdesc="The next generation YAML parser and emitter for Python."
arch=('x86_64')
url="https://github.com/yaml/pyyaml"
license=('MIT')
depends=('python3' 'libyaml')
makedepends=('python3-setuptools')
source=("https://pypi.io/packages/source/P/PyYAML/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('3c49e39ac034fd64fd576d63bb4db53cda89b362768a67f07749d55f128ac18a')

package() {
  cd ${_pkgname}-${pkgver}
  
  python3 setup.py install --prefix=/usr --root=${pkgdir}
  install -m644 -D LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE
}

