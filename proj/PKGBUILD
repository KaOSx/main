
pkgname=proj
pkgver=7.1.1
pkgrel=1
pkgdesc="Cartographic Projections library"
arch=('x86_64')
url="https://proj4.org/"
license=('MIT')
depends=('sqlite' 'libtiff')
options=('!libtool')
source=("https://download.osgeo.org/proj/${pkgname}-${pkgver}.tar.gz"
        "https://download.osgeo.org/proj/${pkgname}-data-1.2.tar.gz")
md5sums=('b7ce84943dcf2b660b11c2ef9657dad5'
         '1d3556a605bfd14d116eb869c323d744')

build() {
  bsdtar -xzvf ${srcdir}/${pkgname}-data-1.2.tar.gz -C ${srcdir}/proj-${pkgver}/data
  cd ${srcdir}/proj-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -D COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
