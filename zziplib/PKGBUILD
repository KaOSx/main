
pkgname=zziplib
pkgver=0.13.73
pkgrel=1
pkgdesc="Library that provides read access on ZIP-archives and unpacked data."
arch=('x86_64')
url="https://github.com/gdraheim/zziplib"
license=('LGPL' 'MPL')
depends=('zlib')
makedepends=('python3' 'cmake' 'xmlto') 
options=('!libtool')
source=("https://github.com/gdraheim/zziplib/archive/v${pkgver}.tar.gz")
md5sums=('107b89ba9e33acff252bf1cc33c06507')

build() {
    cmake -B build -S ${pkgname}-${pkgver} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DZZIPDOCS=ON \
        -DZZIPTEST=OFF
    cmake --build build
}

package() {

    DESTDIR=${pkgdir} cmake --install build
}
