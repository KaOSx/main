
pkgname=zziplib
pkgver=0.13.66
pkgrel=1
pkgdesc="Library that provides read access on ZIP-archives and unpacked data."
arch=('x86_64')
url="https://github.com/gdraheim/zziplib"
license=('LGPL' 'MPL')
depends=('zlib')
makedepends=('python2')
options=('!libtool')
source=("https://github.com/gdraheim/zziplib/archive/v${pkgver}.tar.gz")
md5sums=('0990b8e409834b62475b4de901fe3f6a')

build() {
    cd ${pkgname}-${pkgver}

    ./configure --prefix=/usr \
        --enable-maintainer-mode
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

    #fix permission
    #chmod -s ${pkgdir}/usr/share/man/man3
    #chmod 644 ${pkgdir}/usr/share/man/man3/*
    #chown -R root:root ${pkgdir}/usr/share/man/man3
}
