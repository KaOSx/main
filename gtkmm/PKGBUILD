
pkgbase=gtkmm
pkgname=('gtkmm' 'gtkmm-docs')
pkgver=2.24.5
_pkgver=2.24
pkgrel=8
url="http://www.gtkmm.org/"
arch=('x86_64')
makedepends=('gtk2' 'pangomm' 'atkmm' 'glibmm-docs')
license=('LGPL')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/GNOME/sources/gtkmm/${_pkgver}/${pkgbase}-${pkgver}.tar.xz")
sha256sums=('0680a53b7bf90b4e4bf444d1d89e6df41c777e0bacc96e9c09fc4dd2f5fe6b72')

build() {
  cd ${pkgbase}-${pkgver}

  ./configure --prefix=/usr
  make
}

package_gtkmm() {
  pkgdesc="C++ bindings for gtk2"
  depends=('gtk2' 'pangomm' 'atkmm')
  cd ${pkgbase}-${pkgver}

  sed -i -e 's|^doc_subdirs|#doc_subdirs|' Makefile

  make DESTDIR=${pkgdir} install
}

package_gtkmm-docs() {
  pkgdesc="Developer documentation for gtkmm v2"

  cd ${pkgbase}-${pkgver}
  make -C docs DESTDIR=${pkgdir} install
}
