
pkgname=gtkmm3
_pkgname=gtkmm
pkgver=3.24.3
_pkgver=3.24
pkgrel=1
url="https://www.gtkmm.org/"
arch=('x86_64')
pkgdesc="C++ bindings for gtk3"
depends=('gtk3' 'pangomm' 'atkmm' 'gdk-pixbuf2')
makedepends=('meson' 'ninja')
license=('LGPL')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/GNOME/sources/gtkmm/${_pkgver}/${_pkgname}-${pkgver}.tar.xz")
sha256sums=('60497c4f7f354c3bd2557485f0254f8b7b4cf4bebc9fee0be26a77744eacd435')

build() {
  mkdir -p build
  cd build
  
  meson ../${_pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dbuild-demos=false \
    -Dbuild-tests=false \
    -Dbuild-documentation=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

