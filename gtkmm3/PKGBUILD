
pkgname=gtkmm3
_pkgname=gtkmm
pkgver=3.24.1
_pkgver=3.24
pkgrel=1
url="https://www.gtkmm.org/"
arch=('x86_64')
pkgdesc="C++ bindings for gtk3"
depends=('gtk3' 'pangomm' 'atkmm' 'gdk-pixbuf2')
#makedepends=('glibmm-docs')
license=('LGPL')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/GNOME/sources/gtkmm/${_pkgver}/${_pkgname}-${pkgver}.tar.xz")
sha256sums=('ddfe42ed2458a20a34de252854bcf4b52d3f0c671c045f56b42aa27c7542d2fd')

build() {
  cd ${_pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --disable-documentation
  make
}

package() {
  cd ${_pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}

