
pkgname=gsl
pkgver=2.4
pkgrel=1
arch=('x86_64')
pkgdesc="The GNU Scientific Library (GSL) is a modern numerical library for C and C++ programmers"
url="https://www.gnu.org/software/gsl/gsl.html"
license=('GPL')
depends=('glibc' 'bash')
options=('!libtool')
source=("https://ftpmirror.gnu.org/gsl/$pkgname-$pkgver.tar.gz")
md5sums=('dba736f15404807834dc1c7b93e83b92')

build() {
    unset LDFLAGS

    cd ${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make 
}

check() {
    cd ${pkgname}-${pkgver}
    
    make -k check || true
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install 
}
