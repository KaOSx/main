
# odd numbers rls skip....
pkgname=pixman
pkgver=0.42.0
pkgrel=1
pkgdesc="Image processing and manipulation library"
arch=('x86_64')
url="https://gitlab.freedesktop.org/pixman/pixman"
license=('custom')
depends=('glibc')
options=('!libtool')
source=("https://www.x.org/releases/individual/lib/${pkgname}-${pkgver}.tar.xz")
sha256sums=('04bcbff1c6de0a2b7efea4816add7d2854c9a7a3542a21ed73fb438859822ab5')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}

check() {
  cd ${pkgname}-${pkgver}

  make check 
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
