
pkgname=lensfun
pkgver=0.3.2
pkgrel=9
pkgdesc="Database of photographic lenses and a library that allows advanced access to the database"
arch=('x86_64')
url="https://lensfun.github.io/"
license=('LGPL3')
depends=('glibc' 'glib2')
makedepends=('python3' 'libpng' 'cmake')
#source=("https://github.com/lensfun/lensfun/archive/v${pkgver}.tar.gz")
source=("https://sourceforge.net/projects/lensfun/files/${pkgver}/${pkgname}-${pkgver}.tar.gz") 
md5sums=('247e59a0812ec451f6cd0d20b3379cb5')

build() {
    cd ${pkgname}-${pkgver}
    
    cmake -DCMAKE_INSTALL_PREFIX=/usr \
          -DCMAKE_BUILD_TYPE=Release \
          -DCMAKE_INSTALL_LIBDIR=lib \
          -DBUILD_AUXFUN=ON
    make
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install  
}
