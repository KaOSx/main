
pkgname=gutenprint
pkgver=5.2.14
pkgrel=1
pkgdesc="Top quality printer drivers for POSIX systems."
arch=('x86_64')
url="http://gimp-print.sourceforge.net/"
license=('GPL')
depends=('glibc' 'cups' 'ghostscript' )
makedepends=('foomatic-db-engine' )
optdepends=('foomatic-db-engine:	to use foomatic spooler')
options=('!libtool' '!emptydirs')
install=gutenprint.install
source=("https://downloads.sourceforge.net/gimp-print/$pkgname-$pkgver.tar.bz2")
sha1sums=('821707451bd6c8602ff9273bd9531bc5550e81c9')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --disable-samples \
    --with-cups \
	--disable-translated-cups-ppds \
	--enable-cups-ppds \
	--enable-cups-ppds-at-top-level \
	--disable-globalized-cups-ppds
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

