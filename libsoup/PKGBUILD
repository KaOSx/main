
pkgname=libsoup
pkgver=2.62.3
_pkgver=2.62
pkgrel=1
pkgdesc="GNOME HTTP Library - base library"
arch=('x86_64')
url="https://www.gnome.org"
license=('LGPL')
depends=('glib2' 'libxml2' 'gnutls' 'sqlite3' 'glib-networking')
makedepends=('intltool' 'gobject-introspection' 'vala')
options=('!libtool' '!emptydirs')
provides=('libsoup-gnome')
replaces=('libsoup-gnome')
conflicts=('libsoup-gnome')
source=("https://ftp.gnome.org/pub/gnome/sources/libsoup/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d312ade547495c2093ff8bda61f9b9727a98cfdae339f3263277dd39c0451172')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static \
      --disable-tls-check \
      --without-gnome 
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
