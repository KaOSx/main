
pkgname=libsoup
pkgver=2.74.1
_pkgver=2.74
pkgrel=2
pkgdesc="GNOME HTTP Library - base library"
arch=('x86_64')
url="https://www.gnome.org"
license=('LGPL')
depends=('glib2' 'gnutls' 'sqlite3' 'glib-networking')
makedepends=('intltool' 'gobject-introspection' 'vala' 'meson' 'ninja')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/gnome/sources/libsoup/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('dc27a3b8fa30bc8ff950b5a75958757d2242e3e51e4e2d9c4e623ef75f793bf8')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib/${pkgname} \
    -Dgnome=false \
    -Dtls_check=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
