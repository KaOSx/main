
pkgname=librsvg
pkgver=2.41.0
_pkgver=2.41
pkgrel=2
pkgdesc="SAX-based renderer for SVG files into a GdkPixbuf"
arch=('x86_64')
url="https://live.gnome.org/LibRsvg"
license=('LGPL')
depends=('gdk-pixbuf2' 'pango' 'libcroco')
makedepends=('intltool' 'gobject-introspection' 'rust')
options=('!libtool')
source=("https://ftp.gnome.org/pub/gnome/sources/librsvg/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('a13573cb4efe3678eaf8709ae3533d79b17d33d29ca78a1e03e81b6235577140')

build() {
  cd ${pkgname}-${pkgver}
  # issue with current cargo https://github.com/rust-lang/cargo/issues/3340#issuecomment-263699137
  export SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt
  
  ./configure --prefix=/usr \
    --libexecdir=/usr/lib/${pkgname} \
    --disable-static 
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
