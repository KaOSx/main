
pkgname=xf86-video-ati
pkgver=18.0.0
pkgrel=1
pkgdesc="X.org ati video driver"
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
depends=('libpciaccess' 'libdrm' 'systemd' 'pixman' 'mesa')
makedepends=('xorg-server' 'xf86driproto' 'resourceproto' 'scrnsaverproto')
groups=('xorg-video-drivers')
options=('!libtool')
source=("https://xorg.freedesktop.org/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('2c0368fb620d1fdfa2b435e672d65444c2fb9df21bbaf979298484b89ef83981')

build() { 
    cd ${pkgname}-${pkgver}
    
    ./configure \
        --prefix=/usr \
        --enable-dependency-tracking \
        --enable-glamor
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install 
 
    msg "Copying license..."
    install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
    install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
