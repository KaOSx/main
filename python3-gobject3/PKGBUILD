
pkgname=python3-gobject3 
pkgbase=pygobject
pkgver=3.30.4
_pkgver=3.30
pkgrel=2
pkgdesc="Python3 bindings for GObject"
arch=('x86_64')
url="https://pygobject.readthedocs.io/en/latest/"
license=('LGPL')
depends=('python3' 'python3-cairo' 'gobject-introspection' 'python2-gobject3')
makedepends=('meson' 'ninja')
source=("https://ftp.gnome.org/pub/gnome/sources/pygobject/${_pkgver}/${pkgbase}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('2dc1a1a444b82955e65b81c2a2511ecf8032404beba4ef1d48144168f2f64c43')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgbase}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -D python=/usr/bin/python3
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
  
  rm -r ${pkgdir}/usr/{include,lib/pkgconfig}
}

