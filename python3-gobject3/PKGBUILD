
pkgname=python3-gobject3 
pkgbase=pygobject
pkgver=3.28.2
_pkgver=3.28
pkgrel=1
pkgdesc="Python3 bindings for GObject"
arch=('x86_64')
url="https://live.gnome.org/PyGObject"
license=('LGPL')
depends=('python3' 'python3-cairo' 'gobject-introspection' 'python2-gobject3')
source=("https://ftp.gnome.org/pub/gnome/sources/pygobject/${_pkgver}/${pkgbase}-${pkgver}.tar.xz")
options=('!libtool')
sha256sums=('ac443afd14fcb9ff5744b65d6e2b380e70510278404fb8684a9b9fb089e6f2ca')

build() {
    cd ${pkgbase}-${pkgver}
    sed -i '/Werror=format/d' configure 

    ./configure --prefix=/usr --with-python=/usr/bin/python3
    make
}

package() {
  cd ${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  rm -r ${pkgdir}/usr/{include,lib/pkgconfig}
}

