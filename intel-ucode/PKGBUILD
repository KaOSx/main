
pkgname=intel-ucode
pkgver=20180425
_pkgver=27776
pkgrel=1
pkgdesc="Microcode update files for Intel CPUs"
arch=('x86_64')
url="https://downloadcenter.intel.com/product/873/Processors"
license=('custom')
source=("https://downloadmirror.intel.com/${_pkgver}/eng/microcode-${pkgver}.tgz"
        'LICENSE'
        'intel-microcode2ucode.c')
md5sums=('99c80f9229554953a868127cda44e7e3'
         'b0f489ae4b3e36dc8827dc53a76047aa'
         '444e1670977bd18e85658016eabc7cfa')

build() {
  cd ${srcdir}
  gcc -Wall ${CFLAGS} -o intel-microcode2ucode intel-microcode2ucode.c
  ./intel-microcode2ucode ./microcode.dat
}

package() {
  cd ${srcdir}
  install -d -m755 ${pkgdir}/lib/firmware/intel-ucode/
  
  cp intel-ucode/* ${pkgdir}/lib/firmware/intel-ucode/
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
