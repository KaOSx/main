
pkgname=slang
pkgver=2.3.1.1
_pkgver=2.3.1a
pkgrel=1
pkgdesc="S-Lang is a powerful interpreted language"
arch=('x86_64')
url="http://www.jedsoft.org/slang/"
license=('GPL')
depends=('glibc' 'pcre' 'zlib')
backup=('etc/slsh.rc')
options=('!makeflags')
source=("http://www.jedsoft.org/releases/slang/${pkgname}-${_pkgver}.tar.bz2")
sha1sums=('a8ea7f1b5736160a94efb67b137a0f5b9916bdf2')

build() {
  cd ${pkgname}-${_pkgver}
  
  ./configure --prefix=/usr --sysconfdir=/etc 
  make
}

check() {
  cd ${pkgname}-${_pkgver}
  
  make check
}


package() {
  cd ${pkgname}-${_pkgver}
  
  make DESTDIR=${pkgdir} install-all
}
