
pkgname=shiboken
_pkgname=Shiboken
pkgver=2.0.0
pkgrel=1
pkgdesc="Plugin (front-end) for Generator Runner. It generates bindings for C++ libraries using CPython source code"
arch=('x86_64')
license=('LGPL')
url="http://code.qt.io/cgit/pyside/shiboken.git/tree/README.md"
depends=('python2' 'qt5-xmlpatterns' 'libxslt' 'python2-sphinx')
makedepends=('cmake')
source=("git://code.qt.io/pyside/shiboken.git")
md5sums=('SKIP')


build(){
    cd ${pkgname}
    mkdir -p build
    cd build
    
    cmake ../ -DCMAKE_INSTALL_PREFIX=/usr  \
              -DCMAKE_BUILD_TYPE=Release   \
              -DBUILD_TESTS=OFF            \
              -DPYTHON_EXECUTABLE=/usr/bin/python2 \
              -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
              -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 
    make
}

package(){
    cd ${pkgname}/build
    
    make DESTDIR=${pkgdir} install
}

