
pkgname=libsearpc
pkgver=3.1
_pkgver=3.1-latest
pkgrel=1
pkgdesc="A simple and easy-to-use C language RPC framework"
arch=('x86_64')
url="https://github.com/haiwen/libsearpc/"
license=('GPLv3')
depends=('glib2' 'jansson' 'libtool')
makedepends=('python2-simplejson')
source=("https://github.com/haiwen/libsearpc/archive/v${_pkgver}.tar.gz")
md5sums=('637cf0e6959d60aa3c682d7d39eafc3d')

build() {
  cd libsearpc-${_pkgver}

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd libsearpc-${_pkgver}

  make DESTDIR=${pkgdir} install
}
