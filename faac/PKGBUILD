
pkgname=faac
pkgver=1.29.7.8
pkgrel=1
pkgdesc="MPEG-4 and MPEG-2 AAC encoder."
arch=('x86_64')
url="http://www.audiocoding.com/"
license=('GPL' 'custom')
depends=('libmp4v2' 'glibc')
makedepends=('automake' 'autoconf' 'libtool')
options=('!libtool')
source=("https://downloads.sourceforge.net/faac/${pkgname}-${pkgver}.tar.gz")
md5sums=('b9cd58915bae6575db322f4b21c174bb')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr 
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/faac/LICENSE
}
