
#http://news.php.net/group.php?group=php.announce
pkgname=php
pkgver=8.2.14
pkgrel=1
arch=('x86_64')
pkgdesc='An HTML-embedded scripting language'
license=('PHP')
url='https://secure.php.net/'
depends=('postgresql-libs' 'libldap' 'sqlite' 'unixodbc' 'net-snmp' 'enchant' 
         'freetds' 'libmcrypt' 'tidyhtml' 'aspell' 'libtool' 'libpng' 'icu' 'curl' 'libxslt' 'bzip2'
         'freetype2' 'harfbuzz' 'systemd' 'pcre2' 'libxml2' 'libxpm' 'libzip' 'gdbm' 'argon2' 'libsodium'
         'oniguruma' 'libxcrypt') #'libvpx'
makedepends=('mariadb' 'postfix' 'file' 'libjpeg-turbo' 'openssl' 'gmp')
backup=('etc/php/php.ini'
        'etc/php/php-fpm.conf')
conflicts=('php-cgi'
         'php-fpm'
         'php-embed'
         'php-pear'
         'php-enchant'
         'php-gd'
         'php-intl'
         'php-ldap'
         'php-mcrypt'
         'php-mssql'
         'php-odbc'
         'php-pgsql'
         'php-pspell'
         'php-snmp'
         'php-sqlite'
         'php-tidy'
         'php-xsl')
replaces=('php-cgi'
         'php-fpm'
         'php-embed'
         'php-pear'
         'php-enchant'
         'php-gd'
         'php-intl'
         'php-ldap'
         'php-mcrypt'
         'php-mssql'
         'php-odbc'
         'php-pgsql'
         'php-pspell'
         'php-snmp'
         'php-sqlite'
         'php-tidy'
         'php-xsl')
source=("https://www.php.net/distributions/${pkgname}-${pkgver}.tar.xz"
        'php.ini.patch'
        'php-fpm.conf.in.patch'
        'php-fpm.service'
        'php-fpm.tmpfiles'
        'enchant2.patch')
sha256sums=('763ecd39fcf51c3815af6ef6e43fa9aa0d0bd8e5a615009e5f4780c92705f583'
            '70cba88753160fe5e7fe8429ea5aa7a9f8327d7a069a8c846e3249bb88f854e1'
            '515065b5931cd13bb29aa2508426e4ea43bb61ece191921242573085d9b4ea49'
            '65af4ebac5a1912292c701cca0313c76bd30450ef00d39f449ff5e8cbcfb82ba'
            '640dba0d960bfeaae9ad38d2826d3f6b5d6c175a4d3e16664eefff29141faad5'
            '2ab626fdc1b33cda72d2950bc9d598362554b5d694f17614d312fc652d5f7ec1')

prepare() {
	cd ${pkgname}-${pkgver}

	patch -p0 -i ${srcdir}/php.ini.patch
	patch -p0 -i ${srcdir}/php-fpm.conf.in.patch
	#patch -p0 -i ${srcdir}/enchant2.patch

	#sed -i -e 's|#include "buffio.h"|#include "tidybuffio.h"|' ext/tidy/tidy.c
}

build() {
    EXTENSION_DIR=/usr/lib/php/modules
	export EXTENSION_DIR
	#PEAR_INSTALLDIR=/usr/share/pear
	#export PEAR_INSTALLDIR

	cd ${pkgname}-${pkgver}

	./configure --config-cache \
		--prefix=/usr \
		--sysconfdir=/etc/php \
		--localstatedir=/var \
		--with-layout=GNU \
		--with-config-file-path=/etc/php \
		--with-config-file-scan-dir=/etc/php/conf.d \
		--disable-rpath \
		--mandir=/usr/share/man \
		--without-pear \
		--enable-zend-signals \
		--enable-bcmath=shared \
		--enable-calendar=shared \
		--enable-dba=shared \
		--enable-exif=shared \
		--enable-ftp=shared \
		--enable-gd=shared \
		--enable-intl=shared \
		--enable-mbstring \
		--enable-shmop=shared \
		--enable-soap=shared \
		--enable-sockets=shared \
		--enable-sysvmsg=shared \
		--enable-sysvsem=shared \
		--enable-sysvshm=shared \
		--with-password-argon2 \
		--with-bz2=shared \
		--with-curl=shared \
		--with-enchant=shared \
		--with-external-pcre \
		--with-fpm-systemd \
		--with-freetype \
		--with-gdbm \
		--with-gettext=shared \
		--with-gmp=shared \
		--with-jpeg=shared \
		--with-iconv=shared \
		--with-kerberos=shared \
		--with-ldap=shared \
		--without-ldap-sasl \
		--with-mhash \
		--with-mysql-sock=/run/mysqld/mysqld.sock \
		--with-mysqli=shared,mysqlnd \
		--with-openssl \
		--with-pdo-dblib=shared,/usr \
		--with-pdo-mysql=shared,mysqlnd \
		--with-pdo-odbc=shared,unixODBC,/usr \
		--with-pdo-pgsql=shared \
		--with-pdo-sqlite=shared,/usr \
		--with-pgsql=shared \
		--with-pspell=shared \
		--with-snmp=shared \
		--with-sodium=shared \
		--with-sqlite3=shared,/usr \
		--with-tidy=shared \
		--with-unixODBC=shared,/usr \
		--with-xpm=shared \
		--with-xsl=shared \
		--with-zip=shared \
		--with-zlib \
		--enable-cli \
		--enable-cgi \
		--enable-fpm \
		--with-readline \
		--enable-pcntl \
		--with-fpm-user=http \
		--with-fpm-group=http \
		--enable-embed=shared 

	make
}
	
package() {
	cd ${pkgname}-${pkgver}
	make -j1 INSTALL_ROOT=${pkgdir} install
	#install -d -m755 ${pkgdir}/usr/share/pear
	# install php.ini
	install -D -m644 php.ini-production ${pkgdir}/etc/php/php.ini
	install -d -m755 ${pkgdir}/etc/php/conf.d/

	install -d -m755 ${pkgdir}/etc/php/fpm.d
	install -D -m644 ${srcdir}/php-fpm.tmpfiles ${pkgdir}/usr/lib/tmpfiles.d/php-fpm.conf
	install -D -m644 ${srcdir}/php-fpm.service ${pkgdir}/usr/lib/systemd/system/php-fpm.service

	rm -f ${pkgdir}/usr/lib/php/modules/*.a
	rm -r ${pkgdir}/var/run
}
