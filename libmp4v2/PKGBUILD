
pkgname=libmp4v2
_pkgname=Release-ThirdParty-MP4v2
pkgver=4.1.5
pkgrel=1
pkgdesc="Library that provides an API to create and modify mp4 files as defined by ISO-IEC:14496-1:2001 MPEG-4 Systems"
arch=('x86_64')
license=('MPL')
url="https://github.com/TechSmith/mp4v2/"
depends=('gcc-libs')
options=('!libtool')
source=("https://github.com/TechSmith/mp4v2/archive/${_pkgname}-${pkgver}.tar.gz"
        "https://github.com/TechSmith/mp4v2/commit/15730113969eb1e3e515676dd55dccbb339a0db4.diff")
md5sums=('9c2a5cddac74a2e7f1bd33ca09d5f6bd'
         '96b295c3a1938d2b1b3eb125d733224b')

build() {
  cd mp4v2-${_pkgname}-${pkgver}
  patch -p1 -i ${srcdir}/15730113969eb1e3e515676dd55dccbb339a0db4.diff

  ./configure --prefix=/usr
  make
}

package() {
  cd mp4v2-${_pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
  make DESTDIR=${pkgdir} install-man
}
