
pkgname=libupnp
pkgver=1.14.5
pkgrel=1
pkgdesc="Portable UPnP development kit."
arch=('x86_64')
url="https://github.com/mrjimenez/pupnp"
license=('BSD')
depends=('glibc')
source=("https://github.com/pupnp/pupnp/releases/download/release-${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('9ebd367550187ef6cd7b69453734e46acce8eb04')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/custom/${pkgname}/COPYING
}
