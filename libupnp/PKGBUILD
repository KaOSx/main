
pkgname=libupnp
pkgver=1.14.6
pkgrel=1
pkgdesc="Portable UPnP development kit."
arch=('x86_64')
url="https://pupnp.github.io/pupnp/"
license=('BSD')
depends=('glibc')
source=("https://github.com/pupnp/pupnp/releases/download/release-${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('1c1354cfba514bb95e86e0b9fb8648ffb6761a4f')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/custom/${pkgname}/COPYING
}
