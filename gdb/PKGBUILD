
pkgname=gdb
pkgver=9.1
pkgrel=2
pkgdesc="The GNU Debugger"
arch=('x86_64')
url="https://www.gnu.org/software/gdb/"
license=('GPL3')
depends=('ncurses' 'expat' 'python3' 'guile2.0' 'source-highlight')
makedepends=('texinfo')
backup=('etc/gdb/gdbinit')
options=('!libtool' '!buildflags')
source=("https://ftp.gnu.org/gnu/gdb/${pkgname}-${pkgver}.tar.xz")
md5sums=('f7e9f6236c425097d9e5f18a6ac40655')

build() {
  cd ${pkgname}-${pkgver}
  
  mkdir -p build
  cd build
  
  ../configure --prefix=/usr \
    --disable-nls \
    --with-system-readline \
    --with-python=/usr/bin/python3 \
    --with-system-gdbinit=/etc/gdb/gdbinit
  make
}

package() {
  cd ${pkgname}-${pkgver}/build
  make DESTDIR=${pkgdir} install

  install -dm755 $pkgdir/etc/gdb
  touch $pkgdir/etc/gdb/gdbinit

  # files in binutils
  rm ${pkgdir}/usr/include/{ansidecl,bfd,bfdlink,dis-asm,symcat,plugin-api}.h
  rm ${pkgdir}/usr/lib/{libbfd,libopcodes}.a
  rm ${pkgdir}/usr/share/info/bfd.info
}
