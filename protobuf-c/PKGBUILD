
pkgname=protobuf-c
pkgver=1.3.1
pkgrel=1
pkgdesc="C implementation of the Google Protocol Buffers data serialization format."
arch=('x86_64')
url="https://github.com/protobuf-c/protobuf-c/"
license=('APACHE')
depends=('protobuf')
options=('!libtool')
source=("https://github.com/protobuf-c/protobuf-c/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz"
        "https://github.com/protobuf-c/protobuf-c/pull/309/commits/034e603d2a5e629c1c3fbac405638f8afb3ead51.diff"
        "https://github.com/protobuf-c/protobuf-c/pull/328/commits/67e5187e96baac2e16d88ac01471c5ce7cdc3c53.diff")
md5sums=('eee5a28fbf2dd0298c108a18cecd3a03'
         'dcac26000de66ccb37f561bafd5f7019'
         '431f816bd11640c7148ed300ee124662')

build() {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i ${srcdir}/034e603d2a5e629c1c3fbac405638f8afb3ead51.diff
  #patch -p1 -i ${srcdir}/67e5187e96baac2e16d88ac01471c5ce7cdc3c53.diff
  
  ./configure --prefix=/usr --disable-static 
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
