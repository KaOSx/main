
pkgname=protobuf-c
pkgver=1.3.0
pkgrel=2
pkgdesc="C implementation of the Google Protocol Buffers data serialization format."
arch=('x86_64')
url="https://github.com/protobuf-c/protobuf-c/"
license=('APACHE')
depends=('protobuf')
options=('!libtool')
source=("https://github.com/protobuf-c/protobuf-c/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('08804f8bdbb3d6d44c2ec9e71e47ef6f')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr --disable-static 
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
