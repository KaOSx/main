
pkgname=enblend-enfuse
pkgver=4.2
pkgrel=15
pkgdesc="Intelligent blend tool for overlapping picture"
arch=("x86_64")
license=('GPL')
url="http://enblend.sourceforge.net"
depends=('openexr' 'lcms2' 'libpng' 'vigra' 'gsl')
makedepends=('boost' 'mesa' 'help2man' 'texlive-latexextra')
replaces=('enblend')
conflicts=('enblend')
provides=('enblend')
source=("https://downloads.sourceforge.net/sourceforge/enblend/${pkgname}-${pkgver}.tar.gz")
md5sums=('e26751f393862cecfd1a113003787001')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
