
pkgname=python3-zipp
_pkgname=zipp
pkgver=3.8.0
pkgrel=1
pkgdesc="Pathlib-compatible Zipfile object wrapper. Official backport of the standard library Path object."
arch=('x86_64')
url='https://github.com/jaraco/zipp'
license=('BSD')
depends=('python3')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/z/zipp/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('56bf8aadb83c24db6c4b577e13de374ccfb67da2078beba1d037c17980bf43ad')

build() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir} --optimize=0
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
