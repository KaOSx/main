
pkgname=python3-zipp
_pkgname=zipp
pkgver=3.9.0
pkgrel=1
pkgdesc="Pathlib-compatible Zipfile object wrapper. Official backport of the standard library Path object."
arch=('x86_64')
url='https://github.com/jaraco/zipp'
license=('BSD')
depends=('python3')
makedepends=('python3-build' 'python3-pip' 'python3-setuptools-scm' 'python3-toml' 'python3-wheel')
source=("https://files.pythonhosted.org/packages/source/z/zipp/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('3a7af91c3db40ec72dd9d154ae18e008c69efe8ca88dde4f9a731bb82fe2f9eb')

build() {
  cd ${_pkgname}-${pkgver}

  python3 -m build -nw
}

package() {
  cd ${_pkgname}-${pkgver}

  PIP_CONFIG_FILE=/dev/null pip3 install --isolated --root=${pkgdir} --ignore-installed --no-deps dist/*.whl
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
