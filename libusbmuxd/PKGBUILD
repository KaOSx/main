
pkgname=libusbmuxd
pkgver=2.0.0
_commit=c724e70fb52ba45291dc73a2e369c0c5bae0ec2e
pkgrel=1
pkgdesc="USB Multiplex Daemon, libraries"
url="http://marcansoft.com/blog/iphonelinux/usbmuxd/"
arch=('x86_64')
license=('LGPL2.1' 'GPL2')
depends=('libusb' 'libplist')
#source=("https://github.com/libimobiledevice/libusbmuxd/archive/${_commit}.zip")
source=("https://github.com/libimobiledevice/libusbmuxd/archive/${pkgver}.tar.gz")
md5sums=('f03a7ac7a747f6f2e0d98d7a81156faf')

build() {
  cd ${pkgname}-${pkgver}

  NOCONFIGURE=1 ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}

