
pkgname=libusbmuxd
pkgver=1.0.10
_commit=c724e70fb52ba45291dc73a2e369c0c5bae0ec2e
pkgrel=3
pkgdesc="USB Multiplex Daemon, libraries"
url="http://marcansoft.com/blog/iphonelinux/usbmuxd/"
arch=('x86_64')
license=('LGPL2.1' 'GPL2')
depends=('libusb' 'libplist')
source=("https://github.com/libimobiledevice/libusbmuxd/archive/${_commit}.zip")
md5sums=('55fa8b8dcc967ad1430af6b4652830c9')

build() {
  cd ${pkgname}-${_commit}

  NOCONFIGURE=1 ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${_commit}

  make DESTDIR=${pkgdir} install
}

