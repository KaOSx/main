
pkgname=phonon-qt5-backend-vlc
_pkgname=phonon-backend-vlc
pkgver=0.10.0
pkgrel=1
pkgdesc='Phonon VLC backend'
arch=('x86_64')
url='http://phonon.kde.org'
license=('LGPL')
depends=('vlc')
makedepends=('pkgconfig' 'extra-cmake-modules' 'mesa' 'phonon-qt5')
groups=('kde-complete' 'kde-uninstall')
provides=('phonon-backend-qt5')
source=("https://download.kde.org/stable/phonon/${_pkgname}/${pkgver}/${_pkgname}-$pkgver.tar.xz")
sha256sums=('61dd9f812811f8d04bc20f4a6a069dbda0c188025d9572594bd6e3656728d845')

build() {
	mkdir -p build
	cd build
	
	cmake ../phonon-vlc-${pkgver} \
		 -DCMAKE_BUILD_TYPE=Release \
		 -DCMAKE_INSTALL_PREFIX=/usr \
		 -DCMAKE_INSTALL_LIBDIR=lib \
		 -DPHONON_BUILD_PHONON4QT5=on
	make
}

package() {
	cd build
	
	make DESTDIR=${pkgdir} install
} 
