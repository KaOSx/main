
pkgname=perl-json
_pkgname=JSON
pkgver=4.07
pkgrel=1
pkgdesc="JSON (JavaScript Object Notation) encoder/decoder."
arch=('x86_64')
url="https://metacpan.org/dist/JSON"
license=('GPL' 'PerlArtistic')
depends=('perl')
source=("https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('4f78b929798992e06106cf2bbc20de2375f7b60c60b3aa3ace02aae1e38513bb')

build() {
  cd ${_pkgname}-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd ${_pkgname}-${pkgver}

  make install DESTDIR=${pkgdir}
}
