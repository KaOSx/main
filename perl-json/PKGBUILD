
pkgname=perl-json
_pkgname=JSON
pkgver=4.09
pkgrel=1
pkgdesc="JSON (JavaScript Object Notation) encoder/decoder."
arch=('x86_64')
url="https://metacpan.org/dist/JSON"
license=('GPL' 'PerlArtistic')
depends=('perl')
source=("https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('6780a51f438c0932eec0534fc9cd2b1ad0d64817eda4add8ede5ec77d6d2c991')

build() {
  cd ${_pkgname}-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd ${_pkgname}-${pkgver}

  make install DESTDIR=${pkgdir}
}
