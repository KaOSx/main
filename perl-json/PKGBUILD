
pkgname=perl-json
_pkgname=JSON
pkgver=4.08
pkgrel=1
pkgdesc="JSON (JavaScript Object Notation) encoder/decoder."
arch=('x86_64')
url="https://metacpan.org/dist/JSON"
license=('GPL' 'PerlArtistic')
depends=('perl')
source=("https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('6b2a38eb6f92934840d142e31ce6683610b66477fad3ffab1111978ef26ca53f')

build() {
  cd ${_pkgname}-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd ${_pkgname}-${pkgver}

  make install DESTDIR=${pkgdir}
}
