
pkgname=perl-json
_pkgname=JSON
pkgver=4.06
pkgrel=1
pkgdesc="JSON (JavaScript Object Notation) encoder/decoder."
arch=('x86_64')
url="https://metacpan.org/dist/JSON"
license=('GPL' 'PerlArtistic')
depends=('perl')
source=("https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('1137e98a42208d802f3ad94a10855606c0455ddad167ba018557d751f6f7672e')

build() {
  cd ${_pkgname}-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd ${_pkgname}-${pkgver}

  make install DESTDIR=${pkgdir}
}
