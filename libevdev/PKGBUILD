
pkgname=libevdev
pkgver=1.12.0
pkgrel=1
pkgdesc="Library for handling evdev kernel devices"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libevdev/"
license=('custom:MIT')
depends=('glibc')
makedepends=('python3' 'doxygen' 'linux-headers') 
source=("https://freedesktop.org/software/libevdev/${pkgname}-${pkgver}.tar.xz")
sha256sums=('2f729e3480695791f9482e8388bd723402b89f0eaf118057bbdea3cecee9b237')

build() {
   cd ${pkgname}-${pkgver}

   ./configure --prefix=/usr --disable-static
   make
}

package() {
   cd ${pkgname}-${pkgver}
   make DESTDIR=$pkgdir install

   install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
