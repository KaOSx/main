
pkgname=pycups
pkgver=1.9.74
pkgrel=1
pkgdesc="Python CUPS Bindings"
url="http://cyberelk.net/tim/software/pycups/"
arch=('x86_64')
license=('GPL')
depends=('libcups' 'python3')
source=("https://files.pythonhosted.org/packages/00/ce/836a0deb8b24bcd5f850f8fb97f99fb4abd7374e078b9e6df5a0838f8eb5/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('86090f259a7c5d0d5caa3407a0e57c9e134027620cbc8f90bf4e37c8b53ed7b9')

build() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py install --root=${pkgdir} --optimize=1
}
