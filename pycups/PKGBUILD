
pkgname=pycups
pkgver=2.0.3
pkgrel=1
pkgdesc="Python CUPS Bindings"
url="http://cyberelk.net/tim/software/pycups/"
arch=('x86_64')
license=('GPL')
depends=('libcups' 'python3')
source=("https://files.pythonhosted.org/packages/source/p/pycups/${pkgname}-${pkgver}.tar.gz")
sha256sums=('6a762a931195792c345c879ad194a0324f786c0c001dd550ae733d97f1d9b57e')

build() {
  cd ${pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir} --optimize=1
}
