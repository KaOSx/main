
pkgname=itstool
pkgver=2.0.5
pkgrel=1
epoch=1
pkgdesc="XML to PO and back again"
arch=('x86_64')
url="http://itstool.org/"
license=('GPL3')
depends=('python2' 'libxml2')
source=("http://files.itstool.org/itstool/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('100506f8df62cca6225ec3e631a8237e9c04650c77495af4919ac6a100d4b308')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make -k check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
