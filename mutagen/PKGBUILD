
pkgname=mutagen
pkgver=1.43.0
pkgrel=1
pkgdesc="An audio metadata tag reader and writer implemented in pure python"
arch=('x86_64')
url="https://mutagen.readthedocs.org/en/latest/"
license=('GPL2')
depends=('python3-setuptools')
source=("https://github.com/quodlibet/mutagen/releases/download/release-${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('3a982d39f1b800520a32afdebe3543f972e83a6ddd0c0198739a161ee705b588')

package() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py install --root=${pkgdir}
}
