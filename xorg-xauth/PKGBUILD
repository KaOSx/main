
pkgname=xorg-xauth
pkgver=1.1.1
pkgrel=1
pkgdesc="X.Org authorization settings program"
arch=('x86_64')
license=('custom')
url="https://xorg.freedesktop.org/"
depends=('libxmu')
makedepends=('xorg-util-macros')
source=("https://xorg.freedesktop.org/releases/individual/app/xauth-${pkgver}.tar.bz2")
sha256sums=('164ea0a29137b284a47b886ef2affcb0a74733bf3aad04f9b106b1a6c82ebd92')

build() {
  cd xauth-${pkgver}

  ./configure --prefix=/usr
  make 
}

package() {
  cd xauth-${pkgver}
  make DESTDIR=${pkgdir} install

  install -d -m755 ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
