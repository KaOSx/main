
pkgname=python3-numpy
pkgver=1.22.1
_pkgver=1.22.1
pkgrel=1
pkgdesc="Scientific tools for Python"
arch=('x86_64')
license=('custom')
url="https://www.numpy.org/"
depends=('lapack' 'python3-nose' 'python3-cython')
source=("https://github.com/numpy/numpy/releases/download/v${pkgver}/numpy-${_pkgver}.zip")
sha256sums=('e348ccf5bc5235fc405ab19d53bec215bb373300e5523c7b476cc0da8a5e9973')

build() {
  cd numpy-${pkgver}
  export Atlas=None
  export LDFLAGS="$LDFLAGS -shared"

  python3 setup.py config_fc --fcompiler=gnu95 build
}

package() {
  cd numpy-${pkgver}
  python3 setup.py config_fc --fcompiler=gnu95 install --prefix=/usr --root=${pkgdir} --optimize=1

  install -m755 -d ${pkgdir}/usr/share/licenses/python3-numpy
  install -m644 LICENSE.txt ${pkgdir}/usr/share/licenses/python3-numpy/

  install -m755 -d ${pkgdir}/usr/include/python3.9
  ln -sf /usr/lib/python3.9/site-packages/numpy/core/include/numpy ${pkgdir}/usr/include/python3.9/numpy
}
