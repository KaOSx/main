
pkgname=python3-numpy
pkgver=1.18.0
_pkgver=1.18.0
pkgrel=1
pkgdesc="Scientific tools for Python"
arch=('x86_64')
license=('custom')
url="https://www.numpy.org/"
depends=('lapack' 'python3-nose' 'python3-cython')
source=("https://github.com/numpy/numpy/releases/download/v${pkgver}/numpy-${_pkgver}.tar.gz")
sha256sums=('e5eaf340489b76eef91352bf48b36e92ace07f6b0f1c87dcd3b5dbada97df03a')

build() {
  cd numpy-${pkgver}
  export Atlas=None
  export LDFLAGS="$LDFLAGS -shared"
  
  python3 setup.py config_fc --fcompiler=gnu95 build
}

package() {
  cd numpy-${pkgver}
  python3 setup.py config_fc --fcompiler=gnu95 install --prefix=/usr --root=${pkgdir} --optimize=1

  install -m755 -d ${pkgdir}/usr/share/licenses/python3-numpy
  install -m644 LICENSE.txt ${pkgdir}/usr/share/licenses/python3-numpy/
  
  install -m755 -d ${pkgdir}/usr/include/python3.6
  ln -sf /usr/lib/python3.6/site-packages/numpy/core/include/numpy ${pkgdir}/usr/include/python3.6/numpy
}
