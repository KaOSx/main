
pkgname=upower
pkgver=0.99.4
pkgrel=2
pkgdesc="Abstraction for enumerating power devices, listening to device events and querying history and statistics"
arch=('x86_64')
url="https://upower.freedesktop.org"
license=('GPL')
depends=('systemd' 'libgudev' 'libusb' 'polkit' 'dbus-glib' 'libimobiledevice')
makedepends=('pkg-config' 'intltool' 'docbook-xsl')
options=('!libtool')
install=upower.install
source=("https://upower.freedesktop.org/releases/${pkgname}-${pkgver}.tar.xz")
md5sums=('78800e1ac7f92b24aabdf433e38f75d2')

build() {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i "${srcdir}"/fix-segfault.patch

  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib/upower \
      --with-systemdsystemunitdir=/usr/lib/systemd/system \
      --disable-static \
      --enable-deprecated
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
