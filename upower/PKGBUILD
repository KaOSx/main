
pkgname=upower
pkgver=0.99.9
pkgrel=1
pkgdesc="Abstraction for enumerating power devices, listening to device events and querying history and statistics"
arch=('x86_64')
url="https://upower.freedesktop.org"
license=('GPL')
depends=('systemd' 'libgudev' 'libusb' 'polkit' 'dbus-glib' 'libimobiledevice')
makedepends=('pkg-config' 'intltool' 'docbook-xsl')
options=('!libtool')
install=upower.install
source=("https://gitlab.freedesktop.org/upower/upower/uploads/2282c7c0e53fb31816b824c9d1f547e8/${pkgname}-${pkgver}.tar.xz"
        '0.99.8.patch')
md5sums=('3b2f729ab05afa5df70d0c387194c9fc'
         'e5e28160e596722f72dbc112e09ea2f0')

build() {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i ${srcdir}/0.99.8.patch

  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib/upower \
      --with-systemdsystemunitdir=/usr/lib/systemd/system \
      --disable-static \
      --enable-deprecated
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
