
pkgname=meson
pkgver=0.48.0
pkgrel=1
pkgdesc="Open source build system meant to be both extremely fast, and as user friendly as possible."
arch=('x86_64')
url="http://mesonbuild.com"
license=('GPL')
depends=('ninja' 'python3')
makedepends=('python3-setuptools' 'googletest' 'sdl2' 'itstool')
source=("https://github.com/mesonbuild/meson/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('e92273538c6b8371e68d736287a5d991')

build() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py build
}

check() {
  cd ${pkgname}-${pkgver}
  
  ./run_tests.py
}

package() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
}
