
pkgname=atkmm
pkgver=2.28.1
_pkgver=2.28
pkgrel=2
pkgdesc="C++ bindings for atk"
url="https://www.gtkmm.org/en/"
arch=('x86_64')
license=('LGPL')
depends=('atk' 'glibmm' 'libsigc++')
makedepends=('meson' 'ninja')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/GNOME/sources/atkmm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('116876604770641a450e39c1f50302884848ce9cc48d43c5dc8e8efc31f31bad')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
