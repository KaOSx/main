
pkgname=atkmm
pkgver=2.28.2
_pkgver=2.28
pkgrel=3
pkgdesc="C++ bindings for atk"
url="https://www.gtkmm.org/en/"
arch=('x86_64')
license=('LGPL')
depends=('atk' 'glibmm' 'libsigc++')
makedepends=('meson' 'ninja')
options=('!libtool' '!emptydirs')
source=("https://ftp.gnome.org/pub/GNOME/sources/atkmm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('a0bb49765ceccc293ab2c6735ba100431807d384ffa14c2ebd30e07993fd2fa4')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
