
pkgbase=atkmm
pkgname=('atkmm' 'atkmm-docs')
pkgver=2.24.2
_pkgver=2.24
pkgrel=6
arch=('x86_64')
makedepends=('atk' 'glibmm' 'glibmm-docs' 'libsigc++')
license=('LGPL')
options=('!libtool' '!emptydirs')
url="http://gtkmm.sourceforge.net/"
source=("http://ftp.gnome.org/pub/GNOME/sources/atkmm/${_pkgver}/${pkgbase}-${pkgver}.tar.xz")
sha256sums=('ff95385759e2af23828d4056356f25376cfabc41e690ac1df055371537e458bd')

build() {
  cd ${pkgbase}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package_atkmm() {
  pkgdesc="C++ bindings for atk"
  depends=('atk' 'glibmm' 'libsigc++')

  cd ${pkgbase}-${pkgver}
  sed -i -e 's|^doc_subdirs|#doc_subdirs|' Makefile
  make DESTDIR=${pkgdir} install
}

package_atkmm-docs() {
  pkgdesc="Developer documentation for atkmm"
  cd ${pkgbase}-${pkgver}
  make -C doc DESTDIR=${pkgdir} install
}
