
pkgname=libmatroska
pkgver=1.4.7
pkgrel=1
pkgdesc="C++ libary to parse Matroska files"
arch=('x86_64')
url="https://www.matroska.org/"
license=('LGPL')
depends=('libebml')
options=('!staticlibs')
source=("https://dl.matroska.org/downloads/libmatroska/${pkgname}-${pkgver}.tar.bz2")
md5sums=('45b583b5642d8e0a0c69f86dbf004eb7')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
}
