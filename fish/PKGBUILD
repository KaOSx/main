
pkgname=fish
pkgver=3.1.1
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='https://fishshell.com/'
license=('GPL2')
depends=('python3' 'inetutils' 'gcc-libs' 'ncurses' 'which' 'pcre2')
makedepends=('doxygen' 'cmake')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.gz")
sha256sums=('07dc78eea3bc4cbd490b2f2a2e19e5771ac9e3b6b1a75893039ad8b34d6122b8')

build() {
  mkdir -p build
  cd build
  
  cmake ../fish-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc
    
  make  
  #cd fish-${pkgver}
  
  #autoconf -i
  #./configure --prefix=/usr --sysconfdir=/etc 
  #make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
