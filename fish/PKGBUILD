
pkgname=fish
pkgver=2.7.0
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='http://fishshell.com/'
license=('GPL2')
depends=('python2' 'inetutils' 'gcc-libs' 'ncurses' 'which')
makedepends=('doxygen')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.gz")
sha256sums=('3a76b7cae92f9f88863c35c832d2427fb66082f98e92a02203dc900b8fa87bcb')

build() {
  cd fish-${pkgver}
  
  #autoconf -i
  ./configure --prefix=/usr --sysconfdir=/etc 
  make
}

package() {
  cd fish-${pkgver}
  make DESTDIR=${pkgdir} install
  # part of docker:
  #rm -r ${pkgdir}/usr/share/fish/completions/docker.fish
}
