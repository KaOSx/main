
pkgname=fish
pkgver=3.2.0
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='https://fishshell.com/'
license=('GPL2')
depends=('python3' 'inetutils' 'gcc-libs' 'ncurses' 'which' 'pcre2')
makedepends=('doxygen' 'cmake')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.xz")
sha256sums=('4f0293ed9f6a6b77e47d41efabe62f3319e86efc8bf83cc58733044fbc6f9211')

build() {
  mkdir -p build
  cd build
  
  cmake ../fish-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc
    
  make  
  #cd fish-${pkgver}
  
  #autoconf -i
  #./configure --prefix=/usr --sysconfdir=/etc 
  #make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
