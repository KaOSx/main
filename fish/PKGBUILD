
pkgname=fish
pkgver=3.0.1
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='https://fishshell.com/'
license=('GPL2')
depends=('python2' 'inetutils' 'gcc-libs' 'ncurses' 'which')
makedepends=('doxygen' 'cmake')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.gz")
sha256sums=('21677a5755ee1738bad2cf8179c104068f8bb81b969660d5a2af4ba6eceba5e4')

build() {
  mkdir -p build
  cd build
  
  cmake ../fish-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc
    
  make  
  #cd fish-${pkgver}
  
  #autoconf -i
  #./configure --prefix=/usr --sysconfdir=/etc 
  #make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
