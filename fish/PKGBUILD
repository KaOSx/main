
pkgname=fish
pkgver=3.3.0
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='https://fishshell.com/'
license=('GPL2')
depends=('python3' 'inetutils' 'gcc-libs' 'ncurses' 'which' 'pcre2')
makedepends=('doxygen' 'cmake')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.xz")
sha256sums=('a4215e4cab2a5b101b0b8843720bda3c7eb98e8a14dca0950b8ef17e94282faa')

build() {
  mkdir -p build
  cd build
  
  cmake ../fish-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc
    
  make  
  #cd fish-${pkgver}
  
  #autoconf -i
  #./configure --prefix=/usr --sysconfdir=/etc 
  #make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
