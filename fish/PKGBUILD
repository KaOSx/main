
pkgname=fish
pkgver=2.7.1
pkgrel=1
pkgdesc='Smart and user friendly shell intended mostly for interactive use'
arch=('x86_64')
url='https://fishshell.com/'
license=('GPL2')
depends=('python2' 'inetutils' 'gcc-libs' 'ncurses' 'which')
makedepends=('doxygen')
install=fish.install
source=("https://github.com/fish-shell/fish-shell/releases/download/${pkgver}/fish-${pkgver}.tar.gz")
sha256sums=('e42bb19c7586356905a58578190be792df960fa81de35effb1ca5a5a981f0c5a')

build() {
  cd fish-${pkgver}
  
  #autoconf -i
  ./configure --prefix=/usr --sysconfdir=/etc 
  make
}

package() {
  cd fish-${pkgver}
  make DESTDIR=${pkgdir} install
  # part of docker:
  #rm -r ${pkgdir}/usr/share/fish/completions/docker.fish
}
