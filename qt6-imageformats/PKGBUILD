
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=qt6-imageformats
pkgver=${qtver}
subver=${subver}
_pkgver=${_qtver}
pkgrel=1
pkgdesc="Additional Image Format plugins for Qt"
arch=('x86_64')
url='https://www.qt.io/'
license=('GPL3' 'LGPL')
depends=('qt6-base' 'libtiff' 'libmng' 'libwebp')
makedepends=('cmake')
groups=('qt6')
options=('!libtool')
#_pkgfqn="qt3d-everywhere-src-${subver}"
_pkgfqn=qtimageformats-${subver}
#source=("${_qtmirror}/${_pkgver}/${subver}/submodules/$_pkgfqn.tar.xz")
#md5sums=(`grep ${_pkgfqn}.tar.xz ../qt.md5 | cut -d" " -f1`)
source=("https://github.com/qt/qtimageformats/archive/${qtver}.zip")
md5sums=('03c1b9915802c6f6d1862cee9e5ccdf0')

build() {
    cmake -B build -S ${_pkgfqn} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
    cmake --build build
}

package() {
    DESTDIR=${pkgdir} cmake --install build
    
    mkdir -p ${pkgdir}/usr/bin
    for i in $(ls ${pkgdir}/usr/lib/qt6/bin); do
        ln -s /usr/lib/qt6/bin/${i} ${pkgdir}/usr/bin/${i}-qt6
    done
    
    install -D -m644 ${_pkgfqn}/LICENSE.LGPLv3 \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.LGPLv3
}

