
pkgname=gstreamer
pkgver=1.16.1
pkgrel=1
pkgdesc="GStreamer Multimedia Framework"
arch=('x86_64')
license=('LGPL')
url="https://gstreamer.freedesktop.org/"
depends=('libxml2' 'glib2')
makedepends=('intltool' 'pkgconfig' 'gobject-introspection' 'python3')
options=('!libtool')
source=("https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-${pkgver}.tar.xz")
sha256sums=('02211c3447c4daa55919c5c0f43a82a6fbb51740d57fc3af0639d46f1cf4377d')

build() {
  cd gstreamer-${pkgver}
  
    ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --with-package-name="GStreamer (KaOS)" \
      --with-package-origin="https://kaosx.us/" \
      --disable-static 
  make
}

check() {
  cd gstreamer-${pkgver}
  
  make check
}

package() {
  cd gstreamer-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
