
pkgname=gstreamer
pkgver=1.16.0
pkgrel=1
pkgdesc="GStreamer Multimedia Framework"
arch=('x86_64')
license=('LGPL')
url="https://gstreamer.freedesktop.org/"
depends=('libxml2' 'glib2')
makedepends=('intltool' 'pkgconfig' 'gobject-introspection' 'python3')
options=('!libtool')
source=("https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-${pkgver}.tar.xz")
sha256sums=('0e8e2f7118be437cba879353970cf83c2acced825ecb9275ba05d9186ef07c00')

build() {
  cd gstreamer-${pkgver}
  
    ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --with-package-name="GStreamer (KaOS)" \
      --with-package-origin="https://kaosx.us/" \
      --disable-static \
      PYTHON=/usr/bin/python3
  make
}

check() {
  cd gstreamer-${pkgver}
  
  make check
}

package() {
  cd gstreamer-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
