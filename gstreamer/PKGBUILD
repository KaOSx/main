
pkgname=gstreamer
pkgver=1.14.2
pkgrel=1
pkgdesc="GStreamer Multimedia Framework"
arch=('x86_64')
license=('LGPL')
url="https://gstreamer.freedesktop.org/"
depends=('libxml2' 'glib2')
optdepends=('sh: feedback script')
makedepends=('intltool' 'pkgconfig' 'gobject-introspection')
options=('!libtool')
source=("https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-${pkgver}.tar.xz")
sha256sums=('4bd6127299f3f29379046bbd58a526e6353b569e0e72f7b4df2ae70df6882e09')

build() {
  cd gstreamer-${pkgver}
  
    ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --with-package-name="GStreamer (KaOS)" \
      --with-package-origin="https://kaosx.us/" \
      --disable-static
  make
}

check() {
  cd gstreamer-${pkgver}
  
  make check
}

package() {
  cd gstreamer-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
