
pkgname=libxkbcommon
pkgver=0.8.0
pkgrel=1
pkgdesc="Keyboard handling library using XKB data"
arch=('x86_64')
url="https://xkbcommon.org/"
license=('custom')
depends=('xkeyboard-config' 'glibc' 'wayland-protocols')
makedepends=('doxygen' 'meson' 'ninja')
options=('!libtool')
source=("https://xkbcommon.org/download/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e829265db04e0aebfb0591b6dc3377b64599558167846c3f5ee5c5e53641fe6d')

build() {
  mkdir -p build
  cd build
  
  export LANG=en_US.UTF-8
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib 
  ninja
}

package() {
  cd build
  DESTDIR=${pkgdir} ninja install
  
  install -Dm644 ../${pkgname}-${pkgver}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
