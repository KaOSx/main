
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=('qt5-declarative') # 'qt5-declarative-docs')
pkgver=${qtver}
subver=${subver}
_pkgver=${_qtver}
pkgrel=2
arch=('x86_64')
url='http://qt.nokia.com/'
license=('GPL3' 'LGPL' 'FDL' 'custom')
makedepends=('qt5-base' 'mesa' 'python2')
options=('!libtool' 'debug')
_pkgfqn="qtdeclarative-everywhere-src-${subver}"
source=("${_qtmirror}/${_pkgver}/${subver}/submodules/$_pkgfqn.tar.xz"
        "https://github.com/qt/qtdeclarative/commit/f42f1366dcd4b070c69c9e7fe42a704ef23da14d.diff")
#source=("https://download.qt-project.org/development_releases/qt/${_pkgver}/${subver}/submodules/$_pkgfqn.tar.xz")
md5sums=(`grep ${_pkgfqn}.tar.xz ../qt.md5 | cut -d" " -f1`
         '8ac7f4bbba645433169a27209f52cb5f')

build() {
    cd $srcdir/$_pkgfqn
    #patch -R -p1 -i $srcdir/f42f1366dcd4b070c69c9e7fe42a704ef23da14d.diff

    /usr/lib/qt5/bin/qmake
    make
    #make docs
}

package_qt5-declarative() {
    pkgdesc="A cross-platform application and UI framework, QtDeclarative files"
    depends=('qt5-base' 'mesa')
    groups=('qt5')
    
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install
    
    mkdir -p ${pkgdir}/usr/bin
    for i in $(ls ${pkgdir}/usr/lib/qt5/bin); do
        ln -s /usr/lib/qt5/bin/${i} ${pkgdir}/usr/bin/${i}-qt5
    done
}

package_qt5-declarative-docs() {
    pkgdesc="Documentation files for QtDeclarative"
    depends=('qt5-base')
    groups=('qt5-docs')
    
    cd $srcdir/$_pkgfqn
    make INSTALL_ROOT=$pkgdir install_docs
}
