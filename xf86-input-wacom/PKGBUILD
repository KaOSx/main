
pkgname=xf86-input-wacom
pkgver=0.35.0
pkgrel=1
pkgdesc="X.Org Wacom tablet driver."
arch=('x86_64')
url="http://linuxwacom.sourceforge.net/wiki/index.php/Main_Page"
license=('GPL')
depends=('libxi' 'libxrandr' 'libxinerama' 'systemd')
makedepends=('xorg-server' 'libxext' 'resourceproto' 'scrnsaverproto')
options=('!libtool')
source=("https://downloads.sourceforge.net/project/linuxwacom/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('55f60a71e81ef5544885652069a4f52b5cbaceabba53a28ac1397ec0ac26447d')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

