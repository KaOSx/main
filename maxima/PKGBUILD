
pkgname=maxima
pkgver=5.47.0
pkgrel=10
pkgdesc="Maxima - a sophisticated Computer Algebra System."
arch=('x86_64')
license=('GPL')
url="https://maxima.sourceforge.io/"
depends=('sbcl=2.4.2' 'texinfo' 'sh' 'gnuplot' 'tk')
makedepends=('python3')
options=('!makeflags' '!zipman') 
source=("https://sourceforge.net/projects/maxima/files/Maxima-source/${pkgver}-source/${pkgname}-${pkgver}.tar.gz")
md5sums=('8ddf54f90fc36e8773fe47a5a9023106')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --infodir=/usr/share/info \
              --libexecdir=/usr/lib \
              --enable-sbcl \
              --with-default-lisp=sbcl

  touch doc/info/maxima.info
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
