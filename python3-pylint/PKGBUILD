
pkgname=python3-pylint
_pkgname=pylint
pkgver=2.15.2
pkgrel=1
pkgdesc="Tool that checks for errors in Python code and tries to enforce a coding standard"
arch=('x86_64')
url="https://pylint.org"
license=('GPL')
depends=('python3' 'python3-astroid')
makedepends=('python3-build' 'python3-pip' 'python3-setuptools' 'python3-wheel')
#source=("https://github.com/PyCQA/pylint/archive/v${pkgver}.tar.gz")
source=("https://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('f63404a2547edb5247da263748771ac9a806ed1de4174cda01293c08ddbc2999')

build() {
    cd ${_pkgname}-${pkgver}

    python3 -m build -nw
}

package() {
    cd ${_pkgname}-${pkgver}

    PIP_CONFIG_FILE=/dev/null pip3 install --isolated --root=${pkgdir} --ignore-installed --no-deps dist/*.whl
    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
