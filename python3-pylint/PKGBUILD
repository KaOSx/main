
pkgname=python3-pylint
_pkgname=pylint
pkgver=2.12.2
pkgrel=2
pkgdesc="Tool that checks for errors in Python code and tries to enforce a coding standard"
arch=('x86_64')
url="https://pylint.org"
license=('GPL')
depends=('python3' 'python3-astroid')
makedepends=('python3-pip')
#source=("https://github.com/PyCQA/pylint/archive/v${pkgver}.tar.gz")
source=("https://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('9d945a73640e1fec07ee34b42f5669b770c759acd536ec7b16d7e4b87a9c9ff9')

build() {
    cd ${_pkgname}-${pkgver}

    python3 setup.py build
}

package() {
    cd ${_pkgname}-${pkgver}
    python3 setup.py install --prefix=/usr --root=${pkgdir} --skip-build --optimize=1

    #install -d ${pkgdir}/usr/share/man/man1
    #install -m644 man/* ${pkgdir}/usr/share/man/man1
}
