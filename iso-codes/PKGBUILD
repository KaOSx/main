
pkgname=iso-codes
pkgver=3.75
pkgrel=1
pkgdesc="Lists of various ISO standards (e.g. country,language, language scripts, and currency names) in one place"
arch=('x86_64')
url="https://pkg-isocodes.alioth.debian.org/"
license=('LGPL')
pkgdesc="Lists of the country, language, and currency names"
makedepends=('python3')
source=("https://pkg-isocodes.alioth.debian.org/downloads/${pkgname}-${pkgver}.tar.xz")
md5sums=('9ba173b69d4360003414f23837597a92')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} pkgconfigdir=/usr/lib/pkgconfig install
}
