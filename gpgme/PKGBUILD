
pkgname=gpgme
pkgver=1.22.0
pkgrel=1
pkgdesc="A C wrapper library for GnuPG"
arch=('x86_64')
url="https://www.gnupg.org/related_software/gpgme/"
license=('GPL')
depends=('libgpg-error' 'gnupg')
makedepends=('qt5-base')
provides=('gpgmepp')
replaces=('gpgmepp')
conflicts=('gpgmepp')
options=('!libtool' '!emptydirs')
source=("https://www.gnupg.org/ftp/gcrypt/gpgme/${pkgname}-${pkgver}.tar.bz2"
        'qpgme.patch')
sha256sums=('9551e37081ad3bde81018a0d24f245c3f8206990549598fb31a97a68380a7b71'
            '5630cbd1a7f8d246173c780a60f8eb1963a3578a1c9820d8448413016d4119e0')

build() {
  cd ${pkgname}-${pkgver}
  #sed -i -e 's|libgpgme@libsuffix@;@LIBASSUAN_LIBS@|libgpgme.so;@LIBASSUAN_LIBS@|' lang/cpp/src/GpgmeppConfig.cmake.in.in
  patch -p1 -R -i ${srcdir}/qpgme.patch

  ./configure --prefix=/usr \
       --disable-static \
       --disable-gpgsm-test \
       --disable-fd-passing
  make
}

check() {
  cd ${pkgname}-${pkgver}
  # FAIL: t-remarks
  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
