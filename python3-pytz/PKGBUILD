
pkgname=python3-pytz
pkgver=2017.2
pkgrel=2
arch=('x86_64')
pkgdesc="Cross platform time zone library for Python"
url="https://pypi.python.org/pypi/pytz"
license=("MIT")
depends=('python3')
source=("https://pypi.python.org/packages/a4/09/c47e57fc9c7062b4e83b075d418800d322caa87ec0ac21e6308bd3a2d519/pytz-${pkgver}.zip")
md5sums=('f89bde8a811c8a1a5bac17eaaa94383c')

check() {
    cd pytz-${pkgver}/pytz/tests

    python3 test_tzinfo.py
}

package() {
    cd pytz-${pkgver}

    python3 setup.py install --root=${pkgdir}/

    install -D LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
