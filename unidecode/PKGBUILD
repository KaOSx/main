
pkgname=unidecode
pkgver=1.1.1
pkgrel=1
pkgdesc="Lossy ASCII transliterations of Unicode text"
arch=('x86_64')
url="https://github.com/avian2/unidecode"
license=('MIT')
depends=('python3')
makedepends=('python3-setuptools')
source=("https://github.com/avian2/unidecode/archive/${pkgname}-${pkgver}.tar.gz")
md5sums=('bc48c74cf115aa3388fdd052b9809ee8')


build() {
  cd ${pkgname}-${pkgname}-${pkgver}
  
  python3 setup.py build
}

package() {
  cd ${pkgname}-${pkgname}-${pkgver}

  python3 setup.py install --optimize=1 --skip-build --prefix=/usr --root=${pkgdir}
}
