
pkgname=xf86-video-amdgpu
pkgver=18.0.0
pkgrel=1
pkgdesc="Video driver forked from the xf86-video-ati radeon driver and modified to support the amdgpu kernel driver via libdrm_amdgpu"
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
depends=('libdrm' 'systemd' 'mesa') 
makedepends=('xorg-server' 'xf86driproto' 'resourceproto' 'scrnsaverproto')
#groups=('xorg-video-drivers')
options=('!libtool')
source=("https://xorg.freedesktop.org/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('e909b9707d2562dfc36d8075a8cbddbc93901aaa8f2522d9a429c3fc5ad66d94')

build() { 
    cd ${pkgname}-${pkgver}
    
    ./configure \
        --prefix=/usr \
        --enable-dependency-tracking \
        --enable-glamor
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install 
 
    install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
    install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
