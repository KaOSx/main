
pkgbase=libofx
pkgname=('libofx' 'libofx-doc')
pkgver=0.9.13
pkgrel=1
pkgdesc="API for the OFX banking standard"
arch=('x86_64')
url="https://github.com/libofx/libofx"
license=('GPL')
depends=('opensp' 'curl' 'libxml++')
checkdepends=('gnupg')
source=("https://downloads.sourceforge.net/libofx/${pkgbase}-${pkgver}.tar.gz")
md5sums=('dde6276ffe2999f86bed5bf2cc80f7b2' )

build() {
  cd ${pkgbase}-${pkgver}

  ./configure --prefix=/usr
  make CXXFLAGS="-std=c++11"
}

check() {
  cd ${pkgbase}-${pkgver}
  
  make check
}

package_libofx() {
  options=('!libtool' '!docs')

  cd ${pkgbase}-${pkgver}
  make DESTDIR=$pkgdir install
}

package_libofx-doc() {
  pkgdesc="Documention of the OFX banking standard API"
  depends=()

  cd ${pkgbase}-${pkgver}
  make DESTDIR=$pkgdir install-docDATA
  make -C doc DESTDIR=$pkgdir install
}
