
pkgbase=libofx
pkgname=('libofx' 'libofx-doc')
pkgver=0.10.3
pkgrel=1
pkgdesc="API for the OFX banking standard"
arch=('x86_64')
url="https://github.com/libofx/libofx"
license=('GPL')
depends=('opensp' 'curl') # not ready for 2.6 > 'libxml++', ofxconnect not build)
checkdepends=('gnupg' 'doxygen')
source=("https://downloads.sourceforge.net/libofx/${pkgbase}-${pkgver}.tar.gz")
#source=("https://github.com/libofx/libofx/archive/${pkgver}.tar.gz")
md5sums=('9c6974c1e0cde99fa6d839f6a38fce08' )

build() {
  cd ${pkgbase}-${pkgver}

  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgbase}-${pkgver}

  make check
}

package_libofx() {
  options=('!libtool' '!docs')

  cd ${pkgbase}-${pkgver}
  make DESTDIR=$pkgdir install
}

package_libofx-doc() {
  pkgdesc="Documention of the OFX banking standard API"
  depends=()

  cd ${pkgbase}-${pkgver}
  make DESTDIR=$pkgdir install-docDATA
  make -C doc DESTDIR=$pkgdir install
}
