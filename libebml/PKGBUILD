
pkgname=libebml
pkgver=1.3.5
pkgrel=2
pkgdesc="Extensible Binary Meta Language library"
arch=('x86_64')
url="http://matroska-org.github.io/libebml/"
license=('LGPL')
depends=('gcc-libs')
options=('!staticlibs')
source=("https://github.com/Matroska-Org/libebml/archive/release-${pkgver}.tar.gz")
md5sums=('05e33eef4ccfcf4b391594f48ee60ddd')

build() {
  cd ${pkgname}-release-${pkgver}

  autoreconf -vi
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-release-${pkgver}

  make prefix=${pkgdir}/usr install
}
