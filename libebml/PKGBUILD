
pkgname=libebml
pkgver=1.3.5
pkgrel=1
pkgdesc="Extensible Binary Meta Language library"
arch=('x86_64')
url="http://dl.matroska.org/downloads/libebml/"
license=('LGPL')
depends=('gcc-libs')
options=('!staticlibs')
source=("http://dl.matroska.org/downloads/libebml/${pkgname}-${pkgver}.tar.xz")
md5sums=('f1e8c8e4664abb9f51483ff95019eeed')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
}
