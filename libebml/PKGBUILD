
pkgname=libebml
pkgver=1.4.3
pkgrel=1
pkgdesc="Extensible Binary Meta Language library"
arch=('x86_64')
url="https://matroska-org.github.io/libebml/"
license=('LGPL')
depends=('gcc-libs')
makedepends=('cmake')
options=('!staticlibs')
source=("https://dl.matroska.org/downloads/libebml/${pkgname}-${pkgver}.tar.xz")
sha512sums=('6a7a544f3f5a273eaab8c71aa692492cbfb671b3d73f03ab76438843a9a7a9379f9cffdae0e1452cf064e43c10ad82424645504a23d7f3336eabcd38f2621d0a')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DBUILD_SHARED_LIBS=YES \
    -DDISABLE_PKGCONFIG=NO # .pc file is not needed for matroska, mkvtoolnix?
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
