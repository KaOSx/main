
pkgname=libebml
pkgver=1.4.1
pkgrel=1
pkgdesc="Extensible Binary Meta Language library"
arch=('x86_64')
url="https://matroska-org.github.io/libebml/"
license=('LGPL')
depends=('gcc-libs')
makedepends=('cmake')
options=('!staticlibs')
source=("https://dl.matroska.org/downloads/libebml/${pkgname}-${pkgver}.tar.xz")
sha512sums=('ddde4975546ba4214cd22db37992c2b5130a731da1b34e171cca8d7f39d981b9643a193d06be1a1e156b316e51419d1eb4c1cfe40511a52b245152e69a507e4b')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DBUILD_SHARED_LIBS=YES \
    -DDISABLE_PKGCONFIG=NO # .pc file is not needed for matroska, mkvtoolnix?
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
