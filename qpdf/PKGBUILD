
# rebuild cups-filters on every update, but point update
pkgname=qpdf
pkgver=9.1.1
pkgrel=1
pkgdesc="QPDF: A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom:Artistic-2.0')
depends=('openjpeg' 'zlib')
makedepends=('make')
options=('!libtool')
source=("https://downloads.sourceforge.net/qpdf/${pkgname}-${pkgver}.tar.gz")
sha1sums=('8176a6ee6257cd66817bf1aacbab27854f3b1def')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}


package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir}/ install

  mkdir -m755 -p ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 Artistic-2.0 ${pkgdir}/usr/share/licenses/${pkgname}/
}
