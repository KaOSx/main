
pkgname=libcdio-paranoia
pkgver=10.2.3
_pkgver=10.2+0.94+2
pkgrel=1
pkgdesc="CD paranoia libraries from libcdio"
arch=('x86_64')
license=('GPL' 'LGPL')
url="https://www.gnu.org/software/libcdio/"
depends=('libcdio')
options=('!libtool')
source=("https://ftp.gnu.org/gnu/libcdio/${pkgname}-${_pkgver}.tar.gz")
md5sums=('34ac925c9b903bd40b90ff25b81744a6')

build() {
  cd ${pkgname}-${_pkgver}

  ./configure --prefix=/usr \
        --enable-cpp-progs \
        --disable-static \
        --disable-example-progs
  make
}

package() {
  cd ${pkgname}-${_pkgver}

  make -j1 DESTDIR=${pkgdir} install
}
