
pkgname=python3-requests
pkgver=2.19.0
pkgrel=1
pkgdesc="Requests is the only Non-GMO HTTP library for Python, safe for human consumption."
arch=('x86_64')
license=('Apache')
url="http://docs.python-requests.org/en/master/"
depends=('python3-urllib3' 'python3-chardet' 'python3-certifi' 'python3-idna')
makedepends=('python3-setuptools')
source=("https://github.com/kennethreitz/requests/archive/v${pkgver}.tar.gz")
md5sums=('84d29eaf9f3e5911134ba7acd2a2978e')

build() {
   cd requests-${pkgver}
   
   python3 setup.py build
}
 
package() {
   cd requests-${pkgver}
   
   python3 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
   install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
