
pkgname=pyqt6-python3
pkgver=6.0.2
_pkgver=6.0.2
pkgrel=1
pkgdesc="A set of Python3 bindings for the Qt6 toolkit"
arch=('x86_64')
url="https://www.riverbankcomputing.com/software/pyqt/intro"
license=('GPL')
depends=('dbus-python3' 'qt6-base' 'qt6-svg' 'qt6-declarative' 'qt6-quick3d' 'pyqt6-sip')
makedepends=('pyqt-builder' 'qt6-tools')
source=("https://pypi.python.org/packages/source/P/PyQt6/PyQt6-${pkgver}.tar.gz")
#source=("https://www.riverbankcomputing.com/static/Downloads/PyQt6/PyQt6-${_pkgver}.tar.gz")
sha256sums=('aab1b58e287cd8c91d7f7b8c4f91d68b8980f07fcd2ad6d9adbf0bb75347fb9a')

build() {
  cd PyQt6-${_pkgver}

  sip-build \
    --confirm-license \
    --api-dir /usr/share/qt6/qsci/api/python/ \
    --qmake /usr/lib/qt6/bin/qmake \
    --no-dbus-python \
    --no-make
  cd build
  make
}

package(){
  cd PyQt6-${_pkgver}/build

  make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install
}
