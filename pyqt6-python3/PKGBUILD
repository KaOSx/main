
pkgname=pyqt6-python3
pkgver=6.0.0
pkgrel=1
pkgdesc="A set of Python3 bindings for the Qt6 toolkit"
arch=('x86_64')
url="https://www.riverbankcomputing.com/software/pyqt/intro"
license=('GPL')
depends=('dbus-python3' 'qt6-base' 'qt6-svg' 'qt6-tools' 'pyqt6-sip')
makedepends=('pyqt-builder')
source=("https://pypi.python.org/packages/source/P/PyQt6/PyQt6-${pkgver}.tar.gz")
sha256sums=('c758b0568127bffd7147f461d74bbf06249177eae908efed8099eec30984f1b3')

build() {
  cd PyQt6-${pkgver}

  sip-build \
    --confirm-license \
    --api-dir /usr/share/qt6/qsci/api/python/ \
    --qmake /usr/lib/qt6/bin/qmake \
    --no-dbus-python \
    --no-qml-plugin \
    --no-make
  cd build
  make
}

package(){
  cd PyQt6-${pkgver}

  make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install
}
