
pkgname=pcsclite
pkgver=1.9.0
_pkgver=4235
pkgrel=1
pkgdesc="PC/SC Architecture smartcard middleware library"
arch=('x86_64')
url="https://pcsclite.apdu.fr/"
license=('BSD')
depends=('python3' 'systemd')
makedepends=('pkg-config')
options=('!docs')
source=("https://pcsclite.apdu.fr/files/pcsc-lite-${pkgver}.tar.bz2")
md5sums=('eb595f2d398ff229207a6ec09fbc4e98')

build() {
  cd pcsc-lite-${pkgver}

  ./configure --prefix=/usr \
    --enable-libudev \
    --sysconfdir=/etc \
    --enable-ipcdir=/run/pcscd \
    --enable-usbdropdir=/usr/lib/pcsc/drivers \
    --with-systemdsystemunitdir=/usr/lib/systemd/system

  make
}

package() {
  cd pcsc-lite-${pkgver}

  make DESTDIR=${pkgdir} install

  install -D -m644 ${srcdir}/pcsc-lite-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  install -d ${pkgdir}/usr/lib/pcsc/drivers
}
