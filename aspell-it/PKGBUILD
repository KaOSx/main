
pkgname=aspell-it
pkgver=2.2_20050523
_pkgver=2.2_20050523-0
pkgrel=2
pkgdesc="Italian dictionary for aspell"
arch=('x86_64')
url="http://aspell.net/"
license=('GPL2')
depends=('aspell')
source=("ftp://ftp.gnu.org/gnu/aspell/dict/it/aspell6-it-${_pkgver}.tar.bz2")
md5sums=('b1217299a0b67d1e121494d7ec18a88d')

build() {
  cd aspell6-it-${_pkgver}
  
  ./configure
  make
}

package() {
  cd aspell6-it-${_pkgver}
  
  make DESTDIR=${pkgdir} install
}
