
pkgname=sord
pkgver=0.16.10
pkgrel=1
pkgdesc="A lightweight C library for storing RDF data in memory"
arch=('x86_64')
url="https://drobilla.net/software/sord.html"
license=('custom:ISC')
depends=('serd' 'pcre')
makedepends=('python3')
source=("https://download.drobilla.net/${pkgname}-${pkgver}.tar.bz2")
md5sums=('13c37ed45b2adbc319b98c56eae1e240')

build() {
  cd ${pkgname}-${pkgver}
  sed -i "/ldconfig/d" wscript

  python3 waf configure --prefix=/usr
  python3 waf build $MAKEFLAGS
}

package() {
  cd ${pkgname}-${pkgver}

  python3 waf install --destdir=${pkgdir}

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

