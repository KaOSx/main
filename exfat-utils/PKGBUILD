 
pkgname=exfat-utils
pkgver=1.3.0
pkgrel=2
pkgdesc="Provides a full-featured exFAT file system implementation for Unix-like systems."
arch=('x86_64')
url="https://github.com/relan/exfat"
license=('GPL2')
depends=('glibc' 'fuse')
#source=("https://github.com/relan/exfat/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
source=("https://github.com/relan/exfat/archive/v${pkgver}.tar.gz")
md5sums=('6b1ba90ebd53051834babbfaa7bb2a5e')

build() {
    cd exfat-${pkgver}

    autoreconf -vi
    ./configure --prefix=/usr \
    make
}

package() {
    cd exfat-${pkgver}
    
    make DESTDIR=${pkgdir} install
}
