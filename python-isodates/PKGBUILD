
pkgbase=isodate
pkgname=('python2-isodate' 'python3-isodate')
pkgver=0.6.0
pkgrel=1
pkgdesc="An ISO 8601 date/time/duration parser and formater"
arch=('x86_64')
url="https://pypi.python.org/pypi/isodate"
license=('BSD')
makedepends=('python2-setuptools' 'python3-setuptools')
source=("https://files.pythonhosted.org/packages/source/i/isodate/${pkgbase}-${pkgver}.tar.gz")
sha256sums=('2e364a3d5759479cdb2d37cce6b9376ea504db2ff90252a2e5b7cc89cc9ff2d8')

package_python2-isodate() {
  depends=('python2-six')

  cd ${pkgbase}-${pkgver}
  python2 setup.py install --root=${pkgdir}/ --optimize=0
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  head -26 src/isodate/isodates.py > ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

package_python3-isodate() {
  depends=('python3-six')

  cd ${pkgbase}-${pkgver}
  python3 setup.py install --root=${pkgdir}/ --optimize=0
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  head -26 src/isodate/isodates.py > ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
