
pkgname=python3-markupsafe
pkgver=1.1.0
pkgrel=1
pkgdesc="Implements a XML/HTML/XHTML Markup safe string for Python"
arch=('x86_64')
url="https://pypi.python.org/pypi/MarkupSafe"
license=('custom')
depends=('python3')
makedepends=('python3-setuptools')
source=("https://files.pythonhosted.org/packages/ac/7e/1b4c2e05809a4414ebce0892fe1e32c14ace86ca7d50c70f00979ca9b3a3/MarkupSafe-${pkgver}.tar.gz")
md5sums=('49e3f3230cedb7ae34faf06913db83fc')

check() {
  cd ${srcdir}/MarkupSafe-${pkgver}
  
  python3 setup.py test
}

package() {
  cd ${srcdir}/MarkupSafe-${pkgver}
  python3 setup.py install --root=${pkgdir} --optimize=1

  install -D -m644 LICENSE.rst ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.rst
}
