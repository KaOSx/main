pkgname=lager
pkgver=0.1.0
pkgrel=1
pkgdesc="C++ library for value-oriented design using the data-flow architecture â€” Redux for C++"
url='https://sinusoid.es/immer/'
arch=('x86_64')
license=('Boost')
makedepends=('cmake')
source=("https://github.com/arximboldi/lager/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('bec57bddd16a35d8ebbba8b94ba90e3a7ba96d740da542025aea70c925ac8084')
 
build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -Dlager_BUILD_TESTS=OFF \
    -Dlager_BUILD_EXAMPLES=OFF \
    -Dlager_BUILD_DOCS=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build

  install -Dm644 ${pkgname}-${pkgver}/LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE
}

