
pkgname=pysmbc
pkgver=1.0.20
pkgrel=1
pkgdesc="Python libsmbclient bindings"
arch=('x86_64')
url="https://github.com/hamano/pysmbc"
license=('GPL')
depends=('python3' 'samba')
makedepends=('python3-setuptools')
source=("https://pypi.io/packages/source/p/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('23483b555ff0483a6c3b4bd4047185d252198f972e3d6bc6ea7806e30a507684')

build(){
  cd ${pkgname}-${pkgver}
  
  python3 setup.py build
}

package() {
  cd ${pkgname}-${pkgver}
  
  python3 setup.py install --root=${pkgdir} --optimize=1
}
