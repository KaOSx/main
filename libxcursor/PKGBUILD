
pkgname=libxcursor
pkgver=1.1.15
pkgrel=1
pkgdesc="X cursor management library"
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
depends=('libxfixes' 'libxrender')
makedepends=('xorg-util-macros')
options=('!libtool')
source=("https://xorg.freedesktop.org/releases/individual/lib/libXcursor-${pkgver}.tar.bz2")
sha256sums=('294e670dd37cd23995e69aae626629d4a2dfe5708851bbc13d032401b7a3df6b')

build() {
  cd libXcursor-${pkgver}
  
  ./configure --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd libXcursor-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
