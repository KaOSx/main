
pkgname=libdvdnav
pkgver=6.0.0
pkgrel=1
pkgdesc="The library for xine-dvdnav plugin."
arch=('x86_64')
license=('GPL')
url="https://code.videolan.org/videolan/libdvdnav"
depends=('libdvdread')
options=('!libtool')
source=("https://download.videolan.org/pub/videolan/libdvdnav/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('f0a2711b08a021759792f8eb14bb82ff8a3c929bf88c33b64ffcddaa27935618')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
