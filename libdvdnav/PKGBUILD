
pkgname=libdvdnav
pkgver=6.0.1
pkgrel=1
pkgdesc="The library for xine-dvdnav plugin."
arch=('x86_64')
license=('GPL')
url="https://code.videolan.org/videolan/libdvdnav"
depends=('libdvdread')
options=('!libtool')
source=("https://download.videolan.org/pub/videolan/libdvdnav/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('e566a396f1950017088bfd760395b0565db44234195ada5413366c9d23926733')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
