
pkgname=valgrind
pkgver=3.19.0
pkgrel=1
pkgdesc="A tool to help find memory-management problems in programs"
arch=('x86_64')
license=('GPL')
url="https://valgrind.org/"
depends=('glibc>=2.33' 'glibc<2.34' 'perl')
makedepends=('gdb')
options=('!emptydirs' '!buildflags')
source=("https://sourceware.org/pub/valgrind/${pkgname}-${pkgver}.tar.bz2")
md5sums=('4687a4990585a038c52f842448ef4e63')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --enable-only64bit \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
