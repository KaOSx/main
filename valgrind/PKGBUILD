
pkgname=valgrind
pkgver=3.15.0
pkgrel=3
pkgdesc="A tool to help find memory-management problems in programs"
arch=('x86_64')
license=('GPL')
url="http://valgrind.org/"
depends=('glibc>=2.30' 'glibc<2.31' 'perl')
makedepends=('gdb')
options=('!emptydirs' '!buildflags')
source=("ftp://sourceware.org/pub/valgrind/${pkgname}-${pkgver}.tar.bz2")
md5sums=('46e5fbdcbc3502a5976a317a0860a975')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr --mandir=/usr/share/man --enable-only64bit  
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
