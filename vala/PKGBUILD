
pkgname=vala
pkgver=0.40.4
_pkgver=0.40
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2' 'graphviz')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('379354a2a2f7ee5c4d6e0f5e88b0e32620dcd5f51972baf6d90d9f18eb689198')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
