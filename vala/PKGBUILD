
pkgname=vala
pkgver=0.40.1
_pkgver=0.40
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2' 'graphviz')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('79b544305640b00010008cad0df1a1742363f636e4a7e3d410f651edc728f605')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
