
pkgname=vala
pkgver=0.40.9
_pkgver=0.40
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2' 'graphviz')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c7ff0480779b2d78d6ff78f5fd165b3ba972e4fa9e9da1b411ff4375a78c6a7b')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
