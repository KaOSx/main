
pkgname=vala
pkgver=0.44.3
_pkgver=0.44
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2' 'graphviz')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('8553b422484af88be1685d8b47f7b0df36ae4477c3e77e89ab22276ffed1eae9')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
