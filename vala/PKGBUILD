
pkgname=vala
pkgver=0.54.2
_pkgver=0.54
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2' 'graphviz')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('884de745317d4d56e4e8cede993dc8f04d50cfca36cf60d2f2f278c30c2b1311')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
