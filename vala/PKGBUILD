
pkgname=vala
pkgver=0.36.4
_pkgver=0.36
pkgrel=1
pkgdesc="Compiler for the GObject type system."
arch=('x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2')
makedepends=('libxslt')
options=('!libtool')
source=("https://download.gnome.org/sources/vala/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e9f23ce711c1a72ce664d10946fbc5953f01b0b7f2a3562e7a01e362d86de059')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --enable-vapigen
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
