
pkgname=aspell
pkgver=0.60.6.90
_pkgver=0.60.7-rc1
pkgrel=1
pkgdesc="A spell checker designed to eventually replace Ispell"
url="http://aspell.net/"
arch=('x86_64')
license=('LGPL')
depends=('gcc-libs' 'ncurses')
optdepends=('perl: to import old dictionaries')
options=('!libtool')
source=("ftp://alpha.gnu.org/gnu/aspell/${pkgname}-${_pkgver}.tar.gz")
md5sums=('f05691eada7ad04b26c1a5a6ef27182a')

build() {
  cd ${pkgname}-${_pkgver}
  
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${pkgname}-${_pkgver}
  make DESTDIR=${pkgdir} install
  
  ln -s ${pkgname}-0.60 ${pkgdir}/usr/lib/${pkgname}
}
