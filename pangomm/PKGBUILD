
pkgname=pangomm
pkgver=2.46.1
_pkgver=2.46
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=('x86_64')
url="https://www.gtkmm.org/en/"
license=('LGPL')
depends=('pango' 'glibmm' 'cairomm')
makedepends=('meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/pangomm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('c885013fe61a4c5117fda395770d507563411c63e49f4a3aced4c9efe34d9975')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
