
pkgname=pangomm
pkgver=2.46.2
_pkgver=2.46
pkgrel=2
pkgdesc="C++ bindings for pango"
arch=('x86_64')
url="https://www.gtkmm.org/en/"
license=('LGPL')
depends=('pango' 'glibmm' 'cairomm')
makedepends=('meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/pangomm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('57442ab4dc043877bfe3839915731ab2d693fc6634a71614422fb530c9eaa6f4')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
