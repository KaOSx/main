
pkgname=pangomm
pkgver=2.42.2
_pkgver=2.42
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=('x86_64')
url="https://www.gtkmm.org/en/"
license=('LGPL')
depends=('pango' 'glibmm' 'cairomm')
makedepends=('meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/pangomm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('1b24c92624ae1275ccb57758175d35f7c39ad3342d8c0b4ba60f0d9849d2d08a')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
