
pkgname=pangomm
pkgver=2.46.0
_pkgver=2.46
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=('x86_64')
url="https://www.gtkmm.org/en/"
license=('LGPL')
depends=('pango' 'glibmm' 'cairomm')
makedepends=('meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/pangomm/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d3787d04d6198b606f3efa357b3b452a7140e2a7dee56f9f9ce516d7d5fcec1b')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
