
pkgname=libepoxy
pkgver=1.5.1
_pkgver=1.5
pkgrel=1
pkgdesc="Library for handling OpenGL function pointer management for you"
url="https://github.com/anholt/libepoxy"
arch=('x86_64')
license=('MIT')
depends=('glibc')
makedepends=('xorg-util-macros' 'python3' 'libgl' 'meson' 'ninja')
options=('!libtool')
source=("https://github.com/anholt/libepoxy/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('2a6d9da22e635cc35bcbc1dc89b34a0c')

build() {
    mkdir -p build
    cd build

    meson ../${pkgname}-${pkgver} \
        --prefix=/usr \
        --buildtype=release
    ninja
}

check() {
    cd build

    meson test
}

package() {
    cd build
    DESTDIR=${pkgdir} ninja install

    install -Dm644 ../${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
