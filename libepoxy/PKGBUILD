
pkgname=libepoxy
pkgver=1.5.9
_pkgver=1.5.9
pkgrel=1
pkgdesc="Library for handling OpenGL function pointer management for you"
url="https://github.com/anholt/libepoxy"
arch=('x86_64')
license=('MIT')
depends=('glibc')
makedepends=('xorg-util-macros' 'python3' 'libgl' 'meson' 'ninja')
options=('!libtool')
source=("https://github.com/anholt/libepoxy/releases/download/${_pkgver}/${pkgname}-${pkgver}.tar.xz"
        "https://github.com/anholt/libepoxy/commit/e5372a25baa9034b6223b32a0cab838c42779a39.diff")
sha256sums=('d168a19a6edfdd9977fef1308ccf516079856a4275cf876de688fb7927e365e4'
            '0b7d352ec3c7e60df0555cb1c2c05b8f8502838649815bb71be3d5c92ffb83e3')

prepare() {
    cd ${pkgname}-${pkgver}
    
    #patch -R -p1 -i ${srcdir}/e5372a25baa9034b6223b32a0cab838c42779a39.diff
}

build() {
    mkdir -p build
    cd build

    meson ../${pkgname}-${pkgver} \
        --prefix=/usr \
        --buildtype=release
    ninja
}

check() {
    cd build

    meson test
}

package() {
    cd build
    DESTDIR=${pkgdir} ninja install

    install -Dm644 ../${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
