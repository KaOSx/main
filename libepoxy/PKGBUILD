
pkgname=libepoxy
pkgver=1.4.0
_pkgver=1.4
pkgrel=1
pkgdesc="Library for handling OpenGL function pointer management for you"
url="https://github.com/anholt/libepoxy"
arch=('x86_64')
license=('MIT')
depends=('glibc')
makedepends=('xorg-util-macros' 'python3' 'libgl')
options=('!libtool')
source=("https://github.com/anholt/libepoxy/releases/download/v${_pkgver}/libepoxy-${pkgver}.tar.xz")
md5sums=('d8d8cbf2beb64975d424fcc5167a2a38')

build() {
   cd ${pkgname}-${pkgver}

   ./configure --prefix=/usr
}

check() {
   cd ${pkgname}-${pkgver}

   make -k check
}

package() {
   cd ${pkgname}-${pkgver}
   make DESTDIR=$pkgdir install

   install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
