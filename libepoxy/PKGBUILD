
pkgname=libepoxy
pkgver=1.4.1
_pkgver=1.4
pkgrel=1
pkgdesc="Library for handling OpenGL function pointer management for you"
url="https://github.com/anholt/libepoxy"
arch=('x86_64')
license=('MIT')
depends=('glibc')
makedepends=('xorg-util-macros' 'python3' 'libgl')
options=('!libtool')
source=("https://github.com/anholt/libepoxy/archive/${pkgver}.tar.gz")
md5sums=('96d3fd2069639ff38efc6eed83c1bea2')

build() {
   cd ${pkgname}-${pkgver}

   ./autogen.sh
   ./configure --prefix=/usr
}

check() {
   cd ${pkgname}-${pkgver}

   make -k check
}

package() {
   cd ${pkgname}-${pkgver}
   make DESTDIR=$pkgdir install

   install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
