
pkgname=dconf
pkgver=0.26.1
_pkgver=0.26
pkgrel=2
pkgdesc="A low-level configuration system."
arch=('x86_64')
url="https://wiki.gnome.org/Projects/dconf"
license=('LGPL2.1')
depends=('glib2')
makedepends=('vala' 'gobject-introspection' 'python2' 'intltool' 'docbook-xsl' 'python3')
source=("https://download.gnome.org/sources/dconf/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('d583b1f7fc93b879e2956acc6a26ea05a445a0002158aeef80c8e378e1414535')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
       --sysconfdir=/etc \
       --libexecdir=/usr/lib/dconf \
       --disable-editor
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
