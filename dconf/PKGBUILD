
pkgname=dconf
pkgver=0.28.0
_pkgver=0.28
pkgrel=1
pkgdesc="A low-level configuration system."
arch=('x86_64')
url="https://wiki.gnome.org/Projects/dconf"
license=('LGPL2.1')
depends=('glib2')
makedepends=('vala' 'gobject-introspection' 'python2' 'intltool' 'docbook-xsl' 'python3' 'meson' 'ninja')
source=("https://download.gnome.org/sources/dconf/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('61d3b3865ef58b729c3b39aa0979f886c014aa8362f93dcfc74bf5648ed9c742')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib/dconf
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
