
pkgname=python3-pillow
_pkgname=Pillow
pkgver=9.2.0
pkgrel=1
arch=('x86_64')
pkgdesc="Python Imaging Library (PIL) fork. Python3 version."
url="https://python-pillow.org/"
license=('BSD')
depends=('python3' 'lcms2' 'libwebp')
makedepends=('python3-setuptools' 'libwebp' 'tk')
source=("https://files.pythonhosted.org/packages/source/P/Pillow/${_pkgname}-${pkgver}.tar.gz")
#source=("https://github.com/python-pillow/Pillow/archive/${pkgver}.tar.gz")
sha256sums=('75e636fd3e0fb872693f23ccb8a5ff2cd578801251f3a4f6854c6a5d437d3c04')

build() { 
  cd ${_pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python3 setup.py install --root=${pkgdir}/ --optimize=0
  
  install -Dm644 docs/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
