
pkgname=python3-pillow
_pkgname=Pillow
pkgver=9.3.0
pkgrel=3
arch=('x86_64')
pkgdesc="Python Imaging Library (PIL) fork. Python3 version."
url="https://python-pillow.org/"
license=('BSD')
depends=('python3' 'lcms2' 'libwebp')
makedepends=('python3-build' 'python3-pip' 'python3-wheel' 'python3-setuptools' 'tk')
source=("https://files.pythonhosted.org/packages/source/P/Pillow/${_pkgname}-${pkgver}.tar.gz")
#source=("https://github.com/python-pillow/Pillow/archive/${pkgver}.tar.gz")
sha256sums=('c935a22a557a560108d780f9a0fc426dd7459940dc54faa49d83249c8d3e760f')

build() { 
  cd ${_pkgname}-${pkgver}

  python3 -m build -nw
}

package() {
  cd ${_pkgname}-${pkgver}
  PIP_CONFIG_FILE=/dev/null pip3 install --root=${pkgdir} --ignore-installed --no-deps dist/*.whl

  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
