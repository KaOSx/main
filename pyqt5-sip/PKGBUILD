
pkgname=pyqt5-sip
_pkgname=PyQt5_sip
pkgver=12.12.2
pkgrel=2
arch=('x86_64')
pkgdesc="The sip extension module provides support for the PyQt5 package."
url="https://riverbankcomputing.com/software/pyqt/intro"
license=('GPL')
depends=('python3')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel')
source=("https://pypi.python.org/packages/source/P/PyQt5-sip/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('10d9bfa9f59f0fd1cad81be187479316ffc95684f573efea94512cb4257d2b17')

build() {
  cd ${_pkgname}-${pkgver}

  python3 -m build -nw
}

package()  {
  cd ${_pkgname}-${pkgver}

  python3 -m installer --destdir=${pkgdir} dist/*.whl
}
