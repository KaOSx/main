
pkgname=alsa-oss
pkgver=1.1.8
pkgrel=3
pkgdesc="OSS compatibility library"
arch=('x86_64')
license=('GPL')
url="https://www.alsa-project.org"
options=('!libtool')
depends=('alsa-lib')
source=("ftp://ftp.alsa-project.org/pub/oss-lib/${pkgname}-${pkgver}.tar.bz2")
md5sums=('9ec4bb783fdce19032aace086d65d874')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

