
pkgname=alsa-oss
pkgver=1.1.6
pkgrel=1
pkgdesc="OSS compatibility library"
arch=('x86_64')
license=('GPL')
url="https://www.alsa-project.org"
options=('!libtool')
depends=('alsa-lib')
source=("ftp://ftp.alsa-project.org/pub/oss-lib/${pkgname}-${pkgver}.tar.bz2")
md5sums=('fc845cafc4444193510ab1865c7350b8')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

