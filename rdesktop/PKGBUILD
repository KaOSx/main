
pkgname=rdesktop
pkgver=1.8.5
_commit=7d8675074f99f30727403d69c51f440f24a2b024
pkgrel=1
pkgdesc="Open source UNIX client for connecting to Windows Remote Desktop Services"
arch=('x86_64')
url="http://www.rdesktop.org/"
license=('GPL')
depends=('libx11' 'openssl' 'libao' 'libsamplerate' 'xorg-server-utils' 'pcsclite')
source=("https://github.com/rdesktop/rdesktop/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('2a8b9b1c5d85dded3255edb8efb9ebdf')

build() {
  cd ${pkgname}-${pkgver}

  #./bootstrap
  ./configure --prefix=/usr \
    --enable-smartcard \
    --with-ipv6
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

