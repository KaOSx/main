
pkgname=libnotify
pkgver=0.7.8
pkgrel=1
pkgdesc="Desktop notification library"
arch=('x86_64')
url="https://developer.gnome.org/notification-spec/"
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk3' 'gobject-introspection' 'meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/libnotify/0.7/${pkgname}-${pkgver}.tar.xz")
sha256sums=('69209e0b663776a00c7b6c0e560302a8dbf66b2551d55616304f240bba66e18c')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk_doc=false \
    -Ddocbook_docs=disabled
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

