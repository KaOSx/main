
pkgname=libnotify
pkgver=0.7.10
_pkgver=0.7
pkgrel=1
pkgdesc="Desktop notification library"
arch=('x86_64')
url="https://gitlab.gnome.org/GNOME/libnotify"
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk3' 'gobject-introspection' 'meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/GNOME/sources/libnotify/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('37dc47dd1bd3c1360d6e8815c3affb99d120e3617d7e5647586f117cffe0ba4b')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk_doc=false \
    -Ddocbook_docs=disabled \
    -Dman=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}

