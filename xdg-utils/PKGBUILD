
pkgname=xdg-utils
pkgver=1.1.3
_pkgver=1.1.3
_gitver=f0df41402e827051ec16bac212c8eaf08ada75e4
pkgrel=2
pkgdesc='Command line tools that assist applications with a variety of desktop integration tasks.'
arch=('x86_64')
url='https://www.freedesktop.org/wiki/Software/xdg-utils/'
depends=('sh')
makedepends=('docbook-xsl' 'w3m' 'xmlto')
license=('MIT')
#source=("http://cgit.freedesktop.org/xdg/xdg-utils/snapshot/xdg-utils-${_gitver}.tar.gz")
source=("https://portland.freedesktop.org/download/xdg-utils-${_pkgver}.tar.gz"
        'xdg-mime.patch')
md5sums=('902042508b626027a3709d105f0b63ff'
         '7bc92bf7a65e50a50c0d3aa10bea95fd')

build() {
	cd ${pkgname}-${_pkgver}
	#patch -p1 -i ${srcdir}/xdg-mime.patch
	
	./configure --prefix=/usr --mandir=/usr/share/man
	make 
}

package() {
	cd ${pkgname}-${_pkgver}
	
	make DESTDIR=${pkgdir} install
	install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

