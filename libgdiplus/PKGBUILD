
pkgname=libgdiplus
pkgver=6.0.1
pkgrel=1
pkgdesc="Open Source Implementation of the GDI+ API"
arch=('x86_64')
license=('MPL' 'LGPL')
url="https://www.mono-project.com"
depends=('cairo' 'freetype2' 'giflib' 'glib2' 'libexif' 'libpng' 'libtiff')
makedepends=('pkgconfig')
options=('!libtool')
source=("https://github.com/mono/libgdiplus/archive/${pkgver}.tar.gz")
md5sums=('40877e7c84654e072a2337606fb7f41a')

build() {
  cd ${pkgname}-${pkgver}
  
  ./autogen.sh --prefix=/usr
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
