
pkgname=libva-utils
pkgver=2.4.0
pkgrel=1
pkgdesc="Libva with patches to extend VA API with data needed for VDPAU and XvBA backends."
arch=('x86_64')
url="https://github.com/01org/libva-utils"
license=('MIT')
depends=('libva')
makedepends=('meson' 'ninja')
source=("https://github.com/intel/libva-utils/archive/${pkgver}.tar.gz")
sha1sums=('eeb26db3469d112796c120def1569ce322059191')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release 
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
  
  install -m644 -D ../${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

