
pkgname=libva-utils
pkgver=2.2.0
pkgrel=1
pkgdesc="Libva with patches to extend VA API with data needed for VDPAU and XvBA backends."
arch=('x86_64')
url="https://github.com/01org/libva-utils"
license=('MIT')
depends=('libva')
source=("https://github.com/01org/libva-utils/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('ef15d40d6bec847c74f21ee3431b7e7b06fec3b4')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr  
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -m644 -D COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

