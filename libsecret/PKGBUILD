
pkgname=libsecret
pkgver=0.21.0
_pkgver=0.21
pkgrel=1
pkgdesc='Library for storing and retrieving passwords and other secrets.'
arch=('x86_64')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Libsecret"
depends=('glib2' 'libgcrypt')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'vala' 'meson' 'ninja' 'valgrind')
source=("https://download.gnome.org/sources/libsecret/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('2735b29d1cc0e5b12ba90bee88bd21774ac8db4ae1a4b716f46c409c19a14613')

build() {
  mkdir -p build
  cd build

  meson setup ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --sysconfdir=/etc \
    -Dgtk_doc=false
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
