
pkgname=libsecret
pkgver=0.20.0
_pkgver=0.20
pkgrel=1
pkgdesc='Library for storing and retrieving passwords and other secrets.'
arch=('x86_64')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Libsecret"
depends=('glib2' 'libgcrypt')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'vala' 'meson' 'ninja' 'valgrind')
source=("https://download.gnome.org/sources/libsecret/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('f1187370b453106af878e30c284a121ba0c513da8bb4170b329d66e250bdae43')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --sysconfdir=/etc \
    -Dgtk_doc=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
