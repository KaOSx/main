
pkgname=libsecret
pkgver=0.18.6
_pkgver=0.18
pkgrel=1
pkgdesc='Library for storing and retrieving passwords and other secrets.'
arch=('x86_64')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Libsecret"
depends=('glib2' 'libgcrypt')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'vala')
source=("https://download.gnome.org/sources/libsecret/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('5efbc890ba41a323ffe0599cd260fd12bd8eb62a04aa1bd1b2762575d253d66f')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver} 
  
  make DESTDIR=${pkgdir} install
}
