
pkgname=libsecret
pkgver=0.18.8
_pkgver=0.18
pkgrel=1
pkgdesc='Library for storing and retrieving passwords and other secrets.'
arch=('x86_64')
license=('LGPL')
url="https://wiki.gnome.org/Projects/Libsecret"
depends=('glib2' 'libgcrypt')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'vala')
source=("https://download.gnome.org/sources/libsecret/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('3bfa889d260e0dbabcf5b9967f2aae12edcd2ddc9adc365de7a5cc840c311d15')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver} 
  
  make DESTDIR=${pkgdir} install
}
