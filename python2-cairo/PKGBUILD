
pkgname=python2-cairo
_pkgname=pycairo
pkgver=1.18.1
pkgrel=1
pkgdesc="Python bindings for the cairo graphics library"
url="https://www.cairographics.org/pycairo"
arch=('x86_64')
license=('LGPL' 'MPL')
depends=('python2' 'cairo')
options=('!libtool')
source=("https://github.com/pygobject/pycairo/releases/download/v${pkgver}/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('70172e58b6bad7572a3518c26729b074acdde15e6fee6cbab6d3528ad552b786')

build() {
  cd ${_pkgname}-${pkgver}
  
  python2 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
    
  python2 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
}
