
pkgname=pipewire
pkgver=0.3.47
pkgrel=1
pkgdesc="Project that aims to greatly improve handling of audio and video under Linux"
url="https://pipewire.org"
arch=("x86_64")
license=('MIT')
depends=('gst-plugins-base' 'v4l-utils' 'sbc' 'ffmpeg' 'rtkit' 'bluez' 'vulkan-loader' 'lilv'
         'libcanberra')
makedepends=('meson' 'ninja' 'vulkan-headers' 'wireplumber')
provides=('jack2' 'jack') # 'pulseaudio')
conflicts=('jack2')
install=pipewire.install
source=("https://gitlab.freedesktop.org/pipewire/pipewire/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.bz2"
        "https://github.com/PipeWire/pipewire/commit/37613b67ba52b5ad4e81d7ea38adc04027d9f9e5.diff")
md5sums=('80cd7e0e9a1711594dd5caa418a5d85f'
         '560cef2b24700df8d2c84019e1891b66')

prepare() {
  cd ${pkgname}-${pkgver}
  # alsa 1.1.9 changes
  #patch -p1 -i ${srcdir}/37613b67ba52b5ad4e81d7ea38adc04027d9f9e5.diff
}

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dman=disabled \
    -Dudevrulesdir=/usr/lib/udev/rules.d \
    -Dsystemd-system-service=enabled \
    -Dsession-managers=[] \
    -Djack-devel=true \
    -Djack=disabled \
    -Dlibjack-path=/usr/lib/jack
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
} 
