
pkgname=pipewire
pkgver=0.3.2
pkgrel=1
pkgdesc="Project that aims to greatly improve handling of audio and video under Linux"
url="https://pipewire.org"
arch=("x86_64")
license=('LGPL2.1')
depends=('gst-plugins-base' 'v4l-utils' 'sbc' 'ffmpeg' 'rtkit' 'bluez' 'jack2' 'vulkan-validationlayers')
makedepends=('meson' 'ninja')
install=pipewire.install
source=("https://github.com/PipeWire/pipewire/archive/${pkgver}.tar.gz"
        "https://github.com/PipeWire/pipewire/commit/37613b67ba52b5ad4e81d7ea38adc04027d9f9e5.diff")
md5sums=('b39c50a59b779982cb888ca36d769d2d'
         '802a17469d2f5f70f4f6044bb6b8d430')

prepare() {
  cd ${pkgname}-${pkgver}
  # alsa 1.1.9 changes
  #patch -p1 -i ${srcdir}/37613b67ba52b5ad4e81d7ea38adc04027d9f9e5.diff
}

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dman=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
} 
