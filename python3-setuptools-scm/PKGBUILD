
pkgname=python3-setuptools-scm
_pkgname=setuptools_scm
pkgver=6.4.2
pkgrel=1
pkgdesc="The blessed package to manage your versions by scm tags."
arch=('x86_64')
url='https://github.com/pypa/setuptools-scm'
license=('MIT')
depends=('python3-packaging' 'python3-setuptools' 'python3-tomli')
source=("https://files.pythonhosted.org/packages/source/s/setuptools-scm/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('6833ac65c6ed9711a4d5d2266f8024cfa07c533a0e55f4c12f6eff280a5a9e30')

build() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}

  python3 setup.py install --root=${pkgdir} --skip-build
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

