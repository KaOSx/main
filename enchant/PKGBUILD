
pkgname=enchant
pkgver=1.6.1
_pkgver=1-6-1
pkgrel=1
epoch=1
pkgdesc="A wrapper library for generic spell checking"
arch=('x86_64')
url="http://www.abisource.com/enchant/"
license=('LGPL')
depends=('aspell' 'dbus-glib' 'hunspell' 'hspell')
options=('!libtool')
#source=("http://www.abisource.com/downloads/enchant/${pkgver}/${pkgname}-${pkgver}.tar.gz")
source=("https://github.com/AbiWord/enchant/archive/enchant-${_pkgver}.tar.gz")
md5sums=('dcf5a2e2d0c3e35c34ab1c5b4f7382cb')

build() {
  cd ${pkgname}-${pkgname}-${_pkgver}
  
  ./autogen.sh
  ./configure --prefix=/usr \
    --disable-static \
    --disable-ispell \
    --with-myspell-dir=/usr/share/myspell 
  make 
}

package() {
  cd ${pkgname}-${pkgname}-${_pkgver}
  
  make DESTDIR=${pkgdir} install 
}
