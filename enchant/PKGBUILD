
pkgname=enchant
pkgver=2.1.1
pkgrel=1
epoch=1
pkgdesc="A wrapper library for generic spell checking"
arch=('x86_64')
url="http://www.abisource.com/enchant/"
license=('LGPL')
depends=('aspell' 'dbus-glib' 'hunspell' 'hspell')
options=('!libtool')
#source=("http://www.abisource.com/downloads/enchant/${pkgver}/${pkgname}-${pkgver}.tar.gz")
source=("https://github.com/AbiWord/enchant/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('a3d768e06d8e88f7a3bec43eb53c70e1')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --disable-static \
    --enable-relocatable \
    --with-zemberek
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
