
pkgname=enchant
pkgver=2.6.4
pkgrel=1
epoch=2
pkgdesc="A wrapper library for generic spell checking"
arch=('x86_64')
url="https://abiword.github.io/enchant/"
license=('LGPL')
depends=('aspell' 'dbus-glib' 'hunspell' 'hspell')
makedepends=('groff')
options=('!libtool')
#source=("http://www.abisource.com/downloads/enchant/${pkgver}/${pkgname}-${pkgver}.tar.gz")
source=("https://github.com/AbiWord/enchant/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('46c82b4faad9ceb2be2e4cc0766b5c0b')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --disable-static \
    --enable-relocatable \
    --with-zemberek
  make 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
