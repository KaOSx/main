
pkgname=xcb-util-cursor
pkgver=0.1.3
pkgrel=2
pkgdesc='XCB cursor port of libxcursor'
arch=('x86_64')
url='https://gitlab.freedesktop.org/xorg/lib/libxcb-cursor'
license=('custom:MIT')
depends=('libxcb' 'xcb-util-image' 'xcb-util-renderutil')
source=("https://xcb.freedesktop.org/dist/xcb-util-cursor-${pkgver}.tar.bz2")
md5sums=('6ac3b17cba51aaaa36ba035a53527214')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
