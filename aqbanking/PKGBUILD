
pkgname=aqbanking
pkgver=6.5.3
_pkgver=467
pkgrel=1
pkgdesc="A library for online banking and financial applications"
arch=('x86_64')
options=('!libtool')
url="https://www.aquamaniac.de/rdm/projects/aqbanking"
license=('GPL')
depends=('gwenhywfar' 'ktoblzcheck' 'libofx')
options=('!makeflags' '!libtool')
source=("https://www.aquamaniac.de/rdm/attachments/download/${_pkgver}/aqbanking-${pkgver}.tar.gz")
sha256sums=('6c62bf26aa42e69b21e188b54f6a5d825d6da34de1a14cbc3b67d85a9705136e')

build() {
  cd aqbanking-${pkgver}
  export PKG_CONFIG=/usr/bin/pkg-config

  ./configure --prefix=/usr \
    --with-backends="aqhbci aqofxconnect aqnone" \
    --enable-gwenhywfar
  make
}

package() {
  cd aqbanking-${pkgver}

  make DESTDIR=${pkgdir} install
}


