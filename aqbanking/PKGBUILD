
pkgname=aqbanking
pkgver=5.7.8
_dnrel=217
pkgrel=1
pkgdesc="A library for online banking and financial applications"
arch=('x86_64')
options=('!libtool')
url="https://www.aquamaniac.de/aqbanking"
license=('GPL')
depends=('gwenhywfar' 'ktoblzcheck' 'libofx')
options=('!makeflags' '!libtool')
source=("aqbanking-${pkgver}.tar.gz::https://www.aquamaniac.de/sites/download/download.php?package=03&release=${_dnrel}&file=02&dummy=aqbanking-${pkgver}.tar.gz")
md5sums=('6aceeaad3a1000f22f08986e68946db3')

build() {
  cd aqbanking-${pkgver}
  export PKG_CONFIG=/usr/bin/pkg-config
  
  ./configure --prefix=/usr \
	    --with-backends="aqhbci aqofxconnect" \
	    --enable-gwenhywfar
  make
}

package() {
  cd aqbanking-${pkgver}
  
  make DESTDIR=${pkgdir} install
}


