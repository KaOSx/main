
pkgname=cantarell-fonts
pkgver=0.303
_pkgver=0.303
pkgrel=1
pkgdesc="The Cantarell typeface family is a contemporary Humanist sans serif"
arch=('x86_64')
url="https://git.gnome.org/browse/cantarell-fonts/"
license=('GPL2')
depends=('fontconfig' 'python3')
makedepends=('meson' 'ninja')
install=cantarell-fonts.install
source=("https://download.gnome.org/sources/cantarell-fonts/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
#source=("https://gitlab.gnome.org/GNOME/cantarell-fonts/-/archive/v${pkgver}/${pkgname}-v${pkgver}.tar.bz2")
sha256sums=('c4ac4b80a714b0d405338c39fcd5dd23d00435e5cc9dca53856c2c5ba1ebafc2')

build() {
  mkdir -p build
  cd build

  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dbuildappstream=false \
    -Duseprebuilt=true
  ninja
}

package() {
  cd build

  DESTDIR=${pkgdir} ninja install
}
