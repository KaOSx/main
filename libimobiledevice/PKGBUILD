
pkgname=libimobiledevice
pkgver=1.2.0.1
pkgrel=1
_commit=45fda819e1aae3cacf25a04b9fe22cd6ddc61f5a
pkgdesc="Is a software library that talks the protocols to support iPhone and iPod Touch devices on Linux"
url="http://libimobiledevice.org/"
arch=('x86_64')
license=('GPL2' 'LGPL2.1')
depends=('gnutls'  'glib2' 'libplist' 'libusbmuxd' 'libgcrypt')
makedepends=('python2')
options=('!libtool')
source=("https://github.com/libimobiledevice/libimobiledevice/archive/${_commit}.zip")
md5sums=('50e85994be298e5368a9f875f9b141af')

build() {
  cd ${pkgname}-${_commit}

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${_commit}
  
  make DESTDIR=${pkgdir} install
}
