
pkgname=libdiscid
pkgver=0.6.4
pkgrel=3
arch=('x86_64')
license=('LGPL')
pkgdesc="C library for creating MusicBrainz and freedb disc IDs from audio CDs."
url="https://musicbrainz.org/doc/libdiscid"
depends=('glibc')
options=('!libtool')
source=("https://data.metabrainz.org/pub/musicbrainz/libdiscid/${pkgname}-${pkgver}.tar.gz")
md5sums=('774afc1c6eddad9c6db91efd35111d1b')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}

  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
}
