
pkgname=libbluray
pkgver=1.1.0
pkgrel=1
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('x86_64')
url="https://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2' 'fontconfig')
makedepends=('apache-ant')
options=('!libtool')
source=("https://download.videolan.org/pub/videolan/libbluray/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('9e1c8408ded0548584cf9d01fdf8153bb713cae5bfc8ff4cb6ace92cddcb2f8546d08db960507e4be8a79741c6196176726da7befac4244f887ab72b35136e9d')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir}/ install
} 
