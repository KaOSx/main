
pkgname=libbluray
pkgver=1.3.2
pkgrel=1
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('x86_64')
url="https://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2' 'fontconfig')
makedepends=('apache-ant')
options=('!libtool')
source=("https://download.videolan.org/pub/videolan/libbluray/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('6f2d3a984809db33a99d2fe3618370a3fda3ef1c417b725d3c2e1f24ff21495f95a6a5f78b30b2b26bab47865f68dd08c08e8a554809d3a5225956da712dc064')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir}/ install
} 
