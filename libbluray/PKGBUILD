
pkgname=libbluray
pkgver=1.3.1
pkgrel=1
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('x86_64')
url="https://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2' 'fontconfig')
makedepends=('apache-ant')
options=('!libtool')
source=("https://download.videolan.org/pub/videolan/libbluray/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('f39fc8a11771e8fdd5eeebf0ab23535ffab44721f64b350e5d153eee44555b31c618b6d765da114254dc83ff0ff89e84c6b185f61cdbcfedd2d47a5f6e26b75a')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir}/ install
} 
