
pkgname=babl
pkgver=0.1.22
_pkgver=0.1
pkgrel=1
pkgdesc="Dynamic, any to any, pixel format conversion library"
arch=('x86_64')
url="http://gegl.org/babl/"
license=('LGPL3')
depends=('glibc')
options=('!libtool' '!makeflags')
source=("https://ftp.gimp.org/pub/babl/0.1/${pkgname}-${pkgver}.tar.bz2")
md5sums=('b66682d1c3e209001eabf1294b72d841')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
