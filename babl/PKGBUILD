
pkgname=babl
pkgver=0.1.76
_pkgver=0.1
pkgrel=1
pkgdesc="Dynamic, any to any, pixel format conversion library"
arch=('x86_64')
url="http://gegl.org/babl/"
license=('LGPL3')
depends=('lcms2')
makedepends=('meson' 'ninja' 'gobject-introspection')
options=('!libtool' '!makeflags')
source=("https://ftp.gimp.org/pub/babl/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('0084749f7f6050c1d3543067e527665b65e183c1fb80816ea37b2380bd9073a0')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -Dwith-docs=false \
    -Denable-vapi=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}
