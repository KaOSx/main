
pkgname=python3-appdirs
pkgver=1.4.2
pkgrel=1
pkgdesc="Small Python module for determining appropriate platform-specific dirs."
arch=('x86_64')
license=('MIT')
url="http://pypi.python.org/pypi/appdirs"
depends=('python3')
makedepends=('python3-setuptools')
source=("https://github.com/ActiveState/appdirs/archive/${pkgver}.tar.gz")
md5sums=('739f20612bb4ace37793cca11a321a1e')

build() {
   cd appdirs-${pkgver}

   python3 setup.py build
}
 
check() {
   cd appdirs-${pkgver}

   python3 setup.py test
}
 
package() {
   cd appdirs-${pkgver}
   python3 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
   
   install -Dm644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt
}
 

