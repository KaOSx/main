
pkgname=mpg123
pkgver=1.31.1
pkgrel=1
pkgdesc="A console based real time MPEG Audio Player for Layer 1, 2 and 3"
arch=('x86_64')
url="https://www.mpg123.org/"
license=('GPL2' 'LGPL2.1')
depends=('glibc' 'libtool' 'alsa-lib' 'jack2')
makedepends=('sdl' 'pulseaudio')
optdepends=('sdl: for sdl audio support')
options=('libtool')
groups=('multimedia')
source=("https://www.mpg123.org/download/${pkgname}-${pkgver}.tar.bz2")
#source=("https://sourceforge.net/projects/mpg123/files/mpg123/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('ef0e6eb48a13d901ab8b3a7a4526dc5476720da7')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --enable-int-quality \
    --with-audio="alsa oss sdl jack pulse"
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
