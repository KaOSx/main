
pkgname=pyqtwebengine
_pkgname=PyQtWebEngine
pkgver=5.13.0
pkgrel=1
pkgdesc="A set of Python3 bindings for the Qt Company's Qt WebEngine libraries"
arch=('x86_64')
url="https://www.riverbankcomputing.com/software/pyqtwebengine/intro"
license=('GPL')
depends=('sip3' 'qtwebengine' 'pyqt5-python3')
source=("https://www.riverbankcomputing.com/static/Downloads/PyQtWebEngine/${pkgver}/${_pkgname}_gpl-${pkgver}.tar.gz")
sha1sums=('dc793469c5d2edea8eb0b67f377d69e2b1f4f696')

build() {
  cd ${_pkgname}_gpl-${pkgver}

  python3 configure.py \
  -q /usr/lib/qt5/bin/qmake

  make
}

package(){
  cd ${_pkgname}_gpl-${pkgver}

  make DESTDIR=${pkgdir} INSTALL_ROOT=${pkgdir} install -j1
}
