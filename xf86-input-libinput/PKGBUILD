
pkgname=xf86-input-libinput
pkgver=1.0.1
pkgrel=1
pkgdesc="X driver based on libinput."
arch=('x86_64')
url="https://cgit.freedesktop.org/xorg/driver/xf86-input-libinput/tree/README.md"
license=('MIT')
depends=('libinput')
makedepends=('xorg-server' 'xorgproto' 'valgrind')
options=('!libtool' '!makeflags')
groups=('xorg-drivers' 'xorg')
source=("https://xorg.freedesktop.org/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('fddec49c115591918475155bf16aaf23017d7f814cee7823a0c11f867aca245b')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
