
pkgname=libxmlb
pkgver=0.3.0
pkgrel=1
pkgdesc="Library to help create and query binary XML blobs"
arch=('x86_64')
url="https://github.com/hughsie/libxmlb"
license=('LGPL2.1')
depends=('glib2')
makedepends=('gobject-introspection' 'meson' 'ninja')
options=('!libtool')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
sha256sums=('2d566631fdef99a6f4fc7b4d1ce88eafe19b092b8d436f73dc448307dc6dd98a')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib \
    -Dgtkdoc=false \
    -Dtests=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
} 
