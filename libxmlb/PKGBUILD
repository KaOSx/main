
pkgname=libxmlb
pkgver=0.3.1
pkgrel=1
pkgdesc="Library to help create and query binary XML blobs"
arch=('x86_64')
url="https://github.com/hughsie/libxmlb"
license=('LGPL2.1')
depends=('glib2')
makedepends=('gobject-introspection' 'meson' 'ninja')
options=('!libtool')
source=("https://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz")
sha256sums=('750d98ca5e4ca5284da2ce6b78c55ee0e87433d1d1c88bc2106ca5521902fa64')

build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    --libexecdir=/usr/lib \
    -Dgtkdoc=false \
    -Dtests=false
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
} 
