
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.29
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/08/01/30/6cd80f9555b252d5d7101d450bb43a6a6e7f9689/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('5734ba9bc0f1917c355ce7bcf91c933b')

build() {
  cd $srcdir
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
