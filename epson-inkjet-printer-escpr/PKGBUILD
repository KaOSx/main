
pkgname=epson-inkjet-printer-escpr
pkgver=1.7.17
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/12/99/78/73605b3f8aac63694fdabee6bd43389731696cd9/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('df9a04b4ca9b1aaad72177550db22b71')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
