
pkgname=epson-inkjet-printer-escpr
pkgver=1.8.3
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/15/47/99/379a81c231d0b6b3dfb3db2032ff6e23f7ccaa34/${pkgname}-${pkgver}-1.src.rpm")
md5sums=('b977e6e3923e3d9bbdcabafac29cd7a8')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1.tar.gz

  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
