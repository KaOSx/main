
pkgname=epson-inkjet-printer-escpr
pkgver=1.7.16
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/12/97/30/97f146010d33b9a55badbc23429296f6b9b46011/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('00b5ef05e29ebe5378ce7692e64337db')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
