
pkgname=epson-inkjet-printer-escpr
pkgver=1.7.3
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/09/83/26/f90d0f70b33a9d7d77a2408364c47fba1ccbf943/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('d9ab721eb184431cfec7527325ff98cb')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
