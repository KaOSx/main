
pkgname=epson-inkjet-printer-escpr
pkgver=1.8.2
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/15/37/34/9823560a4c0a6e4a614c71d2278434b32d147e29/${pkgname}-${pkgver}-1.src.rpm")
md5sums=('78269ef60e8a8edbb4b2604260a6515a')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1.tar.gz

  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
