
pkgname=epson-inkjet-printer-escpr
pkgver=1.7.4
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/10/19/83/de1d4c8152d80dc3afd14512e6b4e8ebd683ffc4/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('e8af0a6c7b9204127ebee3c93c99a954')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
