
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.15
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/06/25/43/f63808b4062f7f527e09e75a8f0dd9db46c573fe/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('cef0a8945970134ded6ef0957732d831')

build() {
  cd $srcdir
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
