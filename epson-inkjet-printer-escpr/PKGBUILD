
pkgname=epson-inkjet-printer-escpr
pkgver=1.7.11
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifunction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/12/84/42/69bb076469542fe702ada5ea53a4ea4773d407b0/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('d26c31554662829546f98104dad80db6')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
