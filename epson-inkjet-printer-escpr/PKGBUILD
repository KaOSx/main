
pkgname=epson-inkjet-printer-escpr
pkgver=1.6.19
pkgrel=1
pkgdesc="Common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('x86_64')
url="https://www.epson.com"
license=('GPL')
depends=('cups' 'gutenprint')
# http://download.ebz.epson.net/dsc/search/01/search/
source=("https://download3.ebz.epson.net/dsc/f/03/00/07/07/57/91f8069e80d17a5dade2f18eda1ade2d49297840/${pkgname}-${pkgver}-1lsb3.2.tar.gz")
md5sums=('5674c36a2e265f7fa878f8048d561983')

build() {
  cd $srcdir
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --libexecdir=/usr/lib
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
